<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="ButtonRounded" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">@dimen/content_width_buttons</item>
        <item name="android:background">@drawable/rounded_button_primary</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/buttonText</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonRoundedOutline" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">@dimen/content_width_buttons</item>
        <item name="android:background">@drawable/rounded_button_outline</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/outlineButtonText</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ToolbarTitle" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/toolbarText</item>
        <item name="android:textSize">@dimen/toolbar_text</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="InputLabel" parent="android:Widget.TextView">
        <item name="android:gravity">start</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@color/blueText</item>
        <item name="android:textSize">@dimen/labels_text</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="InputField" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:background">@drawable/rounded_input_white</item>
        <item name="android:gravity">start</item>
        <item name="android:textColorHint">@color/inputHint</item>
        <item name="android:textColor">@color/inputText</item>
        <item name="android:textSize">@dimen/input_text</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="LogoLarge">
        <item name="android:layout_width">@dimen/logo_width_large</item>
        <item name="android:paddingLeft">@dimen/dp_60</item>
        <item name="android:src">@drawable/carecloud_logo</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="HeaderIcon">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="ErrorMessage" parent="android:Widget.TextView">
        <item name="android:layout_margin">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/error_text</item>
        <item name="android:textColor">@color/errorText</item>
    </style>
</resources>
