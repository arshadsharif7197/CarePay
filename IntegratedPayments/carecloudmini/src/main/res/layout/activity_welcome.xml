<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground">

    <ImageView
        android:id="@+id/button_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_margin="@dimen/dp_30"
        android:src="@drawable/settings_icon"
        android:scaleType="centerInside"
        android:contentDescription="@string/content_settings_button"/>

    <LinearLayout
        android:layout_width="@dimen/content_width_welcome"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <FrameLayout
            android:id="@+id/practice_initials_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/practice_initials"
                android:layout_width="@dimen/image_select_image"
                android:layout_height="@dimen/image_select_image"
                android:adjustViewBounds="true"
                android:src="@drawable/practice_initials_bkg"
                android:contentDescription="@string/content_logo"/>

            <com.carecloud.carepay.mini.views.CarePayTextView
                android:id="@+id/practice_initials_name"
                android:layout_width="@dimen/image_select_image"
                android:layout_height="@dimen/image_select_image"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:maxLength="3"
                android:textAllCaps="true"
                android:textColor="@color/practiceInitialsText"
                android:textSize="@dimen/practice_initials"
                app:customFont="gotham_rounded_bold.otf"
                tools:text="PNJ"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/carecloud_logo_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/carecloud_logo"
                android:layout_width="@dimen/image_select_image"
                android:layout_height="@dimen/image_select_image"
                android:adjustViewBounds="true"
                android:src="@drawable/carecloud_logo_bkg"
                android:contentDescription="@string/content_logo"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/practice_logo_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/practice_logo"
                android:layout_width="@dimen/image_select_image"
                android:layout_height="@dimen/image_select_image"
                android:adjustViewBounds="true"
                android:src="@drawable/practice_no_image_bkg"
                android:contentDescription="@string/content_logo"/>

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/colorPrimary"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_40" />

        <com.carecloud.carepay.mini.views.CarePayTextView
            android:id="@+id/welcome_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_40"
            android:paddingEnd="@dimen/dp_40"
            android:gravity="center"
            android:textColor="@color/blueText"
            android:textSize="@dimen/instructions_text"
            android:text="@string/welcome_waiting"
            app:customFont="proximanova_semibold.otf"/>


    </LinearLayout>

</FrameLayout>