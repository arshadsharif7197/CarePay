<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/button_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close_blue"
        android:layout_margin="@dimen/dp_20"
        android:layout_gravity="top|end"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/carecloud_logo"
            android:layout_height="wrap_content"
            style="@style/LogoLarge"
            android:layout_marginBottom="@dimen/dp_40"
            android:contentDescription="@string/content_logo"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/white"/>

        <com.carecloud.carepay.mini.views.CarePayTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:paddingStart="@dimen/dp_20"
            android:paddingEnd="@dimen/dp_20"
            android:gravity="center"
            android:textColor="@color/blueText"
            android:textSize="@dimen/instructions_text"
            android:text="@string/registrations_start_text"
            app:customFont="proximanova_regular.otf"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30">

            <com.carecloud.carepay.mini.views.CarePayButton
                android:id="@+id/button_start"
                android:layout_height="wrap_content"
                style="@style/ButtonRounded"
                android:text="@string/registration_start_button"
                app:customFont="gotham_rounded_medium.otf"/>

            <include layout="@layout/progress_loader"/>

        </FrameLayout>

    </LinearLayout>

</FrameLayout>