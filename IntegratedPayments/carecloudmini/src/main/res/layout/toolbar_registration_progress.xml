<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height">

    <ProgressBar
        android:id="@+id/progress_registration"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_15"
        style="?android:attr/progressBarStyleHorizontal"
        android:indeterminate="false"
        android:progressDrawable="@drawable/registration_progress_background"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="@dimen/dp_15"
        android:progress="3"
        android:max="6"/>

    <com.carecloud.carepay.mini.views.CarePayTextView
        android:id="@+id/toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="@style/ToolbarTitle"
        tools:text="Title Name Here"
        app:customFont="gotham_rounded_medium.otf"/>


</android.support.v7.widget.Toolbar>