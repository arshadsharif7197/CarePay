<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.carecloud.carepay.practice.tablet">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="clover.permission.ACTION_PAY" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="clover.permission.ACTION_SECURE_PAY" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.carecloud.carepay.practice.tablet.CarePayApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppThemePractice"
        tools:replace="android:theme">
        <activity android:name="com.carecloud.carepay.practice.library.splash.SplashActivity"
            android:theme="@style/Theme.AppCompat.Translucent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.carecloud.carepay.practice.library.signin.SigninActivity"></activity>
        <activity android:name="com.carecloud.carepay.practice.library.homescreen.CloverMainActivity"></activity>
        <activity android:name="com.carecloud.carepay.practice.library.checkin.CheckInActivity"></activity>
    </application>
</manifest>