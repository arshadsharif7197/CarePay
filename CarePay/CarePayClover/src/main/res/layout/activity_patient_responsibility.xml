<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/respons_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/bright_cerulean"
        android:gravity="center"
        android:orientation="vertical">

        <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedBookLabel
            android:id="@+id/respons_total_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your total payment due today is"
            android:textColor="@color/white"
            android:textSize="36sp" />

        <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedMediumLabel
            android:id="@+id/responsTotalTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$75.04"
            android:textColor="@color/white"
            android:textSize="144sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/respons_button_margin_left_right"
        android:layout_marginStart="@dimen/respons_button_margin_left_right"
        android:layout_marginTop="26dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/respons_detail_margin_bottom"
            android:layout_marginTop="@dimen/respons_detail_margin_bottom"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.carecloud.carepaylibray.customcomponents.CustomProxyNovaRegularLabel
                android:id="@+id/responsPrevBalanceTitleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/respons_previous_balance_label"
                android:textColor="@color/charcoal"
                android:textSize="32sp" />

            <com.carecloud.carepaylibray.customcomponents.CustomProxyNovaSemiBoldLabel
                android:id="@+id/responsPrevBalanceTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="$50.04"
                android:textColor="@color/charcoal"
                android:textSize="32sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/respons_detail_margin_bottom"
            android:layout_marginTop="@dimen/respons_detail_margin_bottom"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.carecloud.carepaylibray.customcomponents.CustomProxyNovaRegularLabel
                android:id="@+id/responsCoPayTitleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/respons_copay_label"
                android:textColor="@color/charcoal"
                android:textSize="32sp" />

            <com.carecloud.carepaylibray.customcomponents.CustomProxyNovaSemiBoldLabel
                android:id="@+id/responsCoPayTTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="$25.00"
                android:textColor="@color/charcoal"
                android:textSize="32sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

    </LinearLayout>


    <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedMediumLabel
        android:id="@+id/responsPayButton"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:textSize="36sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@color/yellowGreen"
        android:text="PAY" />
</LinearLayout>