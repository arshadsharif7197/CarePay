<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_checked_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="64dp"
    tools:context="com.carecloud.carepayclover.CheckedInActivity">

    <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedMediumLabel
        android:id="@+id/titleHeaderTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-10dp"
        android:includeFontPadding="false"
        android:text="carepay"
        android:textColor="#ffffff"
        android:textSize="38sp" />

    <com.carecloud.carepaylibray.customcomponents.CustomProxyNovaRegularLabel
        android:id="@+id/poweredByTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/titleHeaderTextview"
        android:layout_marginTop="10dp"
        android:text="Powered by CareCloud"
        android:textColor="#b7c7cf"
        android:textSize="12sp" />

    <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedMediumLabel
        android:id="@+id/titleSelectPatientTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/titleHeaderTextview"
        android:layout_marginTop="70dp"
        android:includeFontPadding="false"
        android:text="Select a patient"
        android:textColor="#ffffff"
        android:textSize="36sp" />

    <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedMediumLabel
        android:id="@+id/goBackTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/titleSelectPatientTextview"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_blue_overlay"
        android:drawableLeft="@drawable/icn_arrow_left"
        android:includeFontPadding="false"
        android:padding="20dp"
        android:text="  Go Back"
        android:textColor="#ffffff"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/titleSelectPatientTextview">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/appointments_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/respons_toolbar_elevation" />
    </LinearLayout>


</RelativeLayout>
