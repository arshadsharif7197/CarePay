<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_checked_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingLeft="64dp"
    android:paddingTop="64dp"
    android:paddingBottom="10dp"
    tools:context="com.carecloud.carepayclover.CheckedInActivity">

    <ImageView
        android:id="@+id/titleHeaderTextview"
        android:layout_width="173dp"
        android:layout_height="68dp"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"
        android:src="@drawable/cp_logo" />

    <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedMediumLabel
        android:id="@+id/titleSelectPatientTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/titleHeaderTextview"
        android:layout_marginTop="70dp"
        android:includeFontPadding="false"
        android:text="Select a patient"
        android:textColor="#ffffff"
        android:textSize="36sp" />

    <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedMediumLabel
        android:id="@+id/goBackTextview"
        android:layout_width="180dp"
        android:layout_height="53dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/titleSelectPatientTextview"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_blue_overlay"
        android:drawableLeft="@drawable/icn_arrow_left"
        android:includeFontPadding="false"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="  Go Back"
        android:textColor="#ffffff"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="170dp"
        android:layout_below="@+id/titleHeaderTextview"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@+id/titleSelectPatientTextview">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/appointments_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/respons_toolbar_elevation" />
    </LinearLayout>


</RelativeLayout>
