<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/patientPicImageView"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/checkin_patient_pic_rounded_border"
        android:padding="20dp"
        android:src="@drawable/icn_placeholder_user_profile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/patientPicImageView"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="20dp">

        <com.carecloud.carepaylibray.customcomponents.CustomProxyNovaSemiBoldLabel
            android:id="@+id/patientNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sarah"
            android:textColor="@color/white"
            android:textSize="32sp" />

        <com.carecloud.carepaylibray.customcomponents.CustomProxyNovaSemiBoldLabel
            android:id="@+id/patientBalanceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance: $0.00"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedMediumLabel
                android:id="@+id/paymentTextview"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_green_overlay"
                android:gravity="center"
                android:includeFontPadding="false"
                android:padding="15dp"
                android:text="Payment"
                android:textColor="#ffffff"
                android:textSize="22sp" />

            <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedMediumLabel
                android:id="@+id/assistTextview"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_blue_overlay"
                android:gravity="center"
                android:includeFontPadding="false"
                android:padding="15dp"
                android:text="Assist"
                android:textColor="#ffffff"
                android:textSize="22sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray" />
</RelativeLayout>