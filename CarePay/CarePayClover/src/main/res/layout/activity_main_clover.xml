<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3582e1"
    android:orientation="vertical"
    android:padding="32dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icn_gear" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleHeaderTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="carepay"
                android:textColor="#ffffff"
                android:textSize="38sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Powered by CareCloud"
                android:textColor="#b7c7cf"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/queueLayout"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:onClick="onQueueClick"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/queueTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="Queue"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/queue_counter_background"
                android:gravity="center"
                android:text="12"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" android:background="@drawable/home_main_container_rounded">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:paddingTop="10dp"
                    android:layout_marginRight="1dp"
                    android:drawableTop="@drawable/icn_check_in"
                    android:gravity="center"
                    android:text="Check-In"
                    android:textColor="#37474f"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:paddingTop="10dp"
                    android:layout_marginRight="1dp"
                    android:drawableTop="@drawable/icn_payments"
                    android:gravity="center_horizontal"
                    android:text="Payments"
                    android:textColor="#37474f"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="190dp"
                    android:background="#ffffff"
                    android:paddingTop="10dp"
                    android:drawableTop="@drawable/icn_appointements"
                    android:gravity="center"
                    android:text="Appointments"
                    android:textColor="#37474f"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:paddingTop="10dp"
                    android:layout_marginRight="1dp"
                    android:drawableTop="@drawable/icn_check_out"
                    android:gravity="center_horizontal"
                    android:text="Check-Out"
                    android:textColor="#37474f"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:drawableTop="@drawable/icn_retail"
                    android:gravity="center_horizontal"
                    android:text="Retail"
                    android:layout_marginRight="1dp"
                    android:paddingTop="10dp"
                    android:textColor="#37474f"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:drawableTop="@drawable/icn_check_in"
                    android:gravity="center_horizontal"
                    android:text="All Activity"
                    android:paddingTop="10dp"
                    android:textColor="#37474f"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/queueListLinearLayout"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="#acacac">

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
