<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_green"
    android:orientation="vertical"
    android:padding="32dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icn_gear" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleHeaderTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="carepay"
                android:textColor="#ffffff"
                android:textSize="38sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Powered by CareCloud"
                android:textColor="#b7c7cf"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/queueLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:onClick="onQueueClick"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/queueTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="Queue"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/queue_counter_background"
                android:gravity="center"
                android:text="12"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="50dp"
        android:paddingLeft="220dp"
        android:paddingRight="220dp"
        android:paddingTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedBookLabel
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/top_left_rounded_background"
                android:drawableTop="@drawable/icn_check_in"
                android:text="Check-In"
                android:gravity="center"
                android:paddingTop="20dp"
                android:textColor="@color/charcoal"
                android:textSize="28sp" />

            <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedBookLabel
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableTop="@drawable/icn_payments"
                android:text="Payments"
                android:gravity="center"
                android:paddingTop="20dp"
                android:textColor="@color/charcoal"
                android:textSize="28sp" />

            <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedBookLabel
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/top_right_rounded_background"
                android:drawableTop="@drawable/icn_appointements"
                android:text="Appointments"
                android:gravity="center"
                android:paddingTop="20dp"
                android:textColor="@color/charcoal"
                android:textSize="28sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedBookLabel
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/bottom_left_rounded_background"
                android:drawableTop="@drawable/icn_checkout"
                android:text="Check-Out"
                android:gravity="center"
                android:paddingTop="20dp"
                android:textColor="@color/charcoal"
                android:textSize="28sp" />

            <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedBookLabel
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:drawableTop="@drawable/icn_retail"
                android:text="Shop"
                android:gravity="center"
                android:paddingTop="20dp"
                android:textColor="@color/charcoal"
                android:textSize="28sp" />

            <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedBookLabel
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bottom_right_rounded_background"
                android:gravity="center"
                android:paddingTop="20dp"
                android:textColor="@color/charcoal"
                android:textSize="28sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
