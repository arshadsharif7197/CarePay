<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.carecloud.carepayclover">

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="24" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="clover.permission.ACTION_PAY" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="clover.permission.ACTION_SECURE_PAY" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppBaseTheme">
        <activity android:name=".CloverMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CloverPaymentActivity"
            android:parentActivityName=".CloverMainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CloverMainActivity" />
        </activity>
        <activity
            android:name=".CheckedInActivity"
            android:parentActivityName=".CloverMainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CloverMainActivity" />
        </activity>
        <activity
            android:name=".RotateActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:parentActivityName=".CheckedInActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CheckedInActivity" />
        </activity>
        <activity android:name=".PatientResponsibilityActivity"/>

        <receiver
            android:name=".notification.NotificationReceiver"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.clover.sdk.app.intent.action.APP_NOTIFICATION" >
                </action>
            </intent-filter>
        </receiver>
    </application>

</manifest>