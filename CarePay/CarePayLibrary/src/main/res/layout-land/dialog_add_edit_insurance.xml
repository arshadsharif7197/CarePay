<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_26dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/edit_insurance_close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/round_semi_transparent_bg"
            android:src="@drawable/icn_close"
            tools:ignore="ContentDescription" />

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/edit_insurance_cancel_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:customAssetFont="gotham_rounded_bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dialog_width"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/patient_mode_dialog_header_bg"
            android:padding="@dimen/dimen_10dp">

            <include
                android:id="@+id/edit_insurance_toolbar"
                layout="@layout/toolbar_title_only" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingEnd="@dimen/dimen_24dp"
            android:paddingStart="@dimen/dimen_24dp">

            <include layout="@layout/add_edit_insurance_view" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/patient_mode_dialog_body_bg"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_10dp"
            android:paddingEnd="@dimen/dimen_24dp"
            android:paddingStart="@dimen/dimen_24dp">

            <com.carecloud.carepaylibray.customcomponents.CarePayButton
                android:id="@+id/remove_insurance_entry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_15dp"
                android:layout_marginEnd="@dimen/dimen_18dp"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:layout_weight="0.3"
                android:background="@drawable/button_rounded_rose"
                android:paddingBottom="@dimen/dimen_14dp"
                android:paddingTop="@dimen/dimen_14dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_22"
                android:visibility="gone"
                app:customAssetFont="gotham_rounded_medium" />

            <com.carecloud.carepaylibray.customcomponents.CarePayButton
                android:id="@+id/save_insurance_changes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_15dp"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:layout_weight="0.7"
                android:background="@drawable/button_rounded_gray_selector"
                android:enabled="false"
                android:paddingBottom="@dimen/dimen_14dp"
                android:paddingTop="@dimen/dimen_14dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_22"
                app:customAssetFont="gotham_rounded_medium" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>