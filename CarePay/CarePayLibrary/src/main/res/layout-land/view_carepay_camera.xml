<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.carecloud.carepaylibray.carepaycamera.CarePayCameraPreview
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/closeViewLayout"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/button_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/dialog_button_bg" />

        <ImageView
            android:id="@+id/cancel_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/icn_close" />

    </RelativeLayout>

    <Button
        android:id="@+id/button_capture"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:background="@drawable/camere_sutter_button_background" />

    <Button
        android:id="@+id/button_flash"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_above="@id/button_capture"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/dimen_40dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/camera_flash_selector"
        android:enabled="false" />

    <Button
        android:id="@+id/button_change_camera"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/button_capture"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="@dimen/dimen_40dp"
        android:background="@drawable/camera_switch_selector" />

</RelativeLayout>