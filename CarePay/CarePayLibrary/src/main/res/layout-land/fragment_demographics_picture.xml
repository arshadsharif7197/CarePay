<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    style="@style/DemographicsDocsHeaderStyle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_marginTop="0dp">

    <ImageView
        android:id="@+id/DetailsProfileImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icn_placeholder_user_profile_png"
        android:contentDescription="@string/profile_picture"/>

    <Button
        android:id="@+id/changeCurrentPhotoButton"
        style="@style/DemographicsAddRemoveInsuranceStyle"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_width="wrap_content"
        android:text="@string/selectOrTakePhotoButton"/>

</LinearLayout>
