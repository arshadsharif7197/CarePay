<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/visit_type_dialog_width"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/respons_toolbar"
        style="@style/CustomToolbarStyle"
        android:background="@drawable/top_left_right_rounded_background">

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/respons_toolbar_title"
            style="@style/ResponsibilityToolbarTextStyle"
            app:customAssetFont="gotham_rounded_medium"/>

    </android.support.v7.widget.Toolbar>


    <ListView
        android:id="@+id/visitTypeList"
        android:layout_width="match_parent"
        android:layout_height="@dimen/visit_type_list_height"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:divider="@color/divider_color"
        android:dividerHeight="1dp"
        android:elevation="17dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:scrollbars="none" />
</LinearLayout>