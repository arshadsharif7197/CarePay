<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/success_message_toast_layout"
    android:background="@drawable/success_notification_background">

    <ImageView
        android:id="@+id/success_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/apt_popup_icon_margin"
        android:layout_gravity="center_vertical"
        android:src="@drawable/icn_notification_basic_white_check" />

    <com.carecloud.carepaylibray.customcomponents.CarePayTextView
        android:id="@+id/success_message_toast_textview"
        style="@style/AppointmentPopupMessageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/apt_popup_message_margin"
        android:layout_gravity="center_vertical"
        android:text="Success"
        android:textSize="@dimen/text_size_18sp"
        app:customAssetFont="proxima_nova_regular"/>

</LinearLayout>

