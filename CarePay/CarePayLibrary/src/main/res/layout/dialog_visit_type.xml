<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    android:padding="@dimen/visit_type_dialog_padding">

    <TextView
        android:id="@+id/visit_type_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/visit_type_vertical_margin"
        android:layout_marginStart="@dimen/visit_type_horizontal_margin"
        android:layout_marginTop="@dimen/visit_type_vertical_margin"
        android:gravity="left"
        android:textColor="@color/black"
        android:textSize="@dimen/visit_type_label_font" />

    <ListView
        android:id="@+id/visitTypeList"
        android:layout_width="match_parent"
        android:layout_height="@dimen/visit_type_list_height"
        android:scrollbars="none" />
</LinearLayout>