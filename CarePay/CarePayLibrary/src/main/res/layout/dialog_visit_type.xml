<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:breeze="http://schemas.carecloud.com/breeze"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_30dp"
    android:background="@drawable/bg_cardview"
    android:padding="@dimen/visit_type_dialog_padding">

    <com.carecloud.carepaylibray.customcomponents.CarePayTextView
        android:id="@+id/visit_type_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/visit_type_vertical_margin"
        android:layout_marginTop="@dimen/visit_type_vertical_margin"
        android:gravity="start"
        android:paddingEnd="@dimen/visit_type_horizontal_margin"
        android:paddingStart="@dimen/visit_type_horizontal_margin"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/visit_type_label_font"
        app:customAssetFont="gotham_rounded_medium"
        breeze:textKey="visit_type_heading"
        tools:text="Visit Type" />

    <FrameLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/visit_type_list_height"
        android:layout_below="@id/visit_type_header_title">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/visitTypeList"
            android:layout_width="match_parent"
            android:layout_height="@dimen/visit_type_list_height"
            android:scrollbars="none" />

        <RelativeLayout
            android:id="@+id/emptyStateScreen"
            android:layout_width="match_parent"
            android:layout_height="@dimen/visit_type_list_height"
            android:layout_below="@id/add_appointment_toolbar"
            android:visibility="gone">

            <View
                android:id="@+id/placeHolder"
                android:layout_width="@dimen/dimen_1dp"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_centerInParent="true" />

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/placeHolder"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/dimen_20dp"
                android:gravity="center"
                android:paddingEnd="@dimen/dimen_20dp"
                android:paddingStart="@dimen/dimen_20dp"
                android:textColor="@color/cadet_gray"
                android:textSize="@dimen/text_size_14"
                app:customAssetFont="proxima_nova_regular"
                breeze:textKey="appointment.visitType.message.label.emptyScreenSubTitle"
                tools:text="Your practice currently has no visit type available at the moment" />

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/subtitle"
                android:gravity="center"
                android:padding="@dimen/dimen_10dp"
                android:textColor="@color/charcoal"
                android:textSize="@dimen/text_size_21"
                app:customAssetFont="gotham_rounded_book"
                breeze:textKey="appointment.visitType.message.label.emptyScreenTitle"
                tools:text="No visit type available" />

        </RelativeLayout>

    </FrameLayout>

    <com.carecloud.carepaylibray.customcomponents.CarePayTextView
        android:id="@+id/closeViewLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/mainContainer"
        android:background="?android:selectableItemBackground"
        android:gravity="end"
        android:padding="@dimen/dimen_16dp"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_14"
        app:customAssetFont="gotham_rounded_medium"
        breeze:textKey="demographics_cancel_label"
        tools:text="Cancel" />

</RelativeLayout>