<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_apt"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialogCloseHeaderImageView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/apt_imgview_ht"
            android:layout_gravity="left"
            android:layout_marginBottom="@dimen/apt_dl_margin_bottom"
            android:gravity="left"
            android:src="@drawable/icn_patient_mode_nav_close"
            android:text="@string/close"
            android:textColor="@color/white" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.carecloud.carepaylibray.customcomponents.CustomProxyNovaRegularLabel
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:gravity="center_horizontal"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:text="Whatâ€™s the reason for canceling the appointment?"
                android:textColor="@color/payne_gray"
                android:textSize="22sp" />

            <RadioGroup
                android:id="@+id/cancelReasonRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:divider="?android:attr/dividerHorizontal"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rescheduleAppointmentRadioButtom"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="start"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layoutDirection="rtl"
                    android:text="Decided to Reschedule"
                    android:textAlignment="textStart"
                    android:textColor="@color/lightSlateGray"
                    android:buttonTint="@color/lightSlateGray"
                    android:textSize="19sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/cadet_gray" />
                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/officeRescheduleAppointmentRadioButtom"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="start"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layoutDirection="rtl"
                    android:text="Office Rescheduled"
                    android:textAlignment="textStart"
                    android:textColor="@color/lightSlateGray"
                    android:buttonTint="@color/lightSlateGray"
                    android:textSize="19sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/cadet_gray" />
                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/forgotAppointmentRadioButtom"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="start"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layoutDirection="rtl"
                    android:text="I forgot I had an Appointment"
                    android:textAlignment="textStart"
                    android:textColor="@color/lightSlateGray"
                    android:buttonTint="@color/lightSlateGray"
                    android:textSize="19sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/cadet_gray" />
                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/noLongerAppointmentRadioButtom"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="start"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layoutDirection="rtl"
                    android:text="No Longer Needed"
                    android:textAlignment="textStart"
                    android:textColor="@color/lightSlateGray"
                    android:buttonTint="@color/lightSlateGray"
                    android:textSize="19sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/cadet_gray" />
                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/otherAppointmentRadioButtom"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="start"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layoutDirection="rtl"
                    android:text="Other"
                    android:textAlignment="textStart"
                    android:textColor="@color/lightSlateGray"
                    android:buttonTint="@color/lightSlateGray"
                    android:textSize="19sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/cadet_gray" />
            </RadioGroup>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/reasonTextInputLayout"
                android:layout_width="match_parent"
                android:textColorHint="@color/Munsell"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/reasonEditText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:focusable="false"
                    android:textSize="16sp"
                    android:enabled="false"
                    android:hint="Describe briefly the reason "
                    android:imeOptions="flagNoExtractUi"
                    android:textColor="@color/blue_cerulian" />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/apt_dl_margin"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancelAppointmentButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/button_munsell_border"
                    android:text="CANCEL APPOINTMENT"
                    android:textColor="@color/munsell"
                    android:enabled="false"
                    android:textSize="@dimen/apt_dl_textview_size" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>