<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:descendantFocusability="beforeDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/demogrDocTypeLabel"
            style="@style/DemographicsDocsDocumentLabelStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Document Type"/>

        <TextView
            android:id="@+id/demogrDocTypeClickable"
            style="@style/DemographicsDocsClickableTextStyle"
            android:text="@string/choose"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/demo_view_height"
        android:layout_marginBottom="@dimen/divider_margin_bottom"
        android:layout_marginTop="@dimen/divider_margin_top"
        android:background="@color/light_gray"/>

    <LinearLayout
        style="@style/DemographicsDocsImageButtonContainerStyle">

        <ImageView
            android:id="@+id/demogrDocsFrontScanImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icn_camera"
            android:contentDescription="@string/scanned_id_doc"/>

        <Button
            android:id="@+id/demogrDocsFrontScanButton"
            style="@style/DemographicsDocsButtonStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/demogr_docs_scan_label"/>

    </LinearLayout>

    <LinearLayout
        style="@style/DemographicsDocsImageButtonContainerStyle"
        android:layout_marginTop="@dimen/demogr_details_container_top"
        android:layout_marginBottom="@dimen/demogr_details_container_top">

        <ImageView
            android:id="@+id/demogrDocsBackScanImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icn_camera"
            android:contentDescription="@string/scanned_id_doc"/>

        <Button
            android:id="@+id/demogrDocsBackScanButton"
            style="@style/DemographicsDocsButtonStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/demogr_docs_scan_label"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/demogr_license_scan_label"
            style="@style/TextInputLayoutStyle"
            app:hintTextAppearance="@style/FloatingLabelStyle">

            <EditText
                android:id="@+id/demogr_docs_license_num"
                style="@style/SigninSignupEditStyle"
                android:hint="@string/demogr_license_scan_label"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/demogrDetailsIdDocNumberOptionalHint"
            style="@style/SignupRequireHintStyle"
            android:text="@string/hint_optional"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/demographics_docs_label_margin_top"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/demogr_license_state_label"
            style="@style/DemographicsDocsDocumentLabelStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/demogr_docs_license_number_label"/>

        <TextView
            android:id="@+id/demogr_tv_state"
            style="@style/DemographicsDocsClickableTextStyle"
            android:text="@string/choose"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/demo_view_height"
        android:layout_marginBottom="@dimen/divider_margin_bottom"
        android:layout_marginTop="@dimen/divider_margin_top"
        android:background="@color/light_gray"/>

</LinearLayout>
