<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="beforeDescendants"
    android:focusable="true"
    android:orientation="vertical"
    android:id="@+id/scanIdRootLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/demogrDocTypeLabel"
            style="@style/DemographicsDocsDocumentLabelStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/demogr_docs_document_type"/>

        <TextView
            android:id="@+id/demogrDocTypeClickable"
            style="@style/DemographicsDocsClickableTextStyle"
            android:text="@string/demographicsChooseLabel"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/demo_view_height"
        android:layout_marginBottom="@dimen/divider_margin_bottom"
        android:layout_marginTop="@dimen/divider_margin_top"
        android:background="@color/light_gray"/>

    <LinearLayout
        style="@style/DemographicsDocsImageButtonContainerStyle">

        <ImageView
            android:id="@+id/demogrDocsFrontScanImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/scanned_id_doc"
            android:src="@drawable/icn_camera"/>

        <Button
            android:id="@+id/demogrDocsFrontScanButton"
            style="@style/DemographicsDocsButtonStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/demogr_docs_scan_insurance_front_label"/>

    </LinearLayout>

    <LinearLayout
        style="@style/DemographicsDocsImageButtonContainerStyle"
        android:layout_marginBottom="@dimen/demogr_details_container_top"
        android:layout_marginTop="@dimen/demogr_details_container_top">

        <ImageView
            android:id="@+id/demogrDocsBackScanImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/scanned_id_doc"
            android:src="@drawable/icn_camera"/>

        <Button
            android:id="@+id/demogrDocsBackScanButton"
            style="@style/DemographicsDocsButtonStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/demogr_docs_scan_insurance_backlabel"/>

    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/demogrDocsNumberInputLayout"
        style="@style/TextInputLayoutStyle"
        app:hintTextAppearance="@style/FloatingLabelStyle">

        <EditText
            android:id="@+id/demogrDocsLicenseNumEdit"
            style="@style/SigninSignupEditStyle"
            android:hint="@string/demogrDocsNumberHint"
            android:imeOptions="actionNone"
            android:nextFocusDown="@+id/scanIdRootLayout"
            android:maxLength="10"/>
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/demographics_docs_label_margin_top"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/demogrDocsLicenseStateLabel"
            style="@style/DemographicsDocsDocumentLabelStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/demogr_docs_license_number_label"/>

        <TextView
            android:id="@+id/demogrDocsStateClickable"
            style="@style/DemographicsDocsClickableTextStyle"
            android:text="@string/demographicsChooseLabel"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/demo_view_height"
        android:layout_marginBottom="@dimen/divider_margin_bottom"
        android:layout_marginTop="@dimen/divider_margin_top"
        android:background="@color/light_gray"/>

</LinearLayout>
