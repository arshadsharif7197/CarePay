<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/demogr_docs_root"
              style="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
        style="@style/DemographicsDocsHeaderStyle"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/demogr_docs_header_title"
            style="@style/DemographicsDocsHeaderTitleStyle"
            android:text="@string/demogr_docs_logo_title"/>

        <TextView
            android:id="@+id/demogr_docs_header_subtitle"
            style="@style/DemographicsDocsHeaderSubtitleStyle"
            android:text="@string/demogr_docs_logo_message"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">

        <LinearLayout
            style="@style/DemographicsDocsHeaderStyle"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/top_bottom_scroll_padding"
            android:paddingTop="@dimen/top_bottom_scroll_padding">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/demogrDocsLicense"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/demogr_insurance_switch"
                style="@style/DemographicsDocsLabelStyle"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/demographics_docs_section_margin_top"
                android:checked="true"
                android:text="@string/demogr_insurance_switch_text"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/demogrDocsInsurance1"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/demogrDocsInsurance2"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/demogrDocsInsurance3"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>