<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/demogr_docs_root"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
        style="@style/DemographicsDocsHeaderStyle"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/demogr_docs_header_title"
            style="@style/DemographicsDocsHeaderTitleStyle"
            android:text="@string/demogr_docs_logo_title"/>

        <TextView
            android:id="@+id/demogr_docs_header_subtitle"
            style="@style/DemographicsDocsHeaderSubtitleStyle"
            android:text="@string/demogr_docs_logo_message"/>

    </LinearLayout>

    <ScrollView
        android:id="@+id/demographicsDocsScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/top_bottom_scroll_padding"
        android:paddingTop="@dimen/top_bottom_scroll_padding">

        <LinearLayout
            style="@style/DemographicsDocsHeaderStyle"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/demographicsDocsLicense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/demogr_insurance_switch"
                style="@style/DemographicsDocsLabelStyle"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/demographics_docs_section_margin_top"
                android:checked="true"
                android:text="@string/demogr_insurance_switch_text"/>

            <FrameLayout
                android:id="@+id/demographicsDocsInsurance1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <FrameLayout
                android:id="@+id/demographicsDocsInsurance2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <FrameLayout
                android:id="@+id/demographicsDocsInsurance3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/demogr_docs_bottom_view"/>
        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/demographicsAddMedInfoButton"
        style="@style/DemographicsAddRemoveInsuranceStyle"
        android:layout_width="match_parent"
        android:text="@string/demogr_docs_add_card"/>

    <Button
        android:id="@+id/demographicsNextButton"
        style="@style/DemographicsNextButtonStyle"
        android:text="@string/demogr_next"/>

</LinearLayout>