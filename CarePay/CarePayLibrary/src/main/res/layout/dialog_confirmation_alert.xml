<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/transparent_apt"
    android:minWidth="@dimen/visit_type_list_height"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/dialog_background"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/Feldgrau"
            android:gravity="center"

            android:minHeight="@dimen/largealert_height"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/headerIconImageView"
                android:layout_width="@dimen/payment_header_icon_size"
                android:layout_height="@dimen/payment_header_icon_size"
                android:visibility="gone" />

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/largeMssageLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dimen_18dp"
                android:lineSpacingExtra="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:layout_marginRight="@dimen/dimen_18dp"
                android:layout_marginBottom="@dimen/dimen_12dp"
                android:textSize="@dimen/dimen_14dp"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="@color/white"
                android:textStyle="italic"
                app:customAssetFont="gotham_rounded_bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.carecloud.carepaylibray.customcomponents.CarePayButton
                android:id="@+id/actionButtonNo"
                style="@style/ResponsButtonStyle"
                android:layout_width="0dp"
                android:layout_marginRight="@dimen/dimen_3dp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="No"
                android:background="@color/colorPrimary"
                android:foreground="?selectableItemBackground"
                android:textColor="@color/white"
                app:customAssetFont="gotham_rounded_bold" />

            <com.carecloud.carepaylibray.customcomponents.CarePayButton
                android:id="@+id/actionButtonYes"
                style="@style/ResponsButtonStyle"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/dimen_3dp"
                android:layout_weight="1"
                android:text="Yes"
                android:textAllCaps="false"
                android:background="@color/colorPrimary"
                android:foreground="?selectableItemBackground"
                android:textColor="@color/white"
                app:customAssetFont="gotham_rounded_bold" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>