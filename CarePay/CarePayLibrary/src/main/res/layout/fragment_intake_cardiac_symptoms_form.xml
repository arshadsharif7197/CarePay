<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingLeft="@dimen/apt_available_hours_list_padding"
    android:paddingRight="@dimen/apt_available_hours_list_padding"
    android:paddingBottom="@dimen/apt_dl_view_margin"
    android:paddingTop="@dimen/margintop"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/haveyouTreatedHeaderTextView"
        android:layout_width="wrap_content"
        android:text="HAVE YOU EVER BEEN TREATED FOR ANY OF THE FOLLOWING?"
        android:textSize="@dimen/textview_textsize"
        android:layout_marginTop="@dimen/apt_popup_button_margin"
        android:textColor="@color/blue_cerulian"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/apt_popup_button_margin"
        android:layout_height="wrap_content">
        <CheckBox
            android:text="Chest Pain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:textSize="@dimen/consent_minor_textsize"
            android:textColor="@color/slateGray"
            android:drawableRight="@drawable/check_box_intake"/>
        <View
            style="@style/Consent_Form_View_Style"
            android:layout_width="match_parent" />
        <CheckBox
            android:text="Nausea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:textSize="@dimen/consent_minor_textsize"
            android:textColor="@color/slateGray"
            android:drawableRight="@drawable/check_box_intake"/>
        <View
            style="@style/Consent_Form_View_Style"
            android:layout_width="match_parent" />
        <CheckBox
            android:text="Perspiration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:textSize="@dimen/consent_minor_textsize"
            android:textColor="@color/slateGray"
            android:drawableRight="@drawable/check_box_intake"/>
        <View
            style="@style/Consent_Form_View_Style"
            android:layout_width="match_parent" />
        <CheckBox
            android:text="Shortness of Breath - SOB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:textSize="@dimen/consent_minor_textsize"
            android:textColor="@color/slateGray"
            android:drawableRight="@drawable/check_box_intake"/>
        <View
            style="@style/Consent_Form_View_Style"
            android:layout_width="match_parent" />
        <CheckBox
            android:text="Swelling (Edema)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:textSize="@dimen/consent_minor_textsize"
            android:textColor="@color/slateGray"
            android:drawableRight="@drawable/check_box_intake"/>
        <View
            style="@style/Consent_Form_View_Style"
            android:layout_width="match_parent" />
        <CheckBox
            android:text="Palpitations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:textSize="@dimen/consent_minor_textsize"
            android:textColor="@color/slateGray"
            android:drawableRight="@drawable/check_box_intake"/>
        <View
            style="@style/Consent_Form_View_Style"
            android:layout_width="match_parent" />
        <CheckBox
            android:text="Fainting (Syncope)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:textSize="@dimen/consent_minor_textsize"
            android:textColor="@color/slateGray"
            android:drawableRight="@drawable/check_box_intake"/>
        <View
            style="@style/Consent_Form_View_Style"
            android:layout_width="match_parent" />
        <CheckBox
            android:text="Near Fainting (Near Syncope)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/consent_minor_textsize"
            android:button="@null"
            android:textColor="@color/slateGray"
            android:drawableRight="@drawable/check_box_intake"/>
        <View
            style="@style/Consent_Form_View_Style"
            android:layout_width="match_parent" />
    </LinearLayout>

</LinearLayout>