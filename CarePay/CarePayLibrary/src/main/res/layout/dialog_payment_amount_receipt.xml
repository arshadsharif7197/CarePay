<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent_apt"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialog_close_header"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/apt_imgview_ht"
            android:layout_gravity="start"
            android:layout_marginBottom="@dimen/apt_dl_margin_bottom"
            android:gravity="start"
            android:src="@drawable/icn_patient_mode_nav_close"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/payment_receipt_dialog_height"
        android:background="@drawable/payment_receipt_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/payment_receipt_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/payment_receipt_header"
            android:paddingBottom="@dimen/dimen_5dp"
            android:paddingTop="@dimen/dimen_5dp"
            android:weightSum="3">

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/receipt_no_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_9dp"
                android:layout_weight="1"
                android:gravity="start"
                android:textColor="@color/manatee"
                android:textSize="@dimen/text_size_11"
                app:customAssetFont="proxima_nova_semi_bold" />

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/payment_receipt_type_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_42dp"
                android:layout_marginStart="@dimen/dimen_42dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/manatee"
                android:textSize="@dimen/text_size_11"
                app:customAssetFont="proxima_nova_semi_bold" />

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/payment_receipt_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_9dp"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/manatee"
                android:textSize="@dimen/text_size_11"
                app:customAssetFont="proxima_nova_semi_bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/payment_receipt_header"
            android:background="@color/white"
            android:orientation="vertical">

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/payment_receipt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_20"
                app:customAssetFont="proxima_nova_semi_bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:background="@color/light_gray_dialog" />

            <LinearLayout
                android:id="@+id/payment_receipt_total_paid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen_15dp"
                android:paddingEnd="@dimen/dimen_14dp"
                android:paddingStart="@dimen/dimen_14dp"
                android:paddingTop="@dimen/dimen_15dp"
                android:weightSum="2">

                <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                    android:id="@+id/payment_receipt_total_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:textColor="@color/textview_default_textcolor"
                    android:textSize="@dimen/text_size_17"
                    app:customAssetFont="proxima_nova_regular" />

                <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                    android:id="@+id/payment_receipt_total_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textColor="@color/textview_default_textcolor"
                    android:textSize="@dimen/text_size_14"
                    app:customAssetFont="proxima_nova_regular" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/payment_receipt_details_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <Button
            android:id="@+id/payment_receipt_save_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button_payment_receipt_save"
            android:textColor="@color/white" />
    </RelativeLayout>
</LinearLayout>