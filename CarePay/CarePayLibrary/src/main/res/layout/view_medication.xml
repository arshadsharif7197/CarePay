<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/demogr_details_container_top"
              android:orientation="horizontal"
              android:baselineAligned="false">

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="horizontal">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_allergy_margin_bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/viewMedicLabel"
                style="@style/DemographicsDetailsAllergyStyle"
                android:layout_weight="1"/>

            <View
                android:layout_width="@dimen/demographics_allergy_padding_between_label_and_text"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/viewMedicTextView"
                style="@style/DemographicsDetailsAllergyStyle"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_allergy_margin_bottom">

            <TextView
                android:id="@+id/viewMedicDosageLabel"
                style="@style/DemographicsDetailsAllergyStyle"
                android:layout_weight="1"/>

            <View
                android:layout_width="@dimen/demographics_allergy_padding_between_label_and_text"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/viewMedicDosageTextView"
                style="@style/DemographicsDetailsAllergyStyle"
                android:layout_weight="1"/>
        </TableRow>
    </TableLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1">

        <TextView
            android:id="@+id/viewMedicRemove"
            style="@style/DemographicsDocsClickableTextStyle"
            android:layout_gravity="end"
            android:layout_marginEnd="0dp"
            android:textColor="@color/harvard_crimson"/>
    </FrameLayout>

</LinearLayout>