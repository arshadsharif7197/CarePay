<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootDialogPaymentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_apt"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialog_close_header"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/apt_imgview_ht"
            android:layout_gravity="left"
            android:layout_marginBottom="@dimen/apt_dl_margin_bottom"
            android:gravity="left"
            android:src="@drawable/icn_patient_mode_nav_close"
            android:text="@string/close"
            android:textColor="@color/white" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/dialogHeaderLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/apt_dl_header_ht"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                    app:customAssetFont="gotham_rounded_medium"
                    android:id="@+id/paymentAmountTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/apt_dl_appt_date_margin"
                    android:gravity="center_horizontal"
                    android:text="$234.00"
                    android:textColor="@color/white"
                    android:textSize="@dimen/payment_amount_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/apt_dl_appt_shortname_margin"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                    app:customAssetFont="proxima_nova_semi_bold"
                    android:id="@+id/userShortnameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_tv"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/apt_dl_text_big"
                    android:textStyle="bold"
                    android:layout_marginRight="9dp"
                    android:layout_marginLeft="9dp"
                    android:visibility="visible" />

                <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/UserPicCardView"
                    android:layout_width="@dimen/apt_dl_image_ht_wdh"
                    android:layout_height="@dimen/apt_dl_image_ht_wdh"
                    android:layout_marginRight="9dp"
                    android:layout_marginLeft="9dp"
                    android:elevation="@dimen/apt_dl_image_elevation"
                    android:innerRadius="@dimen/apt_dl_zero_ht_wdh"
                    android:shape="ring"
                    android:thicknessRatio="1.9"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/apt_dl_image_radius">

                    <ImageView
                        android:id="@+id/paymentUserPicImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/apt_dl_image_ht_wdh"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/icn_signup_step_2_user_on" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/paymentPartialModeCardView"
                    android:layout_width="@dimen/apt_dl_image_ht_wdh"
                    android:layout_height="@dimen/apt_dl_image_ht_wdh"
                    android:elevation="@dimen/apt_dl_image_elevation"
                    android:innerRadius="@dimen/apt_dl_zero_ht_wdh"
                    android:shape="ring"
                    android:layout_marginRight="9dp"
                    android:layout_marginLeft="9dp"
                    android:thicknessRatio="1.9"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/apt_dl_image_radius">

                    <ProgressBar
                        android:id="@+id/circularProgressbar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="@dimen/apt_dl_image_ht_wdh"
                        android:layout_height="@dimen/apt_dl_image_ht_wdh"
                        android:indeterminate="false"
                        android:layout_centerInParent="true"
                        android:progressDrawable="@drawable/circular"
                        />
                </android.support.v7.widget.CardView>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/actionAddLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/provider_margin_top"
                android:orientation="vertical"
                android:paddingLeft="@dimen/apt_dl_margin"
                android:paddingRight="@dimen/apt_dl_margin">

                <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                    app:customAssetFont="proxima_nova_semi_bold"
                    android:id="@+id/userNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Dr. Joshua Wellington"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/apt_dl_text_big" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/apt_dl_boader_ht"
                    android:layout_marginTop="@dimen/addess_payment_margin_top"
                    android:background="@color/light_gray_dialog" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addChildDynamicLayout"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"></LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>