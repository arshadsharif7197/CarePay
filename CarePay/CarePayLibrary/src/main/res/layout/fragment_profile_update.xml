<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/demographicsReviewRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="beforeDescendants"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">


    <include layout="@layout/toolbar_demographics_settings" />

    <ProgressBar
        android:id="@+id/demographicReviewProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-8dp"
        android:indeterminate="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/no_apt_place_holder_icon_margin_top"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dimen_17dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_17dp"
        android:text="@string/hello_blank_fragment" >
        <RelativeLayout
            android:layout_width="@dimen/signup_clickable_textview_height"
            android:layout_height="@dimen/signup_clickable_textview_height"
            android:gravity="center">

            <ImageView
                android:id="@+id/cellAvatarImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:elevation="@dimen/apt_lst_img_elevation"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/providerPicImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/icn_placeholder_user_profile_png"
                    />
            </RelativeLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/changeCurrentPhotoButton"
            style="@style/DemographicsAddRemoveInsuranceStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="CHANGE CURRENT PHOTO"/>

    </LinearLayout>

    <ScrollView
        android:id="@+id/adddemoScrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/demographics_address_bottom_margin"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/adddemoLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/reviewdemogrFirstNameTextInput"
                style="@style/TextInputLayoutStyle"
                android:layout_marginTop="18dp"
                app:hintTextAppearance="@style/FloatingLabelStyle">

                <EditText
                    android:id="@+id/reviewdemogrFirstNameEdit"
                    style="@style/SigninSignupEditStyle"
                    android:digits="abcdefghijklmnopqurstuvwxyzABCDEFGHIZKLMNOPQURSTUVWXYZ "
                    android:inputType="textPersonName"
                    android:maxLength="100"
                    android:nextFocusForward="@+id/reviewdemogrMiddleNameEdit" />
            </android.support.design.widget.TextInputLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/reviewdemogrMiddleNameTextInputLayout"
                    style="@style/SigninSignupTextInputStyle"
                    app:hintTextAppearance="@style/FloatingLabelStyle">

                    <EditText
                        android:id="@+id/reviewdemogrMiddleNameEdit"
                        style="@style/SigninSignupEditStyle"
                        android:digits="abcdefghijklmnopqurstuvwxyzABCDEFGHIZKLMNOPQURSTUVWXYZ "
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName"
                        android:maxLength="100"
                        android:nextFocusForward="@+id/reviewdemogrsLastNameEdit" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/reviewdemogrMiddleNameOptionalLabel"
                    style="@style/SignupRequireHintStyle"
                    android:text="Optional"
                    android:textColor="@color/cadet_gray" />
            </FrameLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/reviewdemogrLastNameTextInput"
                style="@style/SigninSignupTextInputStyle"
                app:hintTextAppearance="@style/FloatingLabelStyle">

                <EditText
                    android:id="@+id/reviewdemogrLastNameEdit"
                    style="@style/SigninSignupEditStyle"
                    android:digits="abcdefghijklmnopqurstuvwxyzABCDEFGHIZKLMNOPQURSTUVWXYZ "
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:maxLength="100"
                    android:nextFocusForward="@+id/reviewdemogrEmailEdit" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/signInEmailTextInputLayout"
                style="@style/TextInputLayoutStyle"
                app:hintTextAppearance="@style/FloatingLabelStyle">

                <EditText
                    android:id="@+id/signinEmailEditText"
                    style="@style/EditTextStyle"
                    android:inputType="textEmailAddress"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/passwordTextInputLayout"
                style="@style/TextInputLayoutStyle"
                app:hintTextAppearance="@style/FloatingLabelStyle">

                <EditText
                    android:id="@+id/passwordEditText"
                    style="@style/EditTextStyle"
                    android:inputType="textEmailAddress"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/repeatPasswordTextInputLayout"
                style="@style/TextInputLayoutStyle"
                app:hintTextAppearance="@style/FloatingLabelStyle"
                app:passwordToggleEnabled="false">

                <EditText
                    android:id="@+id/repeatPasswordEditText"
                    style="@style/EditTextStyle"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"/>

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonAddDemographicInfo"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/language_button_selector"
        android:gravity="center"
        android:text="SAVE CHANGES"
        android:textColor="@color/white" />
</LinearLayout>