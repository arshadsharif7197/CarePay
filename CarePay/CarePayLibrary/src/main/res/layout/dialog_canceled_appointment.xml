<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.carecloud.carepaylibray.customcomponents.CarePayTextView
        app:customAssetFont="gotham_rounded_medium"
        android:id="@+id/appointmentStatusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/apt_dl_margin"
        android:textSize="@dimen/apt_dl_textview_size"
        android:visibility="gone"
        android:textStyle="bold" />
    <Button
        android:id="@+id/cancelAppointmentButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/apt_dl_margin"
        android:background="@drawable/button_blue_border"
        android:textColor="@color/blue_cerulian"
        android:visibility="gone"
        android:textSize="@dimen/apt_dl_textview_size" />
</LinearLayout>