<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <com.carecloud.carepaylibray.customcomponents.CarePayTextView
        android:id="@+id/appointmentStatusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/apt_dl_margin"
        android:textSize="@dimen/apt_dl_textview_size"
        android:textStyle="bold"
        android:visibility="gone"
        app:customAssetFont="gotham_rounded_medium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancelAppointmentButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/apt_dl_margin"
            android:layout_weight="1"
            android:background="@drawable/button_blue_border"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/apt_dl_textview_size"
            android:visibility="gone"
            app:customAssetFont="proxima_nova_regular" />

        <Button
            android:id="@+id/preRegisterButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/apt_dl_btn_margin"
            android:layout_marginTop="@dimen/apt_dl_margin"
            android:layout_weight="1"
            android:background="@drawable/button_green_fill_background"
            android:textColor="@color/white"
            android:textSize="@dimen/apt_dl_textview_size"
            android:visibility="gone" />

        <com.carecloud.carepaylibray.customcomponents.CarePayButton
            android:id="@+id/rescheduleAppointmentButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/apt_dl_margin"
            android:layout_weight="1"
            android:background="@drawable/button_orange_border"
            android:textColor="@color/lightning_yellow"
            android:textSize="@dimen/apt_dl_textview_size"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>