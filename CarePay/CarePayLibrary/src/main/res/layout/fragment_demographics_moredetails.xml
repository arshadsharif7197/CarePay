<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

        <FrameLayout
            android:layout_marginTop="@dimen/demographics_docs_header_top"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/placeHolderIconImageViewId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/icn_allset"/>
        </FrameLayout>

    <LinearLayout
        style="@style/DemographicsDocsHeaderStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/moreDetailsHeading"
            style="@style/DemographicsDocsHeaderTitleStyle"
            android:text="@string/moreDetailsHeadingTextView"/>

        <TextView
            android:id="@+id/moreDetailsSubHeading"
            style="@style/DemographicsDocsHeaderSubtitleStyle"
            android:text="@string/moreDetailsSubHeadingTextView"/>
    </LinearLayout>


    <LinearLayout
        style="@style/DemographicsDocsHeaderStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/demographicsGoToCarePayButton"
            style="@style/DemographicsNextButtonStyle"
            android:background="@drawable/button_selector"
            android:text="@string/GoToCarePayButton"/>

    </LinearLayout>

</LinearLayout>