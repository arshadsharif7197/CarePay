<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/add_appointment_toolbar" />

    <ProgressBar
        android:id="@+id/providers_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-8dp"
        android:indeterminate="true" />

    <com.carecloud.carepaylibray.customcomponents.CarePayTextView
        android:id="@+id/providers_sticky_header_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/apt_skicky_header_height"
        android:layout_gravity="center_vertical"
        android:background="@color/light_gray"
        android:gravity="center_vertical"
        android:paddingEnd="0dp"
        android:paddingStart="@dimen/list_apt_padding_right"
        android:textColor="@color/lightSlateGray"
        android:textSize="@dimen/textview_textsize"
        android:visibility="gone"
        app:customAssetFont="proxima_nova_semi_bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/providers_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>