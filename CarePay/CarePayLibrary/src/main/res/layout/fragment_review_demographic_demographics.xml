<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/reviewdemographicsDemographicContainer"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              >

    <TextView
        android:id="@+id/demographicsSectionLabel"
        style="@style/reviewDemographicBlue."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/consentform_relativeLayout_margin"
        android:layout_marginTop="@dimen/consentform_realtivelayout_textpaddingtop"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/genderTextView"
            style="@style/DemographicsDocsLabelStyle"
            android:layout_width="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/chooseGenderTextView"
            style="@style/DemographicsDocsClickableTextStyle"
            android:layout_width="wrap_content" />
    </LinearLayout>

    <View
        style="@style/Consent_Form_View_Style"
        android:layout_width="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/consentform_relativeLayout_margin"
        android:layout_marginTop="@dimen/consentform_realtivelayout_textpaddingtop"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/raceDataTextView"
            style="@style/DemographicsDocsLabelStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".30"/>

        <TextView
            android:id="@+id/raceListDataTextView"
            style="@style/DemographicsDocsClickableTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:layout_weight=".70"/>
    </LinearLayout>

    <View
        style="@style/Consent_Form_View_Style"
        android:layout_width="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/consentform_relativeLayout_margin"
        android:layout_marginTop="@dimen/consentform_realtivelayout_textpaddingtop"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ethnicityDataTextView"
            style="@style/DemographicsDocsLabelStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".35" />

        <TextView
            android:id="@+id/ethnicityListDataTextView"
            style="@style/DemographicsDocsClickableTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:layout_weight=".65" />

    </LinearLayout>

    <View
        style="@style/Consent_Form_View_Style"
        android:layout_width="match_parent" />



</LinearLayout>
