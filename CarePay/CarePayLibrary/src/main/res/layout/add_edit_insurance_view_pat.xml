<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:breeze="http://schemas.carecloud.com/breeze"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingBottom="@dimen/dimen_15dp"
        android:paddingTop="@dimen/dimen_24dp">

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/health_insurance_provider_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.4"
            android:gravity="start"
            android:textColor="@color/textview_default_textcolor"
            android:textSize="@dimen/text_size_17"
            app:customAssetFont="proxima_nova_regular" />

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/health_insurance_providers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:gravity="end"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_16"
            app:customAssetFont="proxima_nova_semi_bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/gray_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_15dp"
        android:paddingTop="@dimen/dimen_24dp">

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/health_insurance_plan_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.4"
            android:gravity="start"
            android:textColor="@color/textview_default_textcolor"
            android:textSize="@dimen/text_size_17"
            app:customAssetFont="proxima_nova_regular" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6">

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/health_insurance_plans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/text_size_14"
                app:customAssetFont="proxima_nova_semi_bold" />

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/health_insurance_choose_plans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_16"
                android:visibility="gone"
                app:customAssetFont="proxima_nova_semi_bold" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/gray_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        >

        <com.carecloud.carepaylibray.customcomponents.CarePayTextInputLayout
            android:id="@+id/health_insurance_card_number_layout"
            style="@style/TextInputLayoutStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:divider="@color/transparent_apt"
            app:customAssetFont="proxima_nova_semi_bold"
            app:hintTextAppearance="@style/FloatingLabelStyle">

            <com.carecloud.carepaylibray.customcomponents.CarePayEditText
                android:id="@+id/health_insurance_card_number"
                style="@style/EditTextStyle"
                android:inputType="number"
                app:customAssetFont="proxima_nova_regular" />
        </com.carecloud.carepaylibray.customcomponents.CarePayTextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        >

        <com.carecloud.carepaylibray.customcomponents.CarePayTextInputLayout
            android:id="@+id/health_insurance_group_number_layout"
            style="@style/TextInputLayoutStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:divider="@color/transparent_apt"
            app:customAssetFont="proxima_nova_semi_bold"
            app:hintTextAppearance="@style/FloatingLabelStyle">

            <com.carecloud.carepaylibray.customcomponents.CarePayEditText
                android:id="@+id/health_insurance_group_number"
                style="@style/EditTextStyle"
                android:inputType="number"
                app:customAssetFont="proxima_nova_regular" />
        </com.carecloud.carepaylibray.customcomponents.CarePayTextInputLayout>



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_15dp"
        android:paddingTop="@dimen/dimen_24dp">

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/health_insurance_type_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.7"
            android:gravity="start"
            android:textColor="@color/textview_default_textcolor"
            android:textSize="@dimen/text_size_17"
            app:customAssetFont="proxima_nova_regular" />

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/health_insurance_types"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:gravity="end"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_16"
            app:customAssetFont="proxima_nova_semi_bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/gray_divider" />


        <LinearLayout
            style="@style/DemographicsDocsImageButtonContainerStyle">

            <ImageView
                android:id="@+id/health_insurance_front_photo"
                style="@style/DemographicImageviewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icn_camera"
                tools:ignore="ContentDescription" />


            <com.carecloud.carepaylibray.customcomponents.CarePayButton
                android:id="@+id/take_front_photo_button"
                style="@style/DemographicsDocsButtonStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/demogr_docs_scan_insurance_front_label"/>



        </LinearLayout>

            <LinearLayout
                style="@style/DemographicsDocsImageButtonContainerStyle">


                <ImageView
                android:id="@+id/health_insurance_back_photo"
                style="@style/DemographicImageviewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@drawable/icn_camera"
                tools:ignore="ContentDescription" />
                <com.carecloud.carepaylibray.customcomponents.CarePayButton
                    android:id="@+id/take_back_photo_button"
                    style="@style/DemographicsDocsButtonStyle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/demogr_docs_scan_insurance_backlabel"/>



        </LinearLayout>

    <com.carecloud.carepaylibray.customcomponents.CarePayButton
        android:id="@+id/remove_insurance_entry"
        style="@style/reviewDemographicsButtonStyle"
        android:layout_width="match_parent"
        android:enabled="false"
        android:textAlignment="center"
        breeze:textKey="demographics_documents_remove"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginTop="55dp"
        android:background="@color/light_gray_dialog" />
</LinearLayout>