<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingLeft="@dimen/apt_available_hours_list_padding"
    android:paddingRight="@dimen/apt_available_hours_list_padding"
    android:paddingTop="@dimen/margintop"
    android:paddingBottom="@dimen/apt_dl_view_margin"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/whatBringstodayHeaderTextView"
        android:layout_width="wrap_content"
        android:text="WHAT BRINGS YOU TO THE OFFICE TODAY?"
        android:textSize="@dimen/textview_textsize"
        android:layout_marginTop="@dimen/apt_popup_button_margin"
        android:textColor="@color/colorPrimary"
        android:layout_height="wrap_content" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/TextInputLayoutStyle">

        <EditText
            android:id="@+id/describeReasonsEditText"
            style="@style/EditTextStyle"
            android:hint="Describe briefly the reasons"
            android:paddingBottom="@dimen/apt_dl_margin"
            android:focusable="false"
            android:imeOptions="flagNoExtractUi"
            android:inputType="textEmailAddress"
            android:textColor="@color/lightSlateGray"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/howfeelingTextView"
        android:layout_width="wrap_content"
        android:text="HOW ARE YOU FEELING?"
        android:layout_marginTop="@dimen/apt_dl_image_radius"
        android:textSize="@dimen/textview_textsize"
        android:textColor="@color/colorPrimary"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/apt_dl_view_margin"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/optionHappyCheckBox"
            android:text="Happy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:textSize="@dimen/consent_minor_textsize"
            android:paddingTop="@dimen/checkbox_padding_top_bottom"
            android:paddingBottom="@dimen/checkbox_padding_top_bottom"
            android:paddingLeft="@dimen/checkbox_padding_left_right"
            android:paddingRight="@dimen/checkbox_padding_left_right"
            android:textColor="@color/slateGray"
            android:drawableRight="@drawable/check_box_intake"/>
        <View
            style="@style/Consent_Form_View_Style"
            android:layout_width="match_parent" />
        <CheckBox
            android:id="@+id/optionSadCheckBox"
            android:text="Sad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:textSize="@dimen/consent_minor_textsize"
            android:paddingTop="@dimen/checkbox_padding_top_bottom"
            android:paddingBottom="@dimen/checkbox_padding_top_bottom"
            android:paddingLeft="@dimen/checkbox_padding_left_right"
            android:paddingRight="@dimen/checkbox_padding_left_right"
            android:textColor="@color/slateGray"
            android:drawableRight="@drawable/check_box_intake"/>
        <View
            style="@style/Consent_Form_View_Style"
            android:layout_width="match_parent" />
        <CheckBox
            android:id="@+id/optionLethargicCheckBox"
            android:text="Lethargic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:textSize="@dimen/consent_minor_textsize"
            android:paddingTop="@dimen/checkbox_padding_top_bottom"
            android:paddingBottom="@dimen/checkbox_padding_top_bottom"
            android:paddingLeft="@dimen/checkbox_padding_left_right"
            android:paddingRight="@dimen/checkbox_padding_left_right"
            android:textColor="@color/slateGray"
            android:drawableRight="@drawable/check_box_intake"/>
        <View
            style="@style/Consent_Form_View_Style"
            android:layout_width="match_parent" />
        <CheckBox
            android:id="@+id/optionWorriedCheckBox"
            android:text="Worried"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:textSize="@dimen/consent_minor_textsize"
            android:paddingTop="@dimen/checkbox_padding_top_bottom"
            android:paddingBottom="@dimen/checkbox_padding_top_bottom"
            android:paddingLeft="@dimen/checkbox_padding_left_right"
            android:paddingRight="@dimen/checkbox_padding_left_right"
            android:textColor="@color/slateGray"
            android:drawableRight="@drawable/check_box_intake"/>
        <View
            style="@style/Consent_Form_View_Style"
            android:layout_width="match_parent" />
        <CheckBox
            android:id="@+id/optionTiredCheckBox"
            android:text="Tired"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:textSize="@dimen/consent_minor_textsize"
            android:paddingTop="@dimen/checkbox_padding_top_bottom"
            android:paddingBottom="@dimen/checkbox_padding_top_bottom"
            android:paddingLeft="@dimen/checkbox_padding_left_right"
            android:paddingRight="@dimen/checkbox_padding_left_right"
            android:textColor="@color/slateGray"
            android:drawableRight="@drawable/check_box_intake"/>
        <View
            style="@style/Consent_Form_View_Style"
            android:layout_width="match_parent" />
        <CheckBox
            android:id="@+id/optionNoneCheckBox"
            android:text="None"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:textSize="@dimen/consent_minor_textsize"
            android:paddingTop="@dimen/checkbox_padding_top_bottom"
            android:paddingBottom="@dimen/checkbox_padding_top_bottom"
            android:paddingLeft="@dimen/checkbox_padding_left_right"
            android:paddingRight="@dimen/checkbox_padding_left_right"
            android:textColor="@color/slateGray"
            android:drawableRight="@drawable/check_box_intake"/>
        <View
            style="@style/Consent_Form_View_Style"
            android:layout_width="match_parent" />

    </LinearLayout>
    <TextView
        android:id="@+id/anyConcernHeaderTextView"
        android:layout_width="wrap_content"
        android:text="ANY OTHER MEDICAL CONCERN?"
        android:textSize="@dimen/textview_textsize"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="@dimen/apt_dl_image_radius"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/optionalTextView"
        android:layout_width="wrap_content"
        android:text="Optional"
        android:layout_gravity="right"
        android:textSize="@dimen/apt_popup_optional"
        android:layout_marginTop="@dimen/apt_popup_message_margin"
        android:gravity="right"
        android:layout_height="wrap_content" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/optional_text_edit"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/anyOtherConcernEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:imeOptions="flagNoExtractUi"
            android:hint="Describe briefly another concern"
            android:textColor="@color/colorPrimary" />

    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>