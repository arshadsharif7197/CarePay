<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingLeft="@dimen/apt_available_hours_list_padding"
    android:paddingRight="@dimen/apt_available_hours_list_padding"
    android:paddingTop="@dimen/margintop"
    android:paddingBottom="@dimen/apt_dl_view_margin"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/whatBringstodayHeaderTextView"
        android:layout_width="wrap_content"
        android:text="WHAT BRINGS YOU TO THE OFFICE TODAY?"
        android:textSize="@dimen/textview_textsize"
        android:layout_marginTop="@dimen/apt_popup_button_margin"
        android:textColor="@color/blue_cerulian"
        android:layout_height="wrap_content" />

    <android.support.design.widget.TextInputLayout
        style="@style/TextInputLayoutStyle">

        <EditText
            android:id="@+id/describeReasonsEditText"
            style="@style/EditTextStyle"
            android:hint="Describe briefly the reasons"
            android:focusable="false"
            android:imeOptions="flagNoExtractUi"
            android:inputType="textEmailAddress"/>

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/howfeelingTextView"
        android:layout_width="wrap_content"
        android:text="HOW ARE YOU FEELING?"
        android:layout_marginTop="36dp"
        android:textSize="@dimen/textview_textsize"
        android:textColor="@color/blue_cerulian"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/apt_popup_button_margin"
        android:layout_height="wrap_content">
        <CheckBox
            android:text="Option #01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:textSize="@dimen/consent_minor_textsize"
            android:textColor="@color/slateGray"
            android:drawableRight="@drawable/check_box_intake"/>
        <View
            style="@style/Consent_Form_View_Style"
            android:layout_width="match_parent" />
        <CheckBox
            android:text="Option #02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:textSize="@dimen/consent_minor_textsize"
            android:textColor="@color/slateGray"
            android:drawableRight="@drawable/check_box_intake"/>
        <View
            style="@style/Consent_Form_View_Style"
            android:layout_width="match_parent" />
        <CheckBox
            android:text="Option #03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:textSize="@dimen/consent_minor_textsize"
            android:textColor="@color/slateGray"
            android:drawableRight="@drawable/check_box_intake"/>
        <View
            style="@style/Consent_Form_View_Style"
            android:layout_width="match_parent" />
        <CheckBox
            android:text="Option #04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:textSize="@dimen/consent_minor_textsize"
            android:textColor="@color/slateGray"
            android:drawableRight="@drawable/check_box_intake"/>
        <View
            style="@style/Consent_Form_View_Style"
            android:layout_width="match_parent" />
    </LinearLayout>
    <TextView
        android:id="@+id/anyConcernHeaderTextView"
        android:layout_width="wrap_content"
        android:text="ANY OTHER MEDICAL CONCERN?"
        android:textSize="@dimen/textview_textsize"
        android:textColor="@color/blue_cerulian"
        android:layout_marginTop="36dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/optionalTextView"
        android:layout_width="wrap_content"
        android:text="Optional"
        android:layout_gravity="right"
        android:textSize="@dimen/apt_popup_optional"
        android:layout_marginTop="@dimen/apt_dl_margin"
        android:gravity="right"
        android:layout_height="wrap_content" />
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/optional_text_edit"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/anyOtherConcernEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:imeOptions="flagNoExtractUi"
            android:hint="Describe briefly antother concern"
            android:textColor="@color/blue_cerulian" />

    </android.support.design.widget.TextInputLayout>
</LinearLayout>