<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_in_take"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.carecloud.carepay.patient.intakeforms.activities.InTakeWebViewActivity">

    <include layout="@layout/toolbar_intake"/>

    <ProgressBar
        android:id="@+id/signupProgressBarIntake"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-8dp"
        android:layout_marginBottom="0dp"
        android:indeterminate="true"/>


    <com.marcok.stepprogressbar.StepProgressBar
            android:id="@+id/stepProgressBar2"
            style="@style/InTakeDottedProgressBarStyle"
            app:cumulativeDots="false"
            app:activeDotIndex="0"
            app:activeDotColor="@color/gray"
            app:inactiveDotColor="@color/colorPrimary"
            app:activeDotIcon="@drawable/circle_indicator_blue"
            app:inactiveDotIcon="@drawable/circle_indicator_gray"
            app:numberDots="0"
            app:dotSize="7dp"
            app:spacing="10dp"
            android:layout_marginTop="1dp"
            />



    <WebView
        android:id="@+id/activity_main_webview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />



    <Button
        android:id="@+id/intakeBtnNext"
        android:enabled="true"
        android:text="Next Question"
        style="@style/InTakeNextButtonStyle"/>


</LinearLayout>
