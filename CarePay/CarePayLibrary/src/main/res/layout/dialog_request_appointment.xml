<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <android.support.design.widget.TextInputLayout
        android:id="@+id/reasonTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/apt_dl_margin">

        <EditText
            android:id="@+id/reasonEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Reason for visit"
            android:textColor="@color/blue_cerulian" />

    </android.support.design.widget.TextInputLayout>
<LinearLayout
    android:id="@+id/appointDialogButtonLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="@dimen/apt_dl_margin"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <Button
        android:id="@+id/requestAppointmentButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/apt_dl_btn_margin"
        android:layout_weight="0.5"
        android:background="@drawable/button_green_fill_background"
        android:text="REQUEST APPOINTMENT"
        android:textColor="@color/white"
        android:textSize="@dimen/apt_dl_textview_size" />
</LinearLayout>
</LinearLayout>