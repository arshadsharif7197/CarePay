<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/optionalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/apt_dl_margin"
        android:gravity="right"
        android:text="Optional"
        android:textSize="@dimen/apt_popup_optional" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/reasonTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp">

        <EditText
            android:id="@+id/reasonEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="Reason for visit"
            android:imeOptions="flagNoExtractUi"
            android:textColor="@color/blue_cerulian" />

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/appointDialogButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/apt_dl_margin"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/requestAppointmentButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/apt_dl_btn_margin"
            android:layout_weight="0.5"
            android:background="@drawable/button_green_fill_background"
            android:text="@string/request_appointment_button_text"
            android:textColor="@color/white"
            android:textSize="@dimen/apt_dl_textview_size" />
    </LinearLayout>
</LinearLayout>