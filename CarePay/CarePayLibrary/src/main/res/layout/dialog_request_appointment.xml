<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/optionalTextView"
        android:layout_width="wrap_content"
        android:text="Optional"
        android:layout_gravity="right"
        android:textSize="@dimen/apt_popup_optional"
        android:layout_marginTop="@dimen/apt_dl_margin"
        android:gravity="right"
        android:layout_height="wrap_content" />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/reasonTextInputLayout"
        android:layout_width="match_parent"
        android:layout_marginTop="-20dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/reasonEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Reason for visit"
            android:focusable="false"
            android:imeOptions="flagNoExtractUi"
            android:textColor="@color/blue_cerulian" />

    </android.support.design.widget.TextInputLayout>
<LinearLayout
    android:id="@+id/appointDialogButtonLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="@dimen/apt_dl_margin"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <Button
        android:id="@+id/requestAppointmentButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/button_green_fill_background"
        android:text="REQUEST APPOINTMENT"
        android:textColor="@color/white"
        android:textSize="@dimen/apt_dl_textview_size" >
        </Button>
</LinearLayout>
</LinearLayout>