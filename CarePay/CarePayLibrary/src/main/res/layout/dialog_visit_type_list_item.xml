<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="?android:selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginEnd="@dimen/dimen_10dp">

        <ImageView
            android:id="@+id/notificationPaymentImage"
            android:layout_width="@dimen/dimen_30dp"
            android:layout_height="@dimen/dimen_30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dimen_5dp"
            android:src="@drawable/icn_notification_error"
            android:tint="@color/light_gray"
            android:visibility="gone" />

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/prepaymentAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimen_5dp"
            android:layout_toStartOf="@id/notificationPaymentImage"
            android:gravity="end"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_17"
            android:visibility="gone"
            app:customAssetFont="proxima_nova_semi_bold"
            tools:text="5000.25" />

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/visitTypeListItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/prepaymentAmount"
            android:gravity="start"
            android:textColor="@color/charcoal"
            android:textSize="@dimen/text_size_17"
            app:customAssetFont="proxima_nova_regular"
            tools:text="Follow-Up" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/divider_color" />

</RelativeLayout>