<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/demographicsDocsRootContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:layout_margin="0dp"
    android:focusable="true"
    android:focusableInTouchMode="true">


    <ScrollView
        android:id="@+id/updateInsuranceDocsScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="@dimen/top_bottom_scroll_padding"
        android:paddingTop="@dimen/top_bottom_scroll_padding">

        <LinearLayout
            style="@style/DemographicsDocsHeaderStyle"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/insurancesTitleLabel"
                style="@style/reviewDemographicBlue."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:layout_marginTop="@dimen/dimen_36dp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:orientation="vertical">


            <FrameLayout
                android:id="@+id/demographicsDocsLicense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/demographicsInsuranceSwitch"
                style="@style/DemographicsDocsLabelStyle"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/demographics_docs_section_margin_top"
                android:checked="false"
                android:layout_marginEnd="15dp"
                android:theme="@style/HaveHealthInsurance"
                />

            <View
                style="@style/Review_Screen_View_Style"
                android:layout_width="match_parent" />
            <LinearLayout
                android:id="@+id/insuranceHoldersContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:padding="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:orientation="vertical"
                android:visibility="gone" />


            <View
                android:id="@+id/healthinsurancereviewBottomView"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
        </LinearLayout>

    </ScrollView>
    <TextView
        android:id="@+id/multipleInsurancesClickable"
        style="@style/SigninSignupClickableTextView"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/demographics_docs_header_top"
        android:layout_marginEnd="@dimen/demo_scorllview_margin_right_left" />


</LinearLayout>