<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.carecloud.carepaylibray.customcomponents.CarePayTextView
        android:id="@+id/appointRequestQueueLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/apt_dl_margin"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_20"
        app:customAssetFont="proxima_nova_semi_bold" />

    <com.carecloud.carepaylibray.customcomponents.CarePayTextView
        android:id="@+id/appointRequestQueueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/emerald"
        android:textSize="@dimen/apt_dl_text_big"
        app:customAssetFont="proxima_nova_extra_bold" />

    <com.carecloud.carepaylibray.customcomponents.CarePayButton
        android:id="@+id/appointmentRequestCheckoutNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/apt_dl_text_date"
        android:background="@drawable/button_blue_border"
        android:paddingBottom="@dimen/dimen_17dp"
        android:paddingTop="@dimen/dimen_17dp"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_13"
        android:visibility="gone"
        app:customAssetFont="gotham_rounded_medium" />
</LinearLayout>