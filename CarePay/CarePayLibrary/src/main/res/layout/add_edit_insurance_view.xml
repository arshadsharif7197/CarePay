<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:breeze="http://schemas.carecloud.com/breeze"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_15dp"
        android:paddingTop="@dimen/dimen_15dp">

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/health_insurance_provider_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimen_14dp"
            android:gravity="start"
            android:textColor="@color/textview_default_textcolor"
            android:textSize="@dimen/text_size_17"
            app:customAssetFont="proxima_nova_regular"
            breeze:textKey="demographics_documents_title_select_provider" />

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/health_insurance_providers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="end"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_16"
            app:customAssetFont="proxima_nova_semi_bold"
            breeze:textKey="demographics_choose" />

        <com.carecloud.carepaylibray.customcomponents.CarePayEditText
            android:id="@+id/otherProviderEditText"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/health_insurance_providers"
            android:layout_marginTop="@dimen/dimen_30dp"
            android:textAlignment="textEnd"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_16"
            android:visibility="gone"
            app:customAssetFont="proxima_nova_semi_bold" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/gray_divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_15dp"
        android:paddingTop="@dimen/dimen_15dp">

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/health_insurance_plan_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dimen_14dp"
            android:gravity="start"
            android:textColor="@color/textview_default_textcolor"
            android:textSize="@dimen/text_size_17"
            app:customAssetFont="proxima_nova_regular"
            breeze:textKey="demographics_documents_title_select_plan" />


        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/health_insurance_plans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/text_size_14"
            app:customAssetFont="proxima_nova_semi_bold"
            breeze:textKey="demographics_documents_choose_plan" />

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/health_insurance_choose_plans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_16"
            android:visibility="gone"
            app:customAssetFont="proxima_nova_semi_bold"
            breeze:textKey="demographics_choose" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/gray_divider"
        android:layout_marginBottom="@dimen/dimen_15dp"/>


        <com.carecloud.carepaylibray.customcomponents.CarePayTextInputLayout
            android:id="@+id/health_insurance_card_number_layout"
            style="@style/SigninSignupTextInputStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:customAssetFont="proxima_nova_semi_bold"
            app:hintTextAppearance="@style/FloatingLabelStyle">

            <com.carecloud.carepaylibray.customcomponents.CarePayEditText
                android:id="@+id/health_insurance_card_number"
                style="@style/SigninSignupEditStyle"
                android:inputType="text"
                android:textAllCaps="true"
                breeze:hintKey="demographics_insurance_card_number"
                app:customAssetFont="proxima_nova_regular" />
        </com.carecloud.carepaylibray.customcomponents.CarePayTextInputLayout>

        <com.carecloud.carepaylibray.customcomponents.CarePayTextInputLayout
            android:id="@+id/health_insurance_group_number_layout"
            style="@style/SigninSignupTextInputStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:customAssetFont="proxima_nova_semi_bold"
            app:hintTextAppearance="@style/FloatingLabelStyle">

            <com.carecloud.carepaylibray.customcomponents.CarePayEditText
                android:id="@+id/health_insurance_group_number"
                style="@style/SigninSignupEditStyle"
                android:inputType="text"
                android:textAllCaps="true"
                breeze:hintKey="demographics_insurance_group_number"
                app:customAssetFont="proxima_nova_regular" />
        </com.carecloud.carepaylibray.customcomponents.CarePayTextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_15dp"
        android:paddingTop="@dimen/dimen_15dp">

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/health_insurance_type_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.7"
            android:layout_marginStart="@dimen/dimen_14dp"
            android:gravity="start"
            android:textColor="@color/textview_default_textcolor"
            android:textSize="@dimen/text_size_17"
            app:customAssetFont="proxima_nova_regular"
            breeze:textKey="demographics_insurance_type_label" />

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/health_insurance_types"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:gravity="end"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_16"
            app:customAssetFont="proxima_nova_semi_bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/gray_divider" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:layout_marginBottom="@dimen/dimen_15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/health_insurance_front_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/icn_camera"
                tools:ignore="ContentDescription" />

            <com.carecloud.carepaylibray.customcomponents.CarePayButton
                android:id="@+id/take_front_photo_button"
                style="@style/DemographicsDocsButtonStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                app:customAssetFont="gotham_rounded_medium"
                breeze:textKey="demographics_insurance_retake_front_photo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:layout_marginBottom="@dimen/dimen_15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/health_insurance_back_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:src="@drawable/icn_camera"
                tools:ignore="ContentDescription" />

            <com.carecloud.carepaylibray.customcomponents.CarePayButton
                android:id="@+id/take_back_photo_button"
                style="@style/DemographicsDocsButtonStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                app:customAssetFont="gotham_rounded_medium"
                breeze:textKey="demographics_insurance_retake_back_photo" />
        </LinearLayout>

</LinearLayout>