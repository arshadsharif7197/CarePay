<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:breeze="http://schemas.carecloud.com/breeze"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_15dp"
        android:paddingTop="@dimen/dimen_15dp">

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/health_insurance_provider_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimen_14dp"
            android:gravity="start"
            android:textColor="@color/textview_default_textcolor"
            android:textSize="@dimen/text_size_17"
            app:customAssetFont="proxima_nova_regular"
            breeze:textKey="demographics_documents_title_select_provider" />

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/health_insurance_providers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="end"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_16"
            app:customAssetFont="proxima_nova_semi_bold"
            breeze:textKey="demographics_choose" />

        <com.carecloud.carepaylibray.customcomponents.CarePayEditText
            android:id="@+id/otherProviderEditText"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/health_insurance_providers"
            android:layout_marginTop="@dimen/dimen_30dp"
            android:textAlignment="textEnd"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_16"
            android:visibility="gone"
            app:customAssetFont="proxima_nova_semi_bold" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/gray_divider" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginBottom="@dimen/dimen_15dp"
        android:background="@color/gray_divider" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_15dp"
        android:paddingTop="@dimen/dimen_15dp">

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/health_insurance_plan_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dimen_14dp"
            android:gravity="start"
            android:textColor="@color/textview_default_textcolor"
            android:textSize="@dimen/text_size_17"
            app:customAssetFont="proxima_nova_regular"
            breeze:textKey="demographics_documents_title_select_plan" />


        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/health_insurance_plans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/text_size_14"
            app:customAssetFont="proxima_nova_semi_bold"
            breeze:textKey="demographics_documents_choose_plan" />

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/health_insurance_choose_plans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_16"
            android:visibility="gone"
            app:customAssetFont="proxima_nova_semi_bold"
            breeze:textKey="demographics_choose" />

    </RelativeLayout>

    <com.carecloud.carepaylibray.customcomponents.CarePayTextInputLayout
        android:id="@+id/health_insurance_card_number_layout"
        style="@style/SigninSignupTextInputStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:customAssetFont="proxima_nova_semi_bold"
        app:hintTextAppearance="@style/FloatingLabelStyle">

        <com.carecloud.carepaylibray.customcomponents.CarePayEditText
            android:id="@+id/health_insurance_card_number"
            style="@style/SigninSignupEditStyle"
            android:inputType="text"
            android:textAllCaps="true"
            app:customAssetFont="proxima_nova_regular"
            breeze:hintKey="demographics_insurance_card_number" />
    </com.carecloud.carepaylibray.customcomponents.CarePayTextInputLayout>

    <com.carecloud.carepaylibray.customcomponents.CarePayTextInputLayout
        android:id="@+id/health_insurance_group_number_layout"
        style="@style/SigninSignupTextInputStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:customAssetFont="proxima_nova_semi_bold"
        app:hintTextAppearance="@style/FloatingLabelStyle">

        <com.carecloud.carepaylibray.customcomponents.CarePayEditText
            android:id="@+id/health_insurance_group_number"
            style="@style/SigninSignupEditStyle"
            android:inputType="text"
            android:textAllCaps="true"
            app:customAssetFont="proxima_nova_regular"
            breeze:hintKey="demographics_insurance_group_number" />
    </com.carecloud.carepaylibray.customcomponents.CarePayTextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_15dp"
        android:paddingTop="@dimen/dimen_15dp">

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/health_insurance_type_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dimen_14dp"
            android:layout_weight="0.7"
            android:gravity="start"
            android:textColor="@color/textview_default_textcolor"
            android:textSize="@dimen/text_size_17"
            app:customAssetFont="proxima_nova_regular"
            breeze:textKey="demographics_insurance_type_label" />

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/health_insurance_types"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:gravity="end"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_16"
            app:customAssetFont="proxima_nova_semi_bold"
            breeze:textKey="demographics_choose" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginBottom="@dimen/dimen_5dp"
        android:background="@color/gray_divider" />

    <com.carecloud.carepaylibray.customcomponents.CarePayTextInputLayout
        android:id="@+id/health_insurance_policy_first_name_holder_layout"
        style="@style/SigninSignupTextInputStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:customAssetFont="proxima_nova_semi_bold"
        app:hintTextAppearance="@style/FloatingLabelStyle">

        <com.carecloud.carepaylibray.customcomponents.CarePayEditText
            android:id="@+id/health_insurance_policy_first_name_holder"
            style="@style/SigninSignupEditStyle"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:inputType="textPersonName"
            android:maxLength="100"
            android:textAllCaps="true"
            app:customAssetFont="proxima_nova_regular"
            breeze:hintKey="demographics_insurance_policy_holder" />
    </com.carecloud.carepaylibray.customcomponents.CarePayTextInputLayout>

    <com.carecloud.carepaylibray.customcomponents.CarePayTextInputLayout
        android:id="@+id/health_insurance_policy_last_name_holder_layout"
        style="@style/SigninSignupTextInputStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:customAssetFont="proxima_nova_semi_bold"
        app:hintTextAppearance="@style/FloatingLabelStyle">

        <com.carecloud.carepaylibray.customcomponents.CarePayEditText
            android:id="@+id/health_insurance_policy_last_name_holder"
            style="@style/SigninSignupEditStyle"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:inputType="textPersonName"
            android:maxLength="100"
            android:textAllCaps="true"
            app:customAssetFont="proxima_nova_regular"
            breeze:hintKey="demographics_insurance_policy_holder_last_name" />
    </com.carecloud.carepaylibray.customcomponents.CarePayTextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen_15dp"
        android:paddingTop="@dimen/dimen_15dp">

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/health_insurance_relationship_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dimen_14dp"
            android:layout_weight="0.7"
            android:gravity="start"
            android:textColor="@color/textview_default_textcolor"
            android:textSize="@dimen/text_size_17"
            app:customAssetFont="proxima_nova_regular"
            breeze:textKey="demographics_insurance_relationship_label" />

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/health_insurance_relationship"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:gravity="end"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_16"
            app:customAssetFont="proxima_nova_semi_bold"
            breeze:textKey="demographics_choose" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginBottom="@dimen/dimen_5dp"
        android:background="@color/gray_divider" />

    <FrameLayout
        android:id="@+id/dateOfBirthContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <com.carecloud.carepaylibray.customcomponents.CarePayTextInputLayout
            android:id="@+id/health_insurance_policy_birth_date_holder_layout"
            style="@style/SigninSignupTextInputStyle"
            app:hintTextAppearance="@style/FloatingLabelStyle">

            <com.carecloud.carepaylibray.customcomponents.CarePayEditText
                android:id="@+id/health_insurance_policy_birth_date_holder"
                style="@style/SigninSignupEditStyle"
                android:digits="0123456789/"
                android:imeOptions="actionNext"
                android:inputType="date"
                android:maxLength="10"
                android:nextFocusForward="@+id/revewidemoPhoneNumberEdit"
                app:customAssetFont="proxima_nova_regular"
                breeze:hintKey="demographics_review_date_of_birth" />

        </com.carecloud.carepaylibray.customcomponents.CarePayTextInputLayout>

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/dobformatlabel"
            style="@style/SignupRequireHintStyle"
            android:textColor="@color/cadet_gray"
            app:customAssetFont="proxima_nova_regular"
            breeze:textKey="demographics_details_dob_hint" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/genderContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_15dp"
        android:paddingTop="@dimen/dimen_15dp"
        android:visibility="gone">

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            style="@style/DemographicsDocsLabelStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:customAssetFont="proxima_nova_regular"
            breeze:textKey="demographics_review_gender"
            tools:text="Gender" />

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/chooseGenderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="end"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_16"
            app:customAssetFont="proxima_nova_semi_bold"
            breeze:textKey="demographics_choose"
            tools:text="Male" />

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/genderOptional"
            style="@style/DemographicsRequiredLabelStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dimen_5dp"
            android:layout_toStartOf="@id/chooseGenderTextView"
            app:customAssetFont="proxima_nova_semi_bold"
            breeze:textKey="demographics_required"
            tools:text="demographics_required" />

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginBottom="@dimen/dimen_5dp"
        android:background="@color/gray_divider"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/demogrDocsFrontScanImage"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_60dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/icn_placeholder_document"
            tools:ignore="ContentDescription" />

        <com.carecloud.carepaylibray.customcomponents.CarePayButton
            android:id="@+id/demogrDocsFrontScanButton"
            style="@style/DemographicsDocsButtonStyle"
            android:layout_width="match_parent"
            app:customAssetFont="gotham_rounded_medium"
            breeze:textKey="demographics_insurance_retake_front_photo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/demogrDocsBackScanImage"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_60dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/icn_placeholder_document"
            tools:ignore="ContentDescription" />

        <com.carecloud.carepaylibray.customcomponents.CarePayButton
            android:id="@+id/demogrDocsBackScanButton"
            style="@style/DemographicsDocsButtonStyle"
            android:layout_width="match_parent"
            app:customAssetFont="gotham_rounded_medium"
            breeze:textKey="demographics_insurance_retake_back_photo" />
    </LinearLayout>

</LinearLayout>