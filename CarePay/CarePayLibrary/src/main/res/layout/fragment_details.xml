<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailsImageView"
        android:src="@drawable/icn_signup_illustration_step_2_details"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailsHeading"
        android:layout_gravity="center"
        android:text="Some details about you"
        android:textSize="21.0dp"
        android:textColor="@color/charcoal"
        android:layout_below="@+id/detailsImageView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailsSubHeading"
        android:textSize="16dp"
        android:textColor="@color/cadet_gray"
        android:layout_gravity="center"
        android:text="How about uploading your photo?"
        android:layout_below="@+id/detailsHeading"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DetailsProfileImage"
            android:src="@drawable/icn_placeholder_user_profile"
            android:layout_weight="1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/changeCurrentPhoto"
            android:text="Select or Take Photo"
            android:layout_gravity="center"
            android:layout_weight="4"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/raceTextView"
                android:textSize="21dp"
                android:text="Race"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:layout_marginLeft="20dp"
                android:id="@+id/raceListTextView"
                android:layout_toRightOf="@+id/raceTextView"
                android:textSize="21dp"
                android:text="@string/select"
                android:textColor="@color/bright_cerulean"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21dp"
                android:id="@+id/ethnicityTextView"
                android:text="Ethnicity"
                android:gravity="left"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/ethnicityTextView"
                android:textSize="21dp"
                android:id="@+id/ethnicityListTextView"
                android:text="@string/select"
                android:textColor="@color/bright_cerulean"
                android:gravity="right"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="21dp"
                android:id="@+id/preferredLanguageTextView"
                android:text="Preferred Language"
                android:gravity="left"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/preferredLanguageTextView"
                android:textSize="21dp"
                android:id="@+id/preferredLanguageListTextView"
                android:text="@string/select"
                android:textColor="@color/bright_cerulean"
                android:gravity="right"/>


        </RelativeLayout>

    </LinearLayout>


</LinearLayout>