<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/munsell"
    android:orientation="vertical">

    <include layout="@layout/signup_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/titleTv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sigtxt_hgt"
            android:gravity="center"
            android:layout_marginLeft="@dimen/marginleftright"
            android:layout_marginRight="@dimen/marginleftright"
            android:textColor="@color/charcoal"
            android:textSize="@dimen/respons_total_label_text_size" />

        <TextView
            android:id="@+id/descriptionTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleTv"
            android:layout_marginTop="@dimen/consent_top"
            android:gravity="center"
            android:layout_marginLeft="@dimen/marginleftright"
            android:layout_marginRight="@dimen/marginleftright"
            android:text="Make sure youâ€™ve read the whole consent form and sign in the box below. If you're unable to sign, you can ask for a legal representative to sign for you."
            android:textColor="@color/cadet_gray"
            android:textSize="@dimen/demographics_docs_button_text_size" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switchButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/descriptionTv"
            android:layout_marginLeft="@dimen/marginleftright"
            android:layout_marginRight="@dimen/marginleftright"
            android:layout_marginTop="@dimen/margintop"
            android:text="I'm unable to sign"
            android:textColor="@color/charcoal"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/legalFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/switchButton"
            android:layout_marginLeft="@dimen/marginleftright"
            android:layout_marginRight="@dimen/marginleftright"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="@string/hint"
            android:visibility="gone" />

        <EditText
            android:id="@+id/legalLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/legalFirstName"
            android:layout_marginLeft="@dimen/marginleftright"
            android:layout_marginRight="@dimen/marginleftright"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="@string/hint_last"
            android:visibility="gone" />

        <include
            android:id="@+id/signature_view"
            layout="@layout/signature_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/legalLastName"
            android:layout_marginLeft="@dimen/marginleftright"
            android:layout_marginRight="@dimen/marginleftright"
            android:layout_marginTop="@dimen/consent_top" />


        <Button
            android:id="@+id/agreeBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/marginleftright"
            android:layout_marginRight="@dimen/marginleftright"
            android:layout_marginBottom="@dimen/marginleftright"
            android:background="@drawable/button_selector"
            android:enabled="false"
            android:text="@string/yes_sig"
            android:textColor="@color/white" />
    </RelativeLayout>
</LinearLayout>