<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
       >


        <TextView
            android:id="@+id/detailsHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DemographicsFragmentsHeadingStyle"
            android:text="@string/detailsHeadingTextView"
            android:layout_weight="2"
            />

        <TextView
            android:id="@+id/detailsSubHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DemographicsFragmentsSubHeadingStyle"
            android:text="@string/detailsSubHeadingTextView"
            android:layout_weight="1"
            
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
 >

        <ImageView
            android:id="@+id/DetailsProfileImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icn_placeholder_user_profile"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/changeCurrentPhoto"
            android:background="@drawable/button_default_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:text="@string/selectOrTakePhotoButton"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/raceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/raceLabel"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/raceListTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/raceTextView"
                android:gravity="right"
                android:text="@string/chooseTextView"
                android:textColor="@color/bright_cerulean"
                android:textSize="18sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/ethnicityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/ethnicityLabel"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/ethnicityListTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text="@string/chooseTextView"
                android:textSize="18sp"
                android:textColor="@color/bright_cerulean" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_weight="1">

            <TextView
                android:id="@+id/preferredLanguageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="18sp"
                android:text="@string/languageLabel"
                />

            <TextView

                android:id="@+id/preferredLanguageListTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/chooseTextView"
                android:textColor="@color/bright_cerulean"
                android:textSize="18sp" />


        </RelativeLayout>

    </LinearLayout>


</LinearLayout>