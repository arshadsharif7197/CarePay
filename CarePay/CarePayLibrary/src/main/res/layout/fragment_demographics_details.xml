<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    android:id="@+id/linearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/demographicsNextButton"
    android:descendantFocusability="beforeDescendants"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        style="@style/DemographicsDocsHeaderStyle"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detailsHeading"
            style="@style/DemographicsDocsHeaderTitleStyle"
            android:text="@string/detailsHeadingTextView"/>

        <TextView
            android:id="@+id/detailsSubHeading"
            style="@style/DemographicsDocsHeaderSubtitleStyle"
            android:layout_marginBottom="@dimen/demogr_details_margin_top_detials_container"
            android:text="@string/detailsSubHeadingTextView"/>

    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="4dp">

            <FrameLayout
                android:id="@+id/demographicsAddressPicCapturer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                style="@style/DemographicsContainerStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/demographics_docs_section_margin_top"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/raceTextView"
                        style="@style/DemographicsDetailsLabelStyle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/raceLabel"/>

                    <TextView
                        android:id="@+id/raceListTextView"
                        style="@style/DemographicsDocsClickableTextStyle"
                        android:text="@string/demogr_tv_choose_label"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/demo_view_height"
                    android:layout_marginBottom="@dimen/divider_margin_bottom"
                    android:layout_marginTop="@dimen/divider_margin_top"
                    android:background="@color/light_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/demogr_details_container_top"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ethnicityTextView"
                        style="@style/DemographicsDetailsLabelStyle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/ethnicityLabel"/>

                    <TextView
                        android:id="@+id/ethnicityListTextView"
                        style="@style/DemographicsDocsClickableTextStyle"
                        android:text="@string/chooseTextView"
                        android:textColor="@color/bright_cerulean"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/demo_view_height"
                    android:layout_marginBottom="@dimen/divider_margin_bottom"
                    android:layout_marginTop="@dimen/divider_margin_top"
                    android:background="@color/light_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/demogr_details_container_top"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/demogrDetailsGenderLabel"
                        style="@style/DemographicsDetailsLabelStyle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/review_gender_label"/>

                    <TextView
                        android:id="@+id/demogrDetailsGenderClickable"
                        style="@style/DemographicsDocsClickableTextStyle"
                        android:text="@string/chooseTextView"
                        android:textColor="@color/bright_cerulean"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/demo_view_height"
                    android:layout_marginBottom="@dimen/divider_margin_bottom"
                    android:layout_marginTop="@dimen/divider_margin_top"
                    android:background="@color/light_gray"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/demogrDetailsDobInputText"
                        style="@style/SigninSignupTextInputStyle"
                        android:layout_marginStart="0dp"
                        android:paddingEnd="0dp"
                        android:paddingStart="0dp"
                        app:hintTextAppearance="@style/FloatingLabelStyle">

                        <EditText
                            android:id="@+id/demogrDetailsDobEdit"
                            style="@style/DemographicsDetailsEditStyle"
                            android:hint="@string/demoDobLabel"
                            android:inputType="date"/>
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:id="@+id/demogrDetailsDobHint"
                        style="@style/SignupRequireHintStyle"
                        android:text="@string/dob_format"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/demogr_details_section_top_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/demogrDetailsAllergiesLabel"
                        style="@style/DemographicsSectionLabelStyle"
                        android:layout_width="wrap_content"
                        android:text="@string/demogr_details_allergies_label"/>

                    <TextView
                        android:id="@+id/demogrDetailsAllergiesHint"
                        style="@style/SignupRequireHintStyle"
                        android:layout_width="0dp"
                        android:layout_marginStart="@dimen/demogr_details_require_hint_left_margin"
                        android:layout_weight="1"
                        android:text="@string/hint_optional"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/demogr_details_add_optional_item_top"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/demogrDetailsAddAllergyLabel"
                        style="@style/DemographicsDetailsLabelStyle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/demogr_details_allergy_add_label"/>

                    <TextView
                        android:id="@+id/demogrDetailsAddAllergyClickable"
                        style="@style/DemographicsDocsClickableTextStyle"
                        android:gravity="end"
                        android:text="@string/demogr_details_add_another_clickable"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/demo_view_height"
                    android:layout_marginBottom="@dimen/divider_margin_bottom"
                    android:layout_marginTop="@dimen/divider_margin_top"
                    android:background="@color/light_gray"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/demogrDetailsAllergiesRecView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/signup_optional_label_margin_left_right"
                    android:layout_marginStart="@dimen/signup_optional_label_margin_left_right"/>

                <TextView
                    android:id="@+id/demogrDetailsAllergyAddUnlisted"
                    style="@style/DemographicsDetailsAddUnlistedStyle"
                    android:text="@string/demogr_details_add_unlisted_allergies_clickable"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/demo_view_height"
                    android:layout_marginBottom="@dimen/divider_margin_bottom"
                    android:layout_marginTop="@dimen/divider_margin_top"
                    android:background="@color/light_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/demogr_details_section_top_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/demogrDetailsMedLabel"
                        style="@style/DemographicsSectionLabelStyle"
                        android:layout_width="wrap_content"
                        android:text="@string/demogr_details_medications_you_re_taking"/>

                    <TextView
                        android:id="@+id/demogrDetailsMedHint"
                        style="@style/SignupRequireHintStyle"
                        android:layout_marginStart="10dp"
                        android:text="@string/demogr_details_optional"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/demogr_details_add_optional_item_top"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/demogrDetailsMedAddLabel"
                        style="@style/DemographicsDetailsLabelStyle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/demographics_details_medication_label"/>

                    <TextView
                        android:id="@+id/demogrDetailsAddAnotherMedClickable"
                        style="@style/DemographicsDocsClickableTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="@string/demogr_details_add_another_med_clickable"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/demo_view_height"
                    android:layout_marginBottom="@dimen/divider_margin_bottom"
                    android:layout_marginTop="@dimen/divider_margin_top"
                    android:background="@color/light_gray">
                </View>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/demogrDetailsMedRecView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/signup_optional_label_margin_left_right"
                    android:layout_marginStart="@dimen/signup_optional_label_margin_left_right"/>

                <TextView
                    android:id="@+id/demogrDetailsMedAddUnlisted"
                    style="@style/DemographicsDetailsAddUnlistedStyle"
                    android:text="@string/demogr_details_add_unlisted_medications"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/divider_margin_bottom"
                    android:layout_marginTop="@dimen/divider_margin_top"
                    android:background="@color/light_gray">
                </View>

            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <Button
        android:id="@+id/demographicsDetailsNextButton"
        style="@style/DemographicsNextButtonStyle"
        android:text="@string/next_Button"/>

</LinearLayout>

