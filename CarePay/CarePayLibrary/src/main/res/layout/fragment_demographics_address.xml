<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/linearLayout"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        style="@style/DemographicsDocsHeaderStyle"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/addressHeading"
            style="@style/DemographicsDocsHeaderTitleStyle"
            android:text="@string/AddressHeadingTextView"/>

        <TextView
            android:id="@+id/addressSubHeading"
            style="@style/DemographicsDocsHeaderSubtitleStyle"
            android:text="@string/AddressSubHeadingTextView"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/demographics_docs_header_left_right_margin"
        android:layout_marginRight="@dimen/demographics_docs_header_left_right_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/address1TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorTextAppearance="@style/errorTextAppearance">

                <EditText
                    android:id="@+id/addressEditTextId"
                    style="@style/DemographicsFragmentsTextInputLayoutStyle."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/Address1EditText"
                    android:nextFocusForward="@+id/addressEditText2Id"
                    android:singleLine="true"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/address2TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorTextAppearance="@style/errorTextAppearance">

                <EditText
                    android:id="@+id/addressEditText2Id"
                    style="@style/DemographicsFragmentsTextInputLayoutStyle."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/Address2EditText"
                    android:nextFocusForward="@+id/zipCodeId"
                    android:singleLine="true"/>
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/zipCodeTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorTextAppearance="@style/errorTextAppearance">

                <EditText
                    android:id="@+id/zipCodeId"
                    style="@style/DemographicsFragmentsTextInputLayoutStyle."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/ZipCodeEditText"
                    android:maxLength="6"
                    android:nextFocusForward="@+id/cityId"
                    android:singleLine="true"/>

            </android.support.design.widget.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/cityTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:errorTextAppearance="@style/errorTextAppearance">

                    <EditText
                        android:id="@+id/cityId"
                        style="@style/DemographicsFragmentsTextInputLayoutStyle."
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:hint="@string/CityEditText"
                        android:imeOptions="actionNext"
                        android:maxLength="255"
                        android:nextFocusRight="@+id/autoTextCompleteStates"
                        android:singleLine="true"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/stateTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:errorTextAppearance="@style/errorTextAppearance">

                    <AutoCompleteTextView
                        android:id="@+id/autoTextCompleteStates"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/StateEditText"
                        android:imeOptions="actionNext"
                        android:nextFocusForward="@+id/phNoTextInputLayout"
                        android:singleLine="true"/>

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/phNoTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:errorTextAppearance="@style/errorTextAppearance">

                <EditText
                    android:id="@+id/phNoEditText"
                    style="@style/DemographicsFragmentsTextInputLayoutStyle."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/PhoneNumberEditText"
                    android:imeOptions="actionDone"
                    android:inputType="phone"
                    android:maxLength="10"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/demographicsNextButton"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_weight="0"
        android:background="@drawable/button_selector"
        android:fontFamily="GothamRounded-Medium"
        android:gravity="center"
        android:text="@string/next_Button"
        android:textColor="@color/white"
        android:textSize="13sp"/>
</LinearLayout>

