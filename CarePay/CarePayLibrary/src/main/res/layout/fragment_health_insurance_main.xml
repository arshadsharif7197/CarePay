<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="@dimen/dimen_114dp"
        android:paddingStart="@dimen/dimen_114dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_60dp"
            android:paddingBottom="@dimen/dimen_15dp"
            android:paddingTop="@dimen/dimen_24dp">

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/health_insurance_provider_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.4"
                android:gravity="start"
                android:textColor="@color/textview_default_textcolor"
                android:textSize="@dimen/text_size_17"
                app:customAssetFont="proxima_nova_regular" />

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/health_insurance_providers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="end"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_16"
                app:customAssetFont="proxima_nova_semi_bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/gray_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_15dp"
            android:paddingTop="@dimen/dimen_24dp">

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/health_insurance_plan_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.4"
                android:gravity="start"
                android:textColor="@color/textview_default_textcolor"
                android:textSize="@dimen/text_size_17"
                app:customAssetFont="proxima_nova_regular" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6">

                <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                    android:id="@+id/health_insurance_plans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/text_size_14"
                    app:customAssetFont="proxima_nova_semi_bold" />

                <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                    android:id="@+id/health_insurance_choose_plans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_16"
                    android:visibility="gone"
                    app:customAssetFont="proxima_nova_semi_bold" />
            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/gray_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:paddingBottom="@dimen/dimen_15dp"
            android:paddingTop="@dimen/dimen_25dp">

            <com.carecloud.carepaylibray.customcomponents.CarePayTextInputLayout
                android:id="@+id/health_insurance_card_number_layout"
                style="@style/TextInputLayoutStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:layout_weight="1"
                app:customAssetFont="proxima_nova_semi_bold"
                app:hintTextAppearance="@style/FloatingLabelStyle">

                <com.carecloud.carepaylibray.customcomponents.CarePayEditText
                    android:id="@+id/health_insurance_card_number"
                    style="@style/EditTextStyle"
                    android:inputType="number"
                    app:customAssetFont="proxima_nova_regular" />
            </com.carecloud.carepaylibray.customcomponents.CarePayTextInputLayout>


            <com.carecloud.carepaylibray.customcomponents.CarePayTextInputLayout
                android:id="@+id/health_insurance_group_number_layout"
                style="@style/TextInputLayoutStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:layout_weight="1"
                app:customAssetFont="proxima_nova_semi_bold"
                app:hintTextAppearance="@style/FloatingLabelStyle">

                <com.carecloud.carepaylibray.customcomponents.CarePayEditText
                    android:id="@+id/health_insurance_group_number"
                    style="@style/EditTextStyle"
                    android:inputType="number"
                    app:customAssetFont="proxima_nova_regular" />
            </com.carecloud.carepaylibray.customcomponents.CarePayTextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_15dp"
            android:paddingTop="@dimen/dimen_24dp">

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/health_insurance_type_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.7"
                android:gravity="start"
                android:textColor="@color/textview_default_textcolor"
                android:textSize="@dimen/text_size_17"
                app:customAssetFont="proxima_nova_regular" />

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/health_insurance_types"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="end"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_16"
                app:customAssetFont="proxima_nova_semi_bold" />

            <!--<Spinner-->
            <!--android:id="@+id/health_insurance_types"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:layout_weight="0.3"-->
            <!--android:gravity="end" />-->
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/gray_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/health_insurance_front_photo"
                    android:layout_width="@dimen/dimen_230dp"
                    android:layout_height="@dimen/dimen_138dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icn_camera"
                    tools:ignore="ContentDescription" />

                <com.carecloud.carepaylibray.customcomponents.CarePayButton
                    android:id="@+id/take_front_photo_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_13dp"
                    android:background="@drawable/round_border_button_bg"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dimen_10dp"
                    android:paddingTop="@dimen/dimen_10dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_13"
                    app:customAssetFont="gotham_rounded_medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/health_insurance_back_photo"
                    android:layout_width="@dimen/dimen_230dp"
                    android:layout_height="@dimen/dimen_138dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icn_camera"
                    tools:ignore="ContentDescription" />

                <com.carecloud.carepaylibray.customcomponents.CarePayButton
                    android:id="@+id/take_back_photo_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_13dp"
                    android:background="@drawable/round_border_button_bg"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dimen_10dp"
                    android:paddingTop="@dimen/dimen_10dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_13"
                    app:customAssetFont="gotham_rounded_medium" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginTop="55dp"
        android:background="@color/light_gray_dialog" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_15dp">

        <com.carecloud.carepaylibray.customcomponents.CarePayButton
            android:id="@+id/health_insurance_dont_have_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_9dp"
            android:layout_weight="1"
            android:background="@drawable/round_border_button_bg"
            android:gravity="center"
            android:paddingBottom="@dimen/dimen_14dp"
            android:paddingTop="@dimen/dimen_14dp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_22"
            app:customAssetFont="gotham_rounded_medium"
            tools:ignore="ButtonStyle" />

        <com.carecloud.carepaylibray.customcomponents.CarePayButton
            android:id="@+id/health_insurance_add_new_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_9dp"
            android:layout_weight="1"
            android:background="@drawable/bg_lite_gray_button"
            android:gravity="center"
            android:paddingBottom="@dimen/dimen_14dp"
            android:paddingTop="@dimen/dimen_14dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_22"
            app:customAssetFont="gotham_rounded_medium"
            tools:ignore="ButtonStyle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="vertical"
        android:padding="0dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/insurance_detail_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_10dp" />
    </LinearLayout>

    <LinearLayout
        style="@style/DemographicsDocsHeaderStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="vertical"
        android:padding="0dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/insurancesTitleLabel"
            style="@style/reviewDemographicBlue."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_36dp"
            android:textAlignment="textStart" />

        <LinearLayout
            android:id="@+id/setupContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:orientation="vertical"
            android:padding="0dp">

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/demographicsInsuranceSwitch"
                style="@style/DemographicsDocsLabelStyle"
                android:layout_width="match_parent"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="@dimen/demographics_docs_section_margin_top"
                android:checked="false"
                android:theme="@style/HaveHealthInsurance" />

            <View
                style="@style/Review_Screen_View_Style"
                android:layout_width="match_parent" />

            <LinearLayout
                android:id="@+id/setupInsuranceHolders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:orientation="horizontal"
                android:padding="0dp"
                android:visibility="gone">

                <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                    android:id="@+id/setupInsuranceLabel"
                    style="@style/DemographicsDocsLabelStyle"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:textAlignment="viewStart"
                    android:textStyle="normal" />

                <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                    android:id="@+id/setupLabel"
                    style="@style/DemographicsDocsLabelStyle"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal" />
            </LinearLayout>

            <View
                android:id="@+id/healthinsurancereviewBottomView"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setupInsurancePracticeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:orientation="vertical"
            android:padding="0dp">

            <RadioGroup
                android:id="@+id/setupInsuranceGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/dontHaveInsurance"
                    style="@style/DemographicsDocsLabelStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:checked="true"
                    android:drawableEnd="@drawable/cell_radio"
                    android:gravity="start"
                    android:theme="@style/HaveHealthInsurance" />

                <View
                    style="@style/Consent_Form_View_Style"
                    android:layout_width="match_parent" />

                <RadioButton
                    android:id="@+id/haveInsurance"
                    style="@style/DemographicsDocsLabelStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableEnd="@drawable/cell_radio"
                    android:gravity="start"
                    android:theme="@style/HaveHealthInsurance" />
            </RadioGroup>

            <Button
                android:id="@+id/addNewButton"
                style="@style/DemographicsDocsButtonStyle"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:enabled="false"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/existingContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:orientation="vertical"
            android:padding="0dp">

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dimen_10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:gravity="end"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/addInsuranceButton"
                    style="@style/DemographicsDocsButtonStyle"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>