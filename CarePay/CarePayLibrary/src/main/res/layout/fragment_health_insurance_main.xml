<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="0dp"
    android:layout_margin="0dp"
    android:focusable="true"
    android:focusableInTouchMode="true">



        <LinearLayout
            style="@style/DemographicsDocsHeaderStyle"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/insurancesTitleLabel"
                style="@style/DemographicsDocsLabelStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:layout_marginTop="@dimen/dimen_36dp"
                android:textSize="@dimen/dimen_14dp"
                app:customAssetFont="proxima_nova_regular"
                />



            <LinearLayout
                android:id="@+id/setupContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:orientation="vertical">



                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/demographicsInsuranceSwitch"
                    style="@style/DemographicsDocsLabelStyle"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:checked="false"
                    android:layout_marginEnd="15dp"
                    android:textSize="@dimen/dimen_16dp"
                    android:theme="@style/HaveHealthInsurance"
                    />

                <View
                    style="@style/Review_Screen_View_Style"
                    android:layout_width="match_parent" />

                <LinearLayout
                    android:id="@+id/setupInsuranceHolders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:padding="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                        android:id="@+id/setupInsuranceLabel"
                        style="@style/DemographicsDocsLabelStyle"
                        android:layout_width="wrap_content"
                        android:textStyle="normal"
                        android:textAlignment="viewStart"
                        android:layout_marginEnd="15dp"
                        app:customAssetFont="proxima_nova_regular"
                    />

                    <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                        android:id="@+id/setupLabel"
                        style="@style/DemographicsDocsLabelStyle"
                        android:layout_width="match_parent"
                        android:textAlignment="viewEnd"
                        android:textStyle="normal"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginEnd="12dp"
                        app:customAssetFont="proxima_nova_regular" />

                </LinearLayout>

                <View
                    android:id="@+id/setupDivider"
                    style="@style/Review_Screen_View_Style"
                    android:layout_width="match_parent"
                    android:visibility="gone"/>

                <View
                    android:id="@+id/healthinsurancereviewBottomView"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/setupInsurancePracticeContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:padding="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/setupInsuranceGroup"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <RadioButton
                        android:id="@+id/dontHaveInsurance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableEnd="@drawable/cell_radio"
                        android:gravity="start"
                        style="@style/DemographicsDocsLabelStyle"
                        android:theme="@style/HaveHealthInsurance"
                        android:checked="true" />

                    <View
                        style="@style/Consent_Form_View_Style"
                        android:layout_width="match_parent" />

                    <RadioButton
                        android:id="@+id/haveInsurance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableEnd="@drawable/cell_radio"
                        android:gravity="start"
                        style="@style/DemographicsDocsLabelStyle"
                        android:theme="@style/HaveHealthInsurance" />
                </RadioGroup>
                <Button
                    android:id="@+id/addNewButton"
                    style="@style/DemographicsDocsButtonStyle"
                    android:enabled="false"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/existingContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/insurance_detail_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dimen_10dp" />

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:gravity="right"
                    android:paddingStart="0dp">

                    <Button
                        android:id="@+id/addInsuranceButton"
                        style="@style/DemographicsDocsButtonStyle"
                        android:textAlignment="center"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"/>
                </LinearLayout>
             </LinearLayout>

        </LinearLayout>



</LinearLayout>