<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/review_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="17.0dp"
        android:layout_marginRight="17.0dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/reviewtitle"
            style="@style/DemographicsFragmentsHeadingStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Review Information" />

        <TextView
            android:id="@+id/reviewSubtitle"
            style="@style/DemographicsFragmentsSubHeadingStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/review_subtitle" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="9dp">

            <TextView
                style="@style/reviewDemographicBlue."
                android:id="@+id/demographicSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/demographics_title" />



            <TextView
                android:id="@+id/reviewRaceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RACE"
                style="reviewDemographiclabel"
                android:layout_marginTop="16.5dp" />

            <TextView
                style="reviewDemographictext"
                android:id="@+id/reviewRaceEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other" />


            <TextView

                style="reviewDemographiclabel"
                android:id="@+id/reviewEthnicityLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ETHNICITY"
                android:layout_marginTop="16.5dp" />

            <TextView
                style="reviewDemographictext"
                android:id="@+id/reviewEthnicityEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HISPANIC" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="9dp">

            <TextView
                style="@style/reviewDemographicBlue."
                android:id="@+id/healthInsuranceSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health Insurance"
                 />


            <TextView

                style="reviewDemographiclabel"
                android:id="@+id/reviewCompanyLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COMPANY"
                android:layout_marginTop="16.5dp" />

            <TextView
                style="reviewDemographictext"
                android:id="@+id/reviewCompanyEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aetna" />


            <TextView
                style="reviewDemographiclabel"
                android:id="@+id/reviewPlanLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PLAN"
                android:layout_marginTop="16.5dp" />

            <TextView
                style="reviewDemographictext"
                android:id="@+id/reviewPlanNoEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aetna Select"/>


            <TextView
                style="reviewDemographiclabel"
                android:id="@+id/reviewInsuranceCardNoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insurance Card Number"
                android:layout_marginTop="16.5dp"/>

            <TextView
                style="reviewDemographictext"
                android:id="@+id/reviewInsuranceCardNoEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234567890" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_marginTop="34.5dp"
                android:id="@+id/YesCorrectButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_blue"
                android:text="YES, THESE ARE CORRECT"
                android:textColor="@color/white" />


            <Button

                android:id="@+id/needUpdateButton"
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="14dp"
                android:background="@drawable/button_background"
                android:text="I NEED TO UPDATE THIS INFORMATION"
                android:textColor="@color/bright_cerulean" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>