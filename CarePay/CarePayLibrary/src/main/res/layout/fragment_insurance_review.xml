<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reviewlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_review" />

    <ProgressBar
        android:id="@+id/demographicReviewProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-8dp"
        android:indeterminate="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/review_screen_right_margin"
            android:layout_marginStart="@dimen/review_screen_left_margin"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reviewtitle"
                style="@style/DemographicsFragmentsHeadingStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/reviewSubtitle"
                style="@style/DemographicsFragmentsSubHeadingStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/reviewpersonalInformationLabel"
                    style="@style/reviewDemographicBlue."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/review_default_heaight"
                    android:layout_marginTop="@dimen/review_header_lablemargin_top">

                    <TextView
                        android:id="@+id/reviewFirstNameLabel"
                        style="@style/reviewDemographiclabel."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/reviewFirstNameTextView"
                        style="@style/reviewDemographictext."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23.5dp"
                        android:text="" />
                </FrameLayout>

                <View
                    style="@style/Review_Screen_View_Style"
                    android:layout_width="match_parent" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/review_default_heaight"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/reviewMiddleNameLabel"
                        style="@style/reviewDemographiclabel."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/reviewMiddelNameTextView"
                        style="@style/reviewDemographictext."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23.5dp"
                        android:text="" />
                </FrameLayout>

                <View
                    style="@style/Review_Screen_View_Style"
                    android:layout_width="match_parent" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/review_default_heaight">

                    <TextView
                        android:id="@+id/reviewLastNameLabel"
                        style="@style/reviewDemographiclabel."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/reviewLastNameTextView"
                        style="@style/reviewDemographictext."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23.5dp"
                        android:text="" />
                </FrameLayout>

                <View
                    style="@style/Review_Screen_View_Style"
                    android:layout_width="match_parent" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/review_default_heaight">

                    <TextView
                        android:id="@+id/reviewDOBLabel"
                        style="@style/reviewDemographiclabel."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/reviewDOBTextView"
                        style="@style/reviewDemographictext."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23.5dp"
                        android:text="" />
                </FrameLayout>

                <View
                    style="@style/Review_Screen_View_Style"
                    android:layout_width="match_parent" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/review_default_heaight">

                    <TextView
                        android:id="@+id/reviewPhoneNumberLabel"
                        style="@style/reviewDemographiclabel."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/reviewPhoneNumberTextView"
                        style="@style/reviewDemographictext."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23.5dp"
                        android:text="" />
                </FrameLayout>

                <View
                    style="@style/Review_Screen_View_Style"
                    android:layout_width="match_parent" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/demographicSectionLabel"
                    style="@style/reviewDemographicBlue."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/review_default_heaight"
                    android:layout_marginTop="18dp">

                    <TextView
                        android:id="@+id/reviewGenderLabel"
                        style="@style/reviewDemographicrelativelayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/reviewGenderTextView"
                        style="@style/reviewDemographicrelativelayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="" />
                </RelativeLayout>

                <View
                    style="@style/Review_Screen_View_Style"
                    android:layout_width="match_parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/reviewRaceLabel"
                        style="@style/reviewDemographicrelativelayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:layout_weight=".30" />

                    <TextView
                        android:id="@+id/reviewRaceTextView"
                        style="@style/reviewDemographicrelativelayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:layout_weight=".70"
                        android:text="" />
                </LinearLayout>

                <View
                    style="@style/Review_Screen_View_Style"
                    android:layout_width="match_parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/reviewEthnicityLabel"
                        style="@style/reviewDemographicrelativelayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:layout_weight=".35" />

                    <TextView
                        android:id="@+id/reviewEthnicityTextView"
                        style="@style/reviewDemographicrelativelayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:layout_weight=".65"
                        android:text="" />
                </LinearLayout>

                <View
                    style="@style/Review_Screen_View_Style"
                    android:layout_width="match_parent" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/review_default_heaight">

                    <TextView
                        android:id="@+id/reviewDriverLicenseLabel"
                        style="@style/reviewDemographiclabel."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/reviewDriverLicenseTextView"
                        style="@style/reviewDemographictext."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23.5dp"
                        android:text="" />
                </FrameLayout>

                <View
                    style="@style/Review_Screen_View_Style"
                    android:layout_width="match_parent" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/reviewAddress"
                    style="@style/reviewDemographicBlue."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/review_default_heaight"
                    android:layout_marginTop="@dimen/review_header_lablemargin_top">

                    <TextView
                        android:id="@+id/reviewAddress1label"
                        style="@style/reviewDemographiclabel."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/reviewAddress1TextView"
                        style="@style/reviewDemographictext."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23.5dp"
                        android:text="" />
                </FrameLayout>

                <View
                    style="@style/Review_Screen_View_Style"
                    android:layout_width="match_parent" />

                <FrameLayout
                    android:id="@+id/address2layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/review_default_heaight">

                    <TextView
                        android:id="@+id/reviewAddress2label"
                        style="@style/reviewDemographiclabel."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/reviewAddress2TextView"
                        style="@style/reviewDemographictext."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23.5dp"
                        android:text="" />
                </FrameLayout>

                <View
                    android:id="@+id/address2labelview"
                    style="@style/Review_Screen_View_Style"
                    android:layout_width="match_parent" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/review_default_heaight">

                    <TextView
                        android:id="@+id/reviewZipcodeLabel"
                        style="@style/reviewDemographiclabel."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/reviewZipcodeTextView"
                        style="@style/reviewDemographictext."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23.5dp"
                        android:text="" />

                </FrameLayout>

                <View
                    style="@style/Review_Screen_View_Style"
                    android:layout_width="match_parent" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/review_default_heaight"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/review_default_heaight">

                        <TextView
                            android:id="@+id/reviewCityLabel"
                            style="@style/reviewDemographiclabel."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start" />

                        <TextView
                            android:id="@+id/reviewCityTextView"
                            style="@style/reviewDemographictext."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="23.5dp"
                            android:gravity="start"
                            android:text="" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/review_default_heaight"
                            android:layout_gravity="end"
                            android:layout_marginStart="150dp">

                            <TextView
                                android:id="@+id/reviewStateLabel"
                                style="@style/reviewDemographiclabel."
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="100dp"/>

                            <TextView
                                android:id="@+id/reviewStateTextView"
                                style="@style/reviewDemographictext."
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="100dp"
                                android:layout_marginTop="23.5dp"
                                android:text="" />
                        </FrameLayout>

                    </FrameLayout>

                </LinearLayout>


                <View
                    style="@style/Review_Screen_View_Style"
                    android:layout_width="match_parent" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/insurance1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/healthInsurance1SubTitle"
                    style="@style/reviewDemographicBlue."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/review_default_heaight"
                    android:layout_marginTop="@dimen/review_header_lablemargin_top">

                    <TextView
                        android:id="@+id/reviewCompanyLabel"
                        style="@style/reviewDemographiclabel."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/reviewCompanyTextView"
                        style="@style/reviewDemographictext."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23.5dp"
                        android:text="" />
                </FrameLayout>

                <View
                    style="@style/Review_Screen_View_Style"
                    android:layout_width="match_parent" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/review_default_heaight">

                    <TextView
                        android:id="@+id/reviewPlanLabel"
                        style="@style/reviewDemographiclabel."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/reviewPlanTextView"
                        style="@style/reviewDemographictext."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23.5dp"
                        android:text="" />
                </FrameLayout>

                <View
                    style="@style/Review_Screen_View_Style"
                    android:layout_width="match_parent" />


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/review_default_heaight">

                    <TextView
                        android:id="@+id/reviewInsuranceCardNoLabel"
                        style="@style/reviewDemographiclabel."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/reviewInsurancePolicyNoTextView"
                        style="@style/reviewDemographictext."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23.5dp"
                        android:text="" />
                </FrameLayout>

                <View
                    style="@style/Review_Screen_View_Style"
                    android:layout_width="match_parent" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/insurnace2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/healthInsurance2SubTitle"
                    style="@style/reviewDemographicBlue."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/review_screen_healthinsurance" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/review_default_heaight"
                    android:layout_marginTop="@dimen/review_header_lablemargin_top">

                    <TextView
                        android:id="@+id/reviewCompany2Label"
                        style="@style/reviewDemographiclabel."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/reviewCompany2TextView"
                        style="@style/reviewDemographictext."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23.5dp"
                        android:text="" />
                </FrameLayout>

                <View
                    style="@style/Review_Screen_View_Style"
                    android:layout_width="match_parent" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/review_default_heaight">

                    <TextView
                        android:id="@+id/reviewPlan2Label"
                        style="@style/reviewDemographiclabel."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/reviewPlan2TextView"
                        style="@style/reviewDemographictext."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23.5dp"
                        android:text="" />
                </FrameLayout>

                <View
                    style="@style/Review_Screen_View_Style"
                    android:layout_width="match_parent" />


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/review_default_heaight">

                    <TextView
                        android:id="@+id/reviewInsurance2CardNoLabel"
                        style="@style/reviewDemographiclabel."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/reviewInsurance2PolicyNoTextView"
                        style="@style/reviewDemographictext."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23.5dp"
                        android:text="" />
                </FrameLayout>

                <View
                    style="@style/Review_Screen_View_Style"
                    android:layout_width="match_parent" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/insurance3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/healthInsurance3SubTitle"
                    style="@style/reviewDemographicBlue."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/review_default_heaight"
                    android:layout_marginTop="@dimen/review_header_lablemargin_top">

                    <TextView
                        android:id="@+id/reviewCompany3Label"
                        style="@style/reviewDemographiclabel."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/reviewCompany3TextView"
                        style="@style/reviewDemographictext."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23.5dp"
                        android:text="" />
                </FrameLayout>

                <View
                    style="@style/Review_Screen_View_Style"
                    android:layout_width="match_parent" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/review_default_heaight">

                    <TextView
                        android:id="@+id/reviewPlan3Label"
                        style="@style/reviewDemographiclabel."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/reviewPlan3TextView"
                        style="@style/reviewDemographictext."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23.5dp"
                        android:text="" />
                </FrameLayout>

                <View
                    style="@style/Review_Screen_View_Style"
                    android:layout_width="match_parent" />


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/review_default_heaight">

                    <TextView
                        android:id="@+id/reviewInsurance3CardNoLabel"
                        style="@style/reviewDemographiclabel."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/reviewInsurance3PolicyNoTextView"
                        style="@style/reviewDemographictext."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23.5dp"
                        android:text="" />
                </FrameLayout>

                <View
                    style="@style/Review_Screen_View_Style"
                    android:layout_width="match_parent" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/YesCorrectButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="27.0dp"
                    android:background="@drawable/button_selector"
                    android:textColor="@color/white" />


                <Button
                    android:id="@+id/needUpdateButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/button_background"
                    android:textColor="@color/bright_cerulean" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>