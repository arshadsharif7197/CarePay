<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/review_default_heaight"
    android:layout_marginBottom="@dimen/respons_detail_margin_bottom"
    android:layout_marginTop="@dimen/respons_detail_margin_bottom"
    android:paddingEnd="@dimen/dimen_14dp"
    android:paddingStart="@dimen/dimen_14dp"
    android:orientation="horizontal"
    android:background="@drawable/border_set">

    <com.carecloud.carepaylibray.customcomponents.CarePayTextView
        android:id="@+id/lineItemNameLabel"
        style="@style/ResponsDetailLabelStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.65"
        android:gravity="start"
        android:layout_gravity="center"
        app:customAssetFont="proxima_nova_regular" />

    <com.carecloud.carepaylibray.customcomponents.CarePayTextView
        android:id="@+id/lineItemNameLabelDetails"
        style="@style/ResponsDetailStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.15"
        android:gravity="end"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimary"
        app:customAssetFont="proxima_nova_semi_bold"/>

    <com.carecloud.carepaylibray.customcomponents.CarePayTextView
        android:id="@+id/lineItemAmountLabel"
        style="@style/ResponsDetailStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:gravity="end"
        android:layout_gravity="center"
        app:customAssetFont="proxima_nova_semi_bold" />

</LinearLayout>