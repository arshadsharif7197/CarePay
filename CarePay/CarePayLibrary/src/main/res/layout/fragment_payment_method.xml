<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/toolbar_responsibility" />

    <ProgressBar
        android:id="@+id/paymentMethodFragmentProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-8dp"
        android:indeterminate="true" />

    <ScrollView
        android:id="@+id/scrollview_choices"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:id="@+id/consenrform1_mainContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/buttonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/payment_method_parent_layout_padding">

                <RadioGroup
                    android:id="@+id/paymentMethodsRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_20dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"></RadioGroup>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/paymentChoiceButton"
        style="@style/PaymentButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/paymentMethodsRadioGroup"
        android:layout_marginTop="@dimen/payment_method_layout_checkbox_margin"
        android:background="@drawable/button_selector"
        android:layout_margin="@dimen/dimen_5dp"/>
    <FrameLayout
        android:id="@+id/dynamic_wallet_button_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/payment_method_layout_checkbox_margin"
        android:layout_margin="@dimen/dimen_1dp"
        android:layout_below="@+id/paymentChoiceButton"/>

    <Button
        android:id="@+id/createPaymentPlanButton"
        style="@style/PaymentButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/paymentChoiceButton"
        android:layout_marginTop="@dimen/payment_method_layout_checkbox_margin"
        android:background="@drawable/button_blue_border"
        android:textColor="@color/bright_cerulean"
        android:layout_margin="@dimen/dimen_5dp"/>

</LinearLayout>
