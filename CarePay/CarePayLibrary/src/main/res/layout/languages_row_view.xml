<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/language_card_height"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:focusable="true"
       android:layout_marginBottom="1dp"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/languageName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/language_text_left_margin"
                android:layout_marginTop="@dimen/language_row_margin"
                android:layout_marginBottom="@dimen/language_row_margin"
                android:text="Select Language"
                android:textColor="@color/slateGray"
                android:textSize="@dimen/textview_default_textsize" />

            <ImageView
                android:id="@+id/languageRadioImage"
                android:layout_width="@dimen/language_radiobutton"
                android:layout_height="@dimen/language_radiobutton"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/language_radio_image_rightmargin"
                android:layout_marginTop="@dimen/language_row_margin"
                android:layout_marginBottom="@dimen/language_row_margin"
                android:buttonTint="@color/colorPrimary"
                android:clickable="false" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>