<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_apt"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/dialogAppointHeaderImageView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/apt_imgview_ht"
        android:layout_gravity="left"
        android:gravity="left"
        android:text="@string/close"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/apt_dl_margin_bottom" />
    <TextView
        android:id="@+id/dialogAppointEditTextView"
        android:layout_width="match_parent"
        android:gravity="right"
        android:layout_height="@dimen/apt_imgview_ht"
        android:layout_gravity="right"
        android:text="@string/edit_appointment_dialog"
        android:textColor="@color/white"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/apt_dl_margin_bottom" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/dialogHeaderlayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/apt_dl_header_ht"
            android:layout_gravity="center"
            android:background="@color/light_gray_dialog"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/apptDateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/apt_dl_appt_date_margin"
                android:gravity="center_horizontal"
                android:textColor="@color/textview_default_textcolor"
                android:textSize="@dimen/apt_dl_text_date" />

            <TextView
                android:id="@+id/apptTimeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/apt_dl_appt_time_margin"
                android:gravity="center_horizontal"
                android:textColor="@color/slateGray"
                android:textSize="@dimen/apt_dl_textview_size" />

        </LinearLayout>

        <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/apptUserPicCardView"
            android:layout_width="@dimen/apt_dl_image_ht_wdh"
            android:layout_height="@dimen/apt_dl_image_ht_wdh"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/apt_dl_appt_shortname_margin"
            android:elevation="@dimen/apt_dl_image_elevation"
            android:innerRadius="@dimen/apt_dl_zero_ht_wdh"
            android:shape="ring"
            android:thicknessRatio="1.9"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/apt_dl_image_radius">

            <ImageView
                android:id="@+id/apptUserPicImageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/apt_dl_image_ht_wdh"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icn_signup_step_2_user_on"></ImageView>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/apptShortnameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/apt_dl_appt_shortname_margin"
            android:background="@drawable/round_tv"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/white"
            android:textSize="@dimen/apt_dl_text_big"
            android:textStyle="bold"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/apt_dl_appt_time_margin"
            android:orientation="vertical"
            android:paddingBottom="@dimen/apt_dl_margin"
            android:paddingLeft="@dimen/apt_dl_margin"
            android:paddingRight="@dimen/apt_dl_margin">

            <TextView
                android:id="@+id/apptNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/apt_dl_text_big" />

            <TextView
                android:id="@+id/apptTypeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/apt_dialog_appoint_dail_margin"
                android:gravity="center_horizontal"
                android:textColor="@color/bermudagrey"
                android:textSize="@dimen/textview_textsize" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/apt_dl_boader_ht"
                android:layout_marginTop="@dimen/apt_dl_margin"
                android:background="@color/light_gray_dialog" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/apt_dl_view_margin"
                android:layout_marginBottom="@dimen/apt_dl_view_margin"
                android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/apt_dl_zero_ht_wdh"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/apptAddressHeaderTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:ellipsize="none"
                    android:singleLine="true"
                    android:lineSpacingExtra="@dimen/apt_dialog_appoint_dail_margin"
                    android:maxLines="3"
                    android:scrollHorizontally="false"
                    android:text="Fillingim"
                    android:textColor="@color/payne_gray"
                    android:textSize="@dimen/textview_textsize" />
                <TextView
                    android:id="@+id/apptAddressTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="none"
                    android:lineSpacingExtra="@dimen/apt_dialog_appoint_dail_margin"
                    android:maxLines="2"
                    android:text="2451 Fillingim St, Mobile, AL 36617, United States"
                    android:textColor="@color/bermudagrey"
                    android:textSize="@dimen/textview_textsize" />
            </LinearLayout>
                <ImageView
                    android:id="@+id/apptLocationImageView"
                    android:layout_width="@dimen/apt_dl_zero_ht_wdh"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/apt_dialog_appoint_dail_margin"
                    android:layout_weight="0.15"
                    android:src="@drawable/icn_appointment_card_directions" />

                <ImageView
                    android:id="@+id/apptDailImageView"
                    android:layout_width="@dimen/apt_dl_zero_ht_wdh"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/apt_dialog_appoint_dail_margin"
                    android:layout_marginLeft="@dimen/apt_dialog_appoint_dail_margin"
                    android:layout_marginTop="@dimen/apt_dialog_appoint_dail_margin"
                    android:layout_weight="0.15"
                    android:src="@drawable/icn_appointment_card_call" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/apt_dl_boader_ht"
                android:background="@color/light_gray_dialog" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/reasonTextInputLayout"
                android:layout_marginTop="@dimen/apt_dl_margin"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/reasonEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Reason for visit"
                    android:textColor="@color/blue_cerulian"/>

            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:id="@+id/apptDialogButtonLayout"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/apt_dl_margin"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/checkOfficeBtn"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_blue_border"
                    android:text="@string/check_in_at_office"
                    android:textColor="@color/blue_cerulian"
                    android:visibility="gone"
                    android:textSize="@dimen/apt_dl_textview_size" />
                <Button
                     android:id="@+id/checkOfficeNow"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                     android:layout_height="match_parent"
                     android:background="@drawable/button_green_fill_background"
                     android:text="@string/check_in_now"
                     android:textColor="@color/white"
                    android:visibility="gone"
                     android:layout_marginLeft="@dimen/apt_dl_btn_margin"
                     android:textSize="@dimen/apt_dl_textview_size" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/apptReqPndgLayout"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/apt_dl_margin"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/apptReqPndgTextView"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/apt_dl_btn_txt_size"
                    android:textColor="@color/lightningyellow"
                    android:text="APPOINTMENT REQUEST PENDING"
                    android:layout_height="wrap_content" />
                </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>