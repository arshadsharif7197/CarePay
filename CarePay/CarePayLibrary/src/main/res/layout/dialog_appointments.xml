<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_apt"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/dialog_appoint_close_id"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/apt_imgview_ht"
        android:layout_gravity="left"
        android:layout_marginBottom="@dimen/apt_dl_margin_bottom"
        android:src="@drawable/icn_patient_mode_nav_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/apt_dl_header_ht"
            android:layout_gravity="center"
            android:background="@color/light_gray_dialog"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/appt_date_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/apt_dl_text_ht"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/apt_dl_appt_date_margin"
                android:textColor="@color/textview_default_textcolor"
                android:textSize="@dimen/apt_dl_text_date" />

            <TextView
                android:id="@+id/appt_time_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/apt_dl_appt_date_margin"
                android:layout_marginBottom="@dimen/apt_dl_appt_time_margin"
                android:gravity="center_horizontal"
                android:textColor="@color/slateGray"
                android:textSize="@dimen/apt_dl_textview_size" />

        </LinearLayout>

        <TextView
            android:id="@+id/appt_shortname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/apt_dl_appt_shortname_margin"
            android:background="@drawable/round_tv"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/apt_dl_text_big" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/apt_dl_margin"
            android:layout_marginTop="@dimen/apt_dl_appt_time_margin"
            android:paddingBottom="@dimen/apt_dl_margin"
            android:paddingRight="@dimen/apt_dl_margin">

            <TextView
                android:id="@+id/appt_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="@dimen/textview_default_textsize"
                android:textColor="@color/valuetext_default_textcolor"
                 />

            <TextView
                android:id="@+id/appt_type_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/apt_dialog_appoint_dail_margin"
                android:textSize="@dimen/textview_textsize"
                android:textColor="@color/lightSlateGray"
                 />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="@dimen/apt_dl_margin"
                android:layout_marginTop="@dimen/apt_dl_margin"
                android:background="@color/light_gray_dialog" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/appt_address_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.7"
                    android:ellipsize="none"
                    android:textSize="@dimen/textview_textsize"
                    android:maxLines="3"
                    android:text="067 Gulgowski Coves Suite 523, Miami, FL, 33156"
                    android:lineSpacingExtra="@dimen/apt_dialog_appoint_dail_margin"
                    android:textColor="@color/gray_round"
                    android:scrollHorizontally="false" />

                <ImageView
                    android:id="@+id/dialog_appoint_location_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.15"
                    android:layout_margin="@dimen/apt_dialog_appoint_dail_margin"
                    android:src="@drawable/icn_appointment_card_directions" />

                <ImageView
                    android:id="@+id/dialog_appoint_dail_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.15"
                    android:layout_marginBottom="@dimen/apt_dialog_appoint_dail_margin"
                    android:layout_marginTop="@dimen/apt_dialog_appoint_dail_margin"
                    android:layout_marginLeft="@dimen/apt_dialog_appoint_dail_margin"
                    android:src="@drawable/icn_appointment_card_call" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="@dimen/apt_dl_margin"
                android:layout_marginTop="@dimen/apt_dl_margin"
                android:background="@color/light_gray_dialog" />

            <Button
                android:id="@+id/btn_check_at_office_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/apt_dl_btn_check_ht"
                android:textColor="@color/blue_cerulian"
                android:textSize="@dimen/apt_dl_textview_size"
                android:background="@drawable/button_blue_border"
                android:text="@string/check_in_at_office" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>