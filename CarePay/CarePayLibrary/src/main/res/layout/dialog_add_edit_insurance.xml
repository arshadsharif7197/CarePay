<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:breeze="http://schemas.carecloud.com/breeze"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/toolbar_demographics" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="0dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingEnd="@dimen/dimen_24dp"
                android:paddingStart="@dimen/dimen_24dp">

                <include layout="@layout/add_edit_insurance_view_pat" />
            </LinearLayout>


        </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.carecloud.carepaylibray.customcomponents.CarePayButton
                android:id="@+id/save_insurance_changes"
                style="@style/InTakeNextButtonStyle"
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:enabled="false"
                android:textAlignment="center"
                breeze:textKey="demographics_save_changes_button" />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>