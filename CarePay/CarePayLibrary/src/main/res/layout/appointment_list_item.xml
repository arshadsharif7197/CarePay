<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/appointment_section_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/appointments_section_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/default_title_indicator_title_padding"
            android:paddingLeft="@dimen/layout_margin"
            android:paddingTop="@dimen/textview_margin"
            android:textColor="@color/lightSlateGray"
            android:textSize="@dimen/textview_textsize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/appointment_item_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/default_title_indicator_title_padding"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/textview_margin"
            android:layout_marginTop="@dimen/textview_margin"
            android:gravity="left"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/list_apt_padding_right"
            android:paddingRight="@dimen/list_apt_padding_right">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/cellAvtarImageView"
                    android:elevation="@dimen/apt_lst_img_elevation"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/cell_avatar_badge_pending" />
                <TextView
                    android:id="@+id/avtarTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:background="@drawable/round_list_tv"
                    android:gravity="center_vertical|center_horizontal"
                    android:src="@drawable/icn_placeholder_user_profile_png"
                    android:textColor="@color/lightSlateGray"
                    android:textSize="@dimen/apt_dl_text_big"
                    />
            </RelativeLayout>



            <LinearLayout
                android:layout_width="@dimen/apt_dl_zero_ht_wdh"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/textview_margin"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/doctor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="name"
                    android:textColor="@color/bright_cerulean"
                    android:textSize="@dimen/textview_default_textsize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/doctor_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Type"
                    android:textColor="@color/lightSlateGray"
                    android:textSize="@dimen/textview_textsize" />
            </LinearLayout>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:gravity="center"
                android:paddingRight="@dimen/default_title_indicator_title_padding"
                android:paddingTop="@dimen/default_title_indicator_title_padding"
                android:text="time"
                android:textSize="@dimen/button_textsize_medium"
                android:textStyle="bold" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />
    </LinearLayout>

</RelativeLayout>