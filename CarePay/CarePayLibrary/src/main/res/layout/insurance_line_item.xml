<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="0dp"
    android:layout_marginStart="0dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_14dp">

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/lineItemNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="viewStart"
                android:textColor="@color/grey_300"
                android:textSize="@dimen/textview_default_textsize"
                app:customAssetFont="proxima_nova_regular" />



            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/lineItemQueueLabel"
                android:layout_width="wrap_content"
                android:layout_weight="0"
                android:layout_height="wrap_content"
                android:background="@drawable/right_rounded_background_light_gray"
                android:textAlignment="textStart"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:textColor="@color/gray"
                android:textSize="@dimen/textview_textsize"
                app:customAssetFont="proxima_nova_semi_bold" />

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/lineItemNameLabelEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:textColor="@color/bright_cerulean"
                android:textSize="@dimen/textview_textsize"
                app:customAssetFont="proxima_nova_regular" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="3dp"
            android:background="@color/divider_color" />
    </LinearLayout>
</LinearLayout>
