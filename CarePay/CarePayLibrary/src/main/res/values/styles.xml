<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="titleTextStyle">@style/actionBarTitle</item>
    </style>


    <style name="actionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

    <style name="Widget.AppCompat.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/charcoal</item>
        <item name="android:textSize">@dimen/textview_default_textsize</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--<item name="android:statusBarColor">@color/colorPrimary</item>-->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>

    </style>

    <style name="Dialog.FullScreen" parent="Theme.AppCompat.Dialog">
        <item name="android:paddingRight">40dp</item>
        <item name="android:paddingBottom">40dp</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingTop">40dp</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="keyboard_1_style">
        <!--<item name="android:keyBackground">@drawable/k1_selector</item>-->
        <item name="android:keyTextColor">@android:color/white</item>
        <item name="android:background">#808587</item>
        <item name="android:keyPreviewLayout">@layout/keyboard_preview</item>
    </style>

    <declare-styleable name="SympliTextView">
        <attr name="fontPath" format="string" />

        <!-- Inner shadow settings. -->
        <attr name="innerShadowColor" format="color" />
        <attr name="innerShadowDx" format="dimension" />
        <attr name="innerShadowDy" format="dimension" />
        <attr name="innerShadowRadius" format="dimension" />

        <!-- Outer shadow settings. -->
        <attr name="outerShadowColor" format="color" />
        <attr name="outerShadowDx" format="dimension" />
        <attr name="outerShadowDy" format="dimension" />
        <attr name="outerShadowRadius" format="dimension" />
    </declare-styleable>

    <!-- Responsibility styles -->
    <style name="ResponsTotalLabelStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/glitter</item>
        <item name="android:textSize">@dimen/respons_total_label_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ResponsTotalStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/respons_total_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AlertListTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/charcoal</item>
        <item name="android:textSize">@dimen/respons_detail_label_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">ProximaNova-Regular</item>
    </style>

    <style name="ResponsDetailLabelStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/charcoal</item>
        <item name="android:textSize">@dimen/respons_detail_label_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ResponsDetailStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/bright_cerulean</item>
        <item name="android:textSize">@dimen/respons_detail_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ResponsButtonStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/respons_button_margin_left_right</item>
        <item name="android:layout_marginEnd">@dimen/respons_button_margin_left_right</item>
        <item name="android:textSize">@dimen/respons_button_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/yellowGreen</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ResponsibilityToolbarTextStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/respons_toolbar_title_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>


    <!-- Documents -->

    <style name="DemographicsDocsButtonStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/rich_electric_blue</item>
        <item name="android:textSize">@dimen/demographics_docs_button_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:background">@drawable/button_scan_card</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="DemographicsDocsHeaderTitleStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/charcoal</item>
        <item name="android:textSize">@dimen/demographics_docs_header_title_text_size</item>
    </style>

    <style name="DemographicsDocsHeaderSubtitleStyle" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/cadet_gray</item>
        <item name="android:textSize">@dimen/demographics_docs_button_text_size</item>
    </style>

    <style name="DemographicsDocsHeaderStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/demographics_docs_header_left_right_margin</item>
        <item name="android:layout_marginEnd">@dimen/demographics_docs_header_left_right_margin</item>
    </style>

    <style name="DemographicsDocsDocumentLabelStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/payne_gray</item>
        <item name="android:textSize">@dimen/demographics_docs_number_text_size</item>
    </style>

    <style name="DemographicsDocsNumberStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blue_cerulian</item>
        <item name="android:textSize">@dimen/demographics_docs_number_text_size</item>
    </style>

    <style name="DemographicsDocsLabelStyle" parent="android:Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/charcoal</item>
        <item name="android:textSize">@dimen/demographics_docs_number_text_size</item>
    </style>


    <style name="DemographicsDocsImageButtonContainerStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/demographics_docs_image_button_container_height
        </item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="DemographicsDocsClickableTextStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/blue_cerulian</item>
        <item name="android:textSize">@dimen/demographics_docs_clickable_text_size</item>
    </style>

    <style name="DemographicsFragmentsHeadingStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/charcoal</item>
        <item name="android:textSize">21.0sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="DemographicsFragmentsSubHeadingStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/cadet_gray</item>
        <item name="android:textSize">13.0sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="DemographicsFragmentsTextInputLayoutStyle." parent="android:Widget.EditText">
        <item name="android:textColor">@color/bright_cerulean</item>
        <item name="android:textSize">17.0sp</item>
    </style>

    <style name="DemographicsAddRemoveInsuranceStyle" parent="DemographicsDocsButtonStyle">
        <item name="android:layout_marginBottom">@dimen/demographicsAddMedInfoBtnBottomMargin</item>
        <item name="android:layout_marginStart">@dimen/demographics_docs_header_left_right_margin
        </item>
        <item name="android:layout_marginEnd">@dimen/demographics_docs_header_left_right_margin
        </item>
        <item name="android:background">@drawable/button_scan_card</item>
    </style>

    <style name="DemographicsNextButtonStyle" parent="ResponsButtonStyle">
        <item name="android:background">@drawable/agree_button_background</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
    </style>

    <!--<SigninSignup error Appearance>-->
    <style name="errorTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">ProximaNova-Semibold</item>
        <item name="android:textColor">@color/harvard_crimson</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- <Review Screens Style>-->
    <style name="reviewDemographicBlue." parent="android:Widget.TextView">
        <item name="android:textColor">@color/bright_cerulean</item>
        <item name="android:textSize">@dimen/respons_detail_text_size</item>
    </style>

    <style name="reviewDemographiclabel." parent="android:Widget.TextView">
        <item name="android:textColor">@color/cadet_gray</item>
        <item name="android:textSize">@dimen/respons_detail_til_label_text_size</item>
    </style>

    <style name="reviewDemographictext." parent="android:Widget.TextView">
        <item name="android:textColor">@color/charcoal</item>
        <item name="android:textSize">@dimen/textview_default_textsize</item>
    </style>


<!-- Navigation Screen Theme-->
    <style name="NavigationTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!--;-->

    <!--<Consent forms styles>-->
    <style name="ConsentActivityTitleStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/charcoal</item>
        <item name="android:textSize">21.0sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ConsentActivityDescriptionTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/cadet_gray</item>
        <item name="android:textSize">13.0sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="ConsentActivityContentTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/Feldgrau</item>
        <item name="android:textSize">18.0sp</item>
        <item name="android:lineSpacingExtra">10dp</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="ConsentActivityDoctornameTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/bright_cerulean</item>
        <item name="android:textSize">18.0sp</item>
        <item name="android:lineSpacingExtra">17.0sp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="ConsentActivityDateStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/Feldgrau</item>
        <item name="android:textSize">24.0sp</item>
        <item name="android:gravity">center</item>
    </style>

<!-- SigninSignup -->
    <style name="HintStyle">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColorHint">@color/slateGray</item>
        <item name="android:textColor">@color/slateGray</item>
    </style>

    <style name="HintStyleFloating">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColorHint">@color/darkblue</item>
        <item name="android:textColor">@color/darkblue</item>
    </style>

    <!-- InTake -->
    <style name="InTakeNextButtonStyle" parent="DemographicsNextButtonStyle">
        <item name="android:background">@color/blue_cerulian</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="InTakeDotStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/circle_indicator_gray</item>
    </style>

    <style name="InTakeDottedProgressStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/intakeDottedProgressHeight</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="InTakeNextButtonContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/intakeNextButtonContainerHeight</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="InTakeFragmentTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/charcoal</item>
        <item name="android:textSize">@dimen/intakeTitleTextSize</item>
        <item name="android:layout_marginTop">@dimen/intakeTitleTopMargin</item>
    </style>

    <style name="InTakeFragmentCaptionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/cadet_gray</item>
        <item name="android:textSize">@dimen/intakeCaptionTextSize</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:state_multiline">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/intakeCaptionLeftRightMargin</item>
        <item name="android:layout_marginEnd">@dimen/intakeCaptionLeftRightMargin</item>
    </style>

    <style name="InTakeQuestionsContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginStart">@dimen/intakeQuestionStartEndMargin</item>
        <item name="android:layout_marginEnd">@dimen/intakeQuestionStartEndMargin</item>
    </style>

    <style name="CustomToolbarTextStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/respons_toolbar_title_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>