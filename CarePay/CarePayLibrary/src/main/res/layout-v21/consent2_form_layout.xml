<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:id="@+id/consentform_scrollView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:layout_weight="3">

        <LinearLayout
            android:id="@+id/consenrform2_mainContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/top_consentform_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/titleTv"
                    style="@style/ConsentActivityTitleStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/descriptionTv"
                    style="@style/ConsentActivityDescriptionTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/titleTv" />

            </RelativeLayout>

            <TextView
                android:id="@+id/contentTv"
                style="@style/ConsentActivityContentTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margintop"
                android:gravity="left"
                android:maxLines="99"
                android:scrollbars="vertical"
                android:textSize="@dimen/consent_Contentview_textSize"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17.0dp"
                android:layout_marginRight="17dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/minor_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/consentform_relativeLayout_margin"
                    android:layout_marginTop="@dimen/consent_top"
                    android:gravity="start"
                    style="@style/reviewDemographicBlue."
                    android:textSize="@dimen/consent_minor_info_textsize" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/text_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/FloatingLabelStyle"
                    android:layout_marginTop="@dimen/consentform_textinput_margintop">

                    <EditText
                        android:id="@+id/minorFirstNameET"
                        style="@style/SigninSignupEditStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/minorLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/FloatingLabelStyle"
                    android:layout_marginTop="@dimen/consentform_textinput_margintop">

                    <EditText
                        android:id="@+id/minorLastNameET"
                        style="@style/SigninSignupEditStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionDone" />
                </android.support.design.widget.TextInputLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/consentform_relativeLayout_margin"
                    android:layout_marginRight="@dimen/consentform_relativeLayout_margin">

                    <TextView
                        android:id="@+id/dobET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        style="@style/ConsentForm_GenderStyle"
                        android:paddingEnd="14dp"
                        android:textColor="@color/bright_cerulean"
                        android:textSize="@dimen/consent_minor_textsize" />

                    <TextView
                        android:id="@+id/minor_dateofbirth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/reviewDemographicrelativelayout"
                        android:layout_centerVertical="true"
                        android:textColor="@color/charcoal"
                        android:layout_alignBaseline="@id/dobET"
                        android:textSize="@dimen/consent_minor_textsize" />

                </RelativeLayout>

                <View
                    style="@style/Review_Screen_View_Style"
                    android:layout_width="match_parent" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/consentform_relativeLayout_margin"
                    android:layout_marginRight="@dimen/consentform_relativeLayout_margin">

                    <TextView
                        android:id="@+id/minor_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/charcoal"
                        style="@style/reviewDemographicrelativelayout"
                        android:textSize="@dimen/consent_minor_textsize" />


                    <TextView
                        android:id="@+id/choose_genderTextView"
                        style="@style/ConsentForm_GenderStyle"
                        android:layout_marginLeft="@dimen/consent_gender_left_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingEnd="14dp"
                        android:clickable="true" />

                </RelativeLayout>

                <View
                    style="@style/Review_Screen_View_Style"
                    android:layout_width="match_parent" />
            </LinearLayout>

            <TextView
                android:id="@+id/content2Tv"
                style="@style/ConsentActivityContentTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="99"
                android:textSize="@dimen/consent_Contentview_textSize"
                android:gravity="left"
                android:scrollbars="vertical" />

            <TextView
                android:id="@+id/dateTv"
                style="@style/ConsentActivityDateStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/signButton"
        style="@style/Consent_form_Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>