<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item android:bottom="@dimen/dimen_10dp" android:top="@dimen/dimen_10dp" android:left="@dimen/dimen_10dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/glitter"/>
            <corners android:bottomLeftRadius="35dp" android:bottomRightRadius="0.1dp"
                android:topLeftRadius="35dp" android:topRightRadius="0.1dp"/>
        </shape>
    </item>

    <item android:top="@dimen/dimen_10dp" android:bottom="@dimen/dimen_10dp" android:left="@dimen/dimen_10dp" android:right="@dimen/dimen_10dp">
        <shape android:shape="oval">
            <solid android:color="@color/colorPrimary" />
        </shape>
    </item>
</layer-list>