<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item app:tsquare_state_range_middle="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                </shape>
            </item>
            <item android:bottom="@dimen/dimen_10dp" android:top="@dimen/dimen_10dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/glitter" />
                    <padding android:top="@dimen/dimen_10dp" android:bottom="@dimen/dimen_10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item app:tsquare_state_range_first="true" android:drawable="@drawable/dialog_date_range_picker_bg_range_start" />
    <item app:tsquare_state_range_last="true" android:drawable="@drawable/dialog_date_range_picker_bg_range_end" />

    <item  android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/>
                </shape>
            </item>
            <item android:top="@dimen/dimen_10dp" android:bottom="@dimen/dimen_10dp" android:right="@dimen/dimen_10dp" android:left="@dimen/dimen_10dp">
                <shape android:shape="oval">
                    <solid android:color="@color/colorPrimary" />
                    <stroke
                        android:width="@dimen/add_apt_calendar_selected_range_stroke"
                        android:color="@color/transparent_apt" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item app:tsquare_state_current_month="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
        </shape>
    </item>

    <item app:tsquare_state_today="true" >
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/>
                </shape>
            </item>
            <item android:top="@dimen/dimen_10dp" android:bottom="@dimen/dimen_10dp" android:right="@dimen/dimen_10dp" android:left="@dimen/dimen_10dp">
                <shape android:shape="oval">
                    <stroke
                        android:width="@dimen/add_apt_calendar_today_date_stroke"
                        android:color="@color/lightSlateGray" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item app:tsquare_state_current_month="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
        </shape>
    </item>
</selector>
