<manifest package="com.carecloud.carepaylibrary"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <uses-feature android:name="android.hardware.camera"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity
            android:name="com.carecloud.carepaylibray.activities.MainActivityLibrary"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:configChanges="screenSize|orientation"/>
        <activity
            android:name="com.carecloud.carepaylibray.activities.DemographicsActivity"
            android:theme="@style/AppTheme"
            android:configChanges="screenSize|orientation"/>
        <activity
            android:name="com.carecloud.carepaylibray.activities.SignatureActivity"
            android:theme="@style/AppTheme"/>

        <activity
            android:name="com.carecloud.carepaylibray.signinsignup.SigninSignupActivity"
            android:theme="@style/AppTheme"/>

    </application>

</manifest>
