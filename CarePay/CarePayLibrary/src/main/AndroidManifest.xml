<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.carecloud.carepaylibrary">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name="com.carecloud.carepaylibray.activities.LibraryMainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.carecloud.carepaylibray.demographics.activities.DemographicsActivity"
            android:configChanges="screenSize|orientation"
            android:theme="@style/AppTheme" />
        <activity android:name="com.carecloud.carepaylibray.homescreen.HomeScreenActivity" />
        <activity
            android:name="com.carecloud.carepaylibray.activities.SignatureActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.carecloud.carepaylibray.signinsignup.SigninSignupActivity"
            android:theme="@style/AppTheme" />
        <activity android:name="com.carecloud.carepaylibray.activities.HomeActivity"></activity>
        <activity android:name="com.carecloud.carepaylibray.activities.PaymentActivity"></activity>
    </application>

</manifest>