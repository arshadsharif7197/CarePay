<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.carecloud.carepaylibrary">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppBaseTheme">
        <activity android:name="com.carecloud.carepaylibray.activities.LibraryMainActivity" />
        <activity
            android:name="com.carecloud.carepaylibray.demographics.activities.DemographicsActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name="com.carecloud.carepaylibray.demographics.activities.DemographicReviewActivity" />
        <activity android:name="com.carecloud.carepaylibray.homescreen.HomeScreenActivity" />
        <activity android:name="com.carecloud.carepaylibray.consentforms.SignatureActivity" />
        <activity android:name="com.carecloud.carepaylibray.selectlanguage.SelectLangaugeActivity" />
        <activity
            android:name="com.carecloud.carepaylibray.consentforms.ConsentActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.carecloud.carepaylibray.signinsignup.SigninSignupActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.carecloud.carepaylibray.payment.PaymentActivity"
            android:parentActivityName="com.carecloud.carepaylibray.appointments.activities.AppointmentsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.carecloud.carepaylibray.appointments.activities.AppointmentsActivity" />
        </activity>
        <activity android:name="com.carecloud.carepaylibray.appointments.activities.AppointmentsActivity" />
        <activity android:name="com.carecloud.carepaylibray.appointments.activities.AddAppointmentActivity" />
        <activity android:name="com.carecloud.carepaylibray.intake.activities.InTakeActivity" />
        <activity
            android:name="com.carecloud.carepaylibray.cognito.SignUpConfirmActivity"
            android:windowSoftInputMode="adjustResize" />

    </application>

</manifest>