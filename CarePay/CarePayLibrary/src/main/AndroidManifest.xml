<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.carecloud.carepaylibrary">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppBaseTheme">
        <activity
            android:name="com.carecloud.carepay.patient.demographics.activities.DemographicsActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name="com.carecloud.carepay.patient.demographics.activities.DemographicReviewActivity" />
        <activity android:name="com.carecloud.carepay.patient.intakeforms.activities.InTakeActivity" />
        <activity
            android:name="com.carecloud.carepaylibray.cognito.SignUpConfirmActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name="com.carecloud.carepaylibray.carepaycamera.CarePayCameraActivity"></activity>
    </application>

</manifest>