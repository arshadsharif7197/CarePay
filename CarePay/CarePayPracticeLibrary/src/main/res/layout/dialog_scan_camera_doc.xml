<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/patient_mode_dialog_body_bg"
        android:orientation="vertical">

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/content_view_title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dimen_34dp"
            android:layout_marginTop="@dimen/dimen_30dp"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_106dp"
            android:paddingRight="@dimen/dimen_106dp"
            android:text="@string/insurance_scan_content_title"
            android:textSize="@dimen/text_size_16sp"
            app:customAssetFont="proxima_nova_regular" />

        <FrameLayout
            android:id="@+id/camera_frame"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_374dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_18dp"
            android:layout_marginRight="@dimen/dimen_18dp"
            android:background="@drawable/scan_rounded_corner"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/cameraImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <com.carecloud.carepaylibray.carepaycamera.CarePayCameraPreview
                    android:id="@+id/camera_preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/scan_camera_bg" />
            </RelativeLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dimen_30dp"
            android:layout_marginLeft="@dimen/dimen_18dp"
            android:layout_marginRight="@dimen/dimen_18dp"
            android:layout_marginTop="@dimen/dimen_42dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/clear_capture_image_button"
                android:layout_width="@dimen/dimen_178dp"
                android:layout_height="@dimen/dimen_50dp"
                android:background="@drawable/disable_button_bg"
                android:textColor="@color/white"
                android:enabled="false"
                android:textSize="@dimen/text_size_22sp"
                android:textAllCaps="false"
                android:text="@string/clear" />

            <Button
                android:id="@+id/scan_button"
                android:layout_width="@dimen/dimen_369dp"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_marginLeft="@dimen/dimen_18dp"
                android:background="@drawable/bg_yellow_overlay"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_22sp"
                android:textAllCaps="false"
                android:text="@string/scan" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
