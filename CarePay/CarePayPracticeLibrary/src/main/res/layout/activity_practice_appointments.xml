<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_practice_appointments"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:paddingBottom="@dimen/dimen_15dp"
        android:paddingTop="@dimen/dimen_15dp">

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/practice_go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/dimen_10dp"
            android:drawableStart="@drawable/icn_arrow_left"
            android:paddingEnd="0dp"
            android:paddingStart="@dimen/dimen_10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20sp"
            app:customAssetFont="gotham_rounded_medium" />

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/practice_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingEnd="0dp"
            android:paddingStart="@dimen/dimen_10dp"
            android:textColor="@color/confirm_pin_sub_title"
            android:textSize="@dimen/text_size_20sp"
            app:customAssetFont="gotham_rounded_medium" />

        <LinearLayout
            android:id="@+id/practice_filter_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="RelativeOverlap">

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/practice_find_patient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_50dp"
                android:drawablePadding="@dimen/dimen_15dp"
                android:drawableStart="@drawable/icn_search_patient"
                android:gravity="center"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20sp"
                app:customAssetFont="proxima_nova_regular" />

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/practice_filter_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_27dp"
                android:drawablePadding="@dimen/dimen_15dp"
                android:drawableStart="@drawable/icn_filter"
                android:gravity="center"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20sp"
                app:customAssetFont="proxima_nova_regular" />

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/practice_filter_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_green_overlay"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingBottom="@dimen/dimen_6dp"
                android:paddingEnd="@dimen/dimen_15dp"
                android:paddingStart="@dimen/dimen_15dp"
                android:paddingTop="@dimen/dimen_6dp"
                android:textColor="@color/filter_on"
                android:textSize="@dimen/text_size_18sp"
                android:visibility="gone"
                app:customAssetFont="proxima_nova_regular" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_10dp"
        android:paddingEnd="@dimen/patient_list_margin"
        android:paddingStart="@dimen/patient_list_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_19dp">

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/practice_patient_count_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_22sp"
                app:customAssetFont="gotham_rounded_medium" />

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/practice_patient_count"
                android:layout_width="@dimen/dimen_34dp"
                android:layout_height="@dimen/dimen_34dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_toEndOf="@+id/practice_patient_count_label"
                android:background="@drawable/queue_counter_noborder_background"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16sp"
                android:textStyle="bold"
                app:customAssetFont="gotham_rounded_bold" />

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/practice_pending_count_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_22sp"
                android:visibility="gone"
                app:customAssetFont="gotham_rounded_medium" />

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/practice_pending_count"
                android:layout_width="@dimen/dimen_34dp"
                android:layout_height="@dimen/dimen_34dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_toEndOf="@+id/practice_pending_count_label"
                android:background="@drawable/queue_pending_counter_noborder_background"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:customAssetFont="gotham_rounded_bold" />

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/activity_practice_appointments_change_date_range_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_blue_overlay"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16sp"/>

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/activity_practice_appointments_show_all_appointments_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/activity_practice_appointments_change_date_range_label"
                android:background="@drawable/bg_blue_overlay"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16sp"
                android:visibility="gone"/>

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/activity_practice_appointments_show_pending_appointments_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/activity_practice_appointments_change_date_range_label"
                android:background="@drawable/bg_blue_overlay"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16sp"/>
        </RelativeLayout>

        <com.carecloud.carepay.practice.library.customcomponent.TwoColumnPatientListView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/list_patients"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:background="@drawable/payments_list_background" />
    </LinearLayout>
</LinearLayout>