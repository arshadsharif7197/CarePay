<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/checkinDemographicsReviewHeader"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Header"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/checkinDemographicsReviewContent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Checkin Review Demographics"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/checkinDemographicsReviewFooter"
        android:orientation="horizontal">

        <Button
            android:id="@+id/checkinDemographicsReviewUpdateClickable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="I need to update this info"
            android:layout_weight="1"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/checkinDemographicsReviewCorrectClickable"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Yes, these are correct"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>