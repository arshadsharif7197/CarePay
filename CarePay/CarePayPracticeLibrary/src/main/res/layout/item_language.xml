<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.carecloud.carepaylibray.customcomponents.CarePayTextView
        android:id="@+id/languageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/languageItemEndMargin"
        android:layout_marginStart="@dimen/languageItemStartMargin"
        android:gravity="start"
        android:orientation="vertical"
        android:padding="@dimen/dimen_10dp"
        android:textColor="@color/slateGray"
        android:textSize="@dimen/languageItemTextSize"
        app:customAssetFont="gotham_rounded_book"
        tools:text="English" />

    <ImageView
        android:id="@+id/checkImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:src="@drawable/icn_check"
        android:visibility="gone" />


</RelativeLayout>