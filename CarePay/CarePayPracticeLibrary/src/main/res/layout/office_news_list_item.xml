<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/officeNewsItemWidth"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="@dimen/officeNewsContainerVerticalPadding"
    android:paddingEnd="@dimen/officeNewsContainerHorizontalPadding"
    android:paddingStart="@dimen/officeNewsContainerHorizontalPadding"
    android:paddingTop="@dimen/officeNewsContainerVerticalPadding">

    <com.carecloud.carepaylibray.customcomponents.CarePayTextView
        android:id="@+id/office_news_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:paddingEnd="@dimen/officeNewsHorizontalPadding"
        android:paddingStart="@dimen/officeNewsHorizontalPadding"
        android:textColor="@color/white"
        android:textSize="@dimen/officeNewListItemTextSize"
        app:customAssetFont="proxima_nova_regular" />

</LinearLayout>