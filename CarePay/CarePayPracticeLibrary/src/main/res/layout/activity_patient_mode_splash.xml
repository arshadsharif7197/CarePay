<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_patient_mode_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen_background"
    android:orientation="vertical"
    tools:context="com.carecloud.carepay.practice.library.patientmode.PatientModeSplashActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/home_main_margin_end"
        android:layout_marginStart="@dimen/home_main_margin_start"
        android:layout_marginTop="@dimen/home_main_margin_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/lockicnimageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:src="@drawable/icn_lock_patient" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/splashPatientLangSpinner"
                android:layout_width="@dimen/home_spinner_width"
                android:layout_height="@dimen/home_spinner_height"
                android:background="@drawable/bg_blue_overlay"
                android:paddingEnd="@dimen/home_spinner_padding_righ_left"
                android:paddingStart="@dimen/home_spinner_padding_righ_left"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/logoimageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/home_logo_margin_top"
            android:src="?practiceLogoDrawable" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/practicelogo"
            android:layout_width="@dimen/patient_splash_button_width"
            android:layout_height="@dimen/patient_splash_button_width"
            android:scaleType="centerCrop"
            android:src="@drawable/checkin_patient_pic_rounded_border" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".07" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/welcomeTitleTextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_15dp"
            android:gravity="center"
            android:hint="Welcome"
            android:textColor="@color/white"
            android:textSize="@dimen/signin_title_textsize"
            android:maxLines="4"
            app:customAssetFont="gotham_rounded_medium" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".06" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/getstartedTextview"
            android:layout_width="@dimen/patient_splash_button_width"
            android:layout_height="@dimen/patient_splash_button_height"
            android:background="@drawable/bg_blue_overlay"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="@dimen/home_alert_font_size"
            app:customAssetFont="gotham_rounded_medium" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".52" />

</LinearLayout>