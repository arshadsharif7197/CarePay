<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/activity_patient_mode_checkin"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:baselineAligned="false"
              tools:context="com.carecloud.carepay.practice.library.patientmodecheckin.activities.PatientModeCheckinActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".4"
        android:background="@drawable/background_default"
        android:orientation="vertical"
        android:paddingStart="@dimen/checkin_main_panel_start_padding"
        android:paddingEnd="@dimen/dimen_5dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/checkinBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/icn_arrow_left"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingStart="@dimen/dimen_14dp"
                android:paddingEnd="@dimen/dimen_14dp"
                android:paddingTop="@dimen/dimen_10dp"
                android:paddingBottom="@dimen/dimen_10dp"
                android:drawablePadding="@dimen/dimen_10dp"
                android:text="Go Back"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_22sp"
                android:visibility="visible"
                app:customAssetFont="gotham_rounded_medium"
                android:background="@drawable/checkin_ic_btn_bg_clear"/>

            <ImageView
                android:id="@+id/checkinLogo"
                android:layout_width="@dimen/home_logo_width"
                android:layout_height="wrap_content"
                android:contentDescription="@string/home_logo"
                android:src="@drawable/checkin_cp_logo_aligned_right"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="24"/>

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's get you checked in!"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_30dp"
            app:customAssetFont="gotham_rounded_bold"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"/>

        <View
            android:layout_width="@dimen/checkin_separator_width"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/white_opacity_50"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Demographics  &amp; Insurance"
                android:textColor="@color/white_opacity_60"
                android:textSize="@dimen/text_size_16sp"
                app:customAssetFont="gotham_rounded_light"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:id="@+id/checkinSectionDemogrInsTitle"/>

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consent Forms"
                android:textColor="@color/white_opacity_60"
                android:textSize="@dimen/text_size_16sp"
                app:customAssetFont="gotham_rounded_light"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:id="@+id/checkinSectionConsentFormsTitle"/>

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/checkinSectionIntakeFormsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patient Intake"
                android:textColor="@color/white_opacity_60"
                android:textSize="@dimen/text_size_16sp"
                app:customAssetFont="gotham_rounded_light"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:clickable="true"/>

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/checkinSectionPaymentsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment"
                android:textColor="@color/white_opacity_60"
                android:textSize="@dimen/text_size_16sp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                app:customAssetFont="gotham_rounded_light"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="54"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/checkin_ic_icn_home"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"/>


    </LinearLayout>

    <FrameLayout
        style="@style/CheckinContainerStyle"
        android:id="@+id/checkInContentHolderId"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".6">

    </FrameLayout>

</LinearLayout>