<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/activity_patient_mode_checkin"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.carecloud.carepay.practice.library.patientmodecheckin.activities.PatientModeCheckinActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@drawable/background_default"
        android:orientation="vertical"
        android:padding="40dp">

        <ImageView
            android:id="@+id/titleHeaderTextview"
            android:layout_width="@dimen/home_logo_width"
            android:layout_height="wrap_content"
            android:contentDescription="@string/home_logo"
            android:src="@drawable/cp_logo"/>

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="115dp"
            android:text="Let's get you checked in!"
            android:textColor="@color/white"
            android:textSize="32sp"
            app:customAssetFont="gotham_rounded_bold"/>

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Demographics  Insurance"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:customAssetFont="gotham_rounded_bold"/>

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Demographics  Insurance"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:customAssetFont="gotham_rounded_bold"/>

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Demographics  Insurance"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:customAssetFont="gotham_rounded_bold"/>

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Demographics  Insurance"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:customAssetFont="gotham_rounded_bold"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/checkInContentHolderId"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@color/white">

    </FrameLayout>
</LinearLayout>