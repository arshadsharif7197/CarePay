<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_checked_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingLeft="30dp"
    android:paddingTop="30dp"
    android:paddingBottom="10dp"
    tools:context=".payments.RotateActivity">
    <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedMediumLabel
        android:id="@+id/goBackTextview"
        android:layout_width="180dp"
        android:layout_height="53dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/bg_blue_overlay"
        android:drawableLeft="@drawable/icn_arrow_left"
        android:includeFontPadding="false"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="  Go Back"
        android:textColor="#ffffff"
        android:textSize="22sp" />
    <ImageView
        android:id="@+id/rotateImageTextView"
        android:layout_width="168dp"
        android:layout_height="138dp"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:src="@drawable/icn_rotate" />

    <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedBoldLabel
        android:id="@+id/rotateSubTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/rotateTitleTextView"
        android:text="Please flip screen towards patient"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedBoldLabel
        android:id="@+id/rotateTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Ready to pay"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:layout_below="@+id/rotateImageTextView"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
