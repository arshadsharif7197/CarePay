<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dimen_510dp"
    android:layout_height="wrap_content"
    android:background="@drawable/payment_receipt_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/payment_receipt_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/payment_receipt_header"
        android:paddingBottom="@dimen/dimen_5dp"
        android:paddingTop="@dimen/dimen_5dp"
        android:weightSum="3">

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/receipt_no_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_9dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="Receipt #4535"
            android:textColor="@color/manatee"
            android:textSize="@dimen/text_size_11"
            app:customAssetFont="proxima_nova_semi_bold" />

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/payment_receipt_type_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_42dp"
            android:layout_marginStart="@dimen/dimen_42dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1 Time Payment"
            android:textColor="@color/manatee"
            android:textSize="@dimen/text_size_11"
            app:customAssetFont="proxima_nova_semi_bold" />

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/payment_receipt_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_9dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="09/09/23"
            android:textColor="@color/manatee"
            android:textSize="@dimen/text_size_11"
            app:customAssetFont="proxima_nova_semi_bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/payment_receipt_dialog_height"
        android:orientation="vertical"
        android:padding="@dimen/dimen_24dp">

        <LinearLayout
            android:id="@+id/payment_receipt_sub_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/payment_receipt_image"
                android:layout_width="@dimen/dimen_81dp"
                android:layout_height="@dimen/dimen_81dp"
                android:layout_marginBottom="@dimen/dimen_17dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_17dp"
                android:src="@drawable/icn_placeholder_user_profile_png" />

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/payment_receipt_practice_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_40dp"
                android:layout_marginTop="@dimen/dimen_40dp"
                android:text="The Manchester Clinic"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_28sp"
                app:customAssetFont="proxima_nova_regular" />
        </LinearLayout>

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/payment_receipt_sub_header"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:background="@color/light_gray_dialog" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/payment_receipt_details_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/divider1" />

    </RelativeLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dimen_5dp" />

    <com.carecloud.carepaylibray.customcomponents.CarePayButton
        android:id="@+id/payment_receipt_share_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_47dp"
        android:layout_marginBottom="@dimen/dimen_15dp"
        android:layout_marginEnd="@dimen/dimen_24dp"
        android:layout_marginStart="@dimen/dimen_24dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:background="@drawable/bg_green_overlay"
        android:text="Send by email"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_22sp"
        app:customAssetFont="gotham_rounded_medium" />
</LinearLayout>