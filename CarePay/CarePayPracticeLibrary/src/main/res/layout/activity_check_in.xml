<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_checked_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_default"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/goBackTextview"
            android:layout_width="180dp"
            android:layout_height="53dp"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/icn_arrow_left"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingLeft="20dp"
            android:text="  Go Back"
            android:textColor="#ffffff"
            android:textSize="20sp"
            app:customAssetFont="gotham_rounded_medium" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="175dp"
        android:paddingRight="175dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" android:layout_marginBottom="10dp">
                <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CHECKING-IN"
                    android:textColor="#ffffff"
                    app:customAssetFont="gotham_rounded_medium"
                    android:textSize="20sp" />

                <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                    android:id="@+id/checkingInCounterTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/queue_counter_background"
                    android:gravity="center"
                    android:text="0"
                    app:customAssetFont="gotham_rounded_bold"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/checkinginRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:background="@drawable/checking_in_list_background" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" android:layout_marginBottom="10dp">
                <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WAITING ROOM"
                    android:textColor="#ffffff"
                    app:customAssetFont="gotham_rounded_medium"
                    android:textSize="20sp" />

                <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                    android:id="@+id/waitingCounterTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/queue_counter_background"
                    android:gravity="center"
                    android:text="0"
                    app:customAssetFont="gotham_rounded_bold"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/waitingRoomRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:background="@drawable/waiting_room_list_background" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>


