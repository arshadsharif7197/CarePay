<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_checked_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:padding="4dp">

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/goBackTextview"
            android:layout_width="180dp"
            android:layout_height="53dp"
            android:layout_alignParentStart="true"
            android:drawablePadding="@dimen/dimen_10dp"
            android:drawableStart="@drawable/icn_arrow_left"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingEnd="0dp"
            android:paddingStart="@dimen/dimen_10dp"
            android:text="Go Back"
            android:textColor="#ffffff"
            android:textSize="20sp"
            app:customAssetFont="gotham_rounded_medium" />

        <LinearLayout
            android:id="@+id/filterLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="10dp">

            <ImageView
                android:id="@+id/filterImageView"
                android:layout_width="18dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/icn_filter" />

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/filterTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="Filters"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:customAssetFont="proxima_nova_regular" />

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/filterOnTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_green_overlay"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingBottom="6dp"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:paddingTop="6dp"
                android:text="Filters: On"
                android:textColor="#34590C"
                android:textSize="18sp"
                android:visibility="gone"
                app:customAssetFont="proxima_nova_extra_bold" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="175dp"
        android:paddingRight="175dp"
        android:paddingTop="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                    android:id="@+id/checkingInTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CHECKING-IN"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:customAssetFont="gotham_rounded_medium" />

                <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                    android:id="@+id/checkingInCounterTextview"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/queue_counter_noborder_background"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:customAssetFont="gotham_rounded_bold" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/checkinginRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:background="@drawable/checking_in_list_background" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                    android:id="@+id/waitingRoomTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WAITING ROOM"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    app:customAssetFont="gotham_rounded_medium" />

                <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                    android:id="@+id/waitingCounterTextview"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/queue_counter_noborder_background"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    app:customAssetFont="gotham_rounded_bold" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/waitingRoomRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:background="@drawable/waiting_room_list_background" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>