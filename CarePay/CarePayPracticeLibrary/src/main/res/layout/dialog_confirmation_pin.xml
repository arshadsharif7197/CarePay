<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/transparent_apt">

    <LinearLayout
        android:id="@+id/mainViewLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:background="@color/transparent_apt"
        android:orientation="vertical">

        <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedMediumButton
            android:id="@+id/headerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/transparent_apt"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/pin_header_text_size"/>

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/subHeaderLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="@dimen/pin_sub_header_text_size"
            app:customAssetFont="proxima_nova_regular"
            />

        <EditText
            android:id="@+id/pinEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:cursorVisible="false"
            android:inputType="numberPassword"
            android:textColor="@color/white"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/button_pin_text_size"
            android:maxLength="4"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dialog_rounded_border"
                android:padding="@dimen/button_padding"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/manatee_lite"
                    android:orientation="horizontal">

                    <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedMediumButton
                        android:id="@+id/pin_key_one"
                        android:layout_width="@dimen/button_height"
                        android:layout_height="@dimen/button_width"
                        android:layout_marginBottom="@dimen/key_border_width"
                        android:layout_marginRight="@dimen/key_border_width"
                        android:background="@drawable/button_pin_selector"
                        android:text="1"
                        android:textColor="@color/charcoal"
                        android:textSize="@dimen/button_pin_text_size" />

                    <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedMediumButton
                        android:id="@+id/pin_key_two"
                        android:layout_width="@dimen/button_height"
                        android:layout_height="@dimen/button_width"
                        android:layout_marginBottom="@dimen/key_border_width"
                        android:layout_marginRight="@dimen/key_border_width"
                        android:background="@drawable/button_pin_selector"
                        android:text="2"
                        android:textColor="@color/charcoal"
                        android:textSize="@dimen/button_pin_text_size" />

                    <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedMediumButton
                        android:id="@+id/pin_key_three"
                        android:layout_width="@dimen/button_height"
                        android:layout_height="@dimen/button_width"
                        android:layout_marginBottom="@dimen/key_border_width"
                        android:background="@drawable/button_pin_selector"
                        android:text="3"
                        android:textColor="@color/charcoal"
                        android:textSize="@dimen/button_pin_text_size" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/manatee_lite"
                    android:orientation="horizontal">

                    <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedMediumButton
                        android:id="@+id/pin_key_four"
                        android:layout_width="@dimen/button_height"
                        android:layout_height="@dimen/button_width"
                        android:layout_marginBottom="@dimen/key_border_width"
                        android:layout_marginRight="@dimen/key_border_width"
                        android:background="@drawable/button_pin_selector"
                        android:text="4"
                        android:textColor="@color/charcoal"
                        android:textSize="@dimen/button_pin_text_size" />

                    <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedMediumButton
                        android:id="@+id/pin_key_five"
                        android:layout_width="@dimen/button_height"
                        android:layout_height="@dimen/button_width"
                        android:layout_marginBottom="@dimen/key_border_width"
                        android:layout_marginRight="@dimen/key_border_width"
                        android:background="@drawable/button_pin_selector"
                        android:text="5"
                        android:textColor="@color/charcoal"
                        android:textSize="@dimen/button_pin_text_size" />

                    <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedMediumButton
                        android:id="@+id/pin_key_six"
                        android:layout_width="@dimen/button_height"
                        android:layout_height="@dimen/button_width"
                        android:layout_marginBottom="@dimen/key_border_width"
                        android:background="@drawable/button_pin_selector"
                        android:text="6"
                        android:textColor="@color/charcoal"
                        android:textSize="@dimen/button_pin_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/manatee_lite"
                    android:orientation="horizontal">

                    <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedMediumButton
                        android:id="@+id/pin_key_seven"
                        android:layout_width="@dimen/button_height"
                        android:layout_height="@dimen/button_width"
                        android:layout_marginBottom="@dimen/key_border_width"
                        android:layout_marginRight="@dimen/key_border_width"
                        android:background="@drawable/button_pin_selector"
                        android:text="7"
                        android:textColor="@color/charcoal"
                        android:textSize="@dimen/button_pin_text_size" />

                    <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedMediumButton
                        android:id="@+id/pin_key_eighth"
                        android:layout_width="@dimen/button_height"
                        android:layout_height="@dimen/button_width"
                        android:layout_marginBottom="@dimen/key_border_width"
                        android:layout_marginRight="@dimen/key_border_width"
                        android:background="@drawable/button_pin_selector"
                        android:text="8"
                        android:textColor="@color/charcoal"
                        android:textSize="@dimen/button_pin_text_size" />

                    <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedMediumButton
                        android:id="@+id/pin_key_nine"
                        android:layout_width="@dimen/button_height"
                        android:layout_height="@dimen/button_width"
                        android:layout_marginBottom="@dimen/key_border_width"
                        android:background="@drawable/button_pin_selector"
                        android:text="9"
                        android:textColor="@color/charcoal"
                        android:textSize="@dimen/button_pin_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/manatee_lite"
                    android:orientation="horizontal">

                    <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedMediumButton
                        android:id="@+id/pin_key_blank"
                        android:layout_width="@dimen/button_height"
                        android:layout_height="@dimen/button_width"
                        android:layout_marginRight="@dimen/key_border_width"
                        android:background="@drawable/button_pin_selector"
                        android:text=""
                        android:textColor="@color/charcoal"
                        android:textSize="@dimen/button_pin_text_size" />

                    <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedMediumButton
                        android:id="@+id/pin_key_zero"
                        android:layout_width="@dimen/button_height"
                        android:layout_height="@dimen/button_width"
                        android:layout_marginRight="@dimen/key_border_width"
                        android:background="@drawable/button_pin_selector"
                        android:text="0"
                        android:textColor="@color/charcoal"
                        android:textSize="@dimen/button_pin_text_size" />

                    <LinearLayout
                        android:layout_width="@dimen/button_height"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/button_pin_selector"
                        android:layout_height="@dimen/button_width">

                        <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedMediumButton
                            android:id="@+id/pin_key_clear"
                            android:layout_width="@dimen/button_delete_key_width"
                            android:layout_height="@dimen/button_delete_key_height"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/blue_cerulian"
                            android:background="@drawable/ic_keyboard_delete"
                            android:text="" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/button_margin_top"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedMediumButton
                    android:id="@+id/dialogCancelTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/transparent_apt"
                    android:gravity="center_horizontal"
                    android:textColor="@color/bright_cerulean" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>