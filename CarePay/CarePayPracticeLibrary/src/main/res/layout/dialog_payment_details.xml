<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/transparent_apt"
              android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/payment_close_Layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/payment_close_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/dialog_button_bg" />

            <ImageView
                android:id="@+id/cancel_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/icn_close" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/dimen_26dp"
        android:layout_marginEnd="@dimen/dimen_26dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dialog_close_header"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/apt_imgview_ht"
                android:layout_gravity="start"
                android:layout_marginBottom="@dimen/apt_dl_margin_bottom"
                android:gravity="start"
                android:src="@drawable/icn_patient_mode_nav_close"
                android:visibility="gone"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/payment_details_dialog_header_height">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/payment_details_dialog_total_paid_view_height"
                    android:id="@+id/dialog_header"
                    android:background="@drawable/patient_mode_dialog_header_bg">

                    <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                        android:id="@+id/payment_details_total_paid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_16dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_38"
                        app:customAssetFont="gotham_rounded_medium" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dialog_header"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white" />

                <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                    android:id="@+id/avTextView"
                    android:layout_width="@dimen/payment_details_dialog_icon_size"
                    android:layout_height="@dimen/payment_details_dialog_icon_size"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/round_list_tv"
                    android:gravity="center_vertical|center_horizontal"
                    android:src="@drawable/icn_placeholder_user_profile_png"
                    android:textColor="@color/lightSlateGray"
                    app:customAssetFont="gotham_rounded_medium" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="@dimen/dialog_width"
                android:layout_height="@dimen/dimen_300dp"
                android:background="@color/white">

                <include layout="@layout/payment_details_view"/>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/patient_mode_dialog_body_bg"
                android:padding="@dimen/dimen_15dp">

                <com.carecloud.carepaylibray.customcomponents.CarePayButton
                    android:id="@+id/payment_details_pay_now_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_yellow_overlay"
                    android:textColor="@color/white"
                    android:textSize="@dimen/apt_dl_textview_size"
                    app:customAssetFont="gotham_rounded_medium" />
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/search_content"
        android:visibility="invisible">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/dialog_button_bg" />

    </LinearLayout>

</LinearLayout>