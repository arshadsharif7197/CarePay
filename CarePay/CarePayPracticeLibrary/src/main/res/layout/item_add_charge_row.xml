<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/addChargeItemVerticalPadding"
        android:paddingBottom="@dimen/addChargeItemVerticalPadding">

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/charge_item_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:textColor="@color/textview_default_textcolor"
            android:textSize="@dimen/addChargeItemTextSize"
            app:customAssetFont="gotham_rounded_book"
            tools:text="Description of Product" />

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/charge_item_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textview_default_textcolor"
            android:textSize="@dimen/addChargeItemAmountTextSize"
            app:customAssetFont="gotham_rounded_medium"
            tools:text="$00.00" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/light_gray" />
</LinearLayout>