<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation=".01dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardBackgroundColor="#ffffff"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/containerLayout"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/patientPicImageView"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/image_rounded_noborder"
            android:padding="3dp"
            android:src="@drawable/icn_placeholder_user_profile" />

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/patientNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toRightOf="@+id/patientPicImageView"
            android:text="Patient Name"
            android:textColor="@color/charcoal"
            android:textSize="@dimen/appointment_cart_patient_textsize"
            card_view:customAssetFont="proxima_nova_semi_bold" />

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/providerNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/patientNameTextView"
            android:layout_marginStart="20dp"
            android:layout_toRightOf="@+id/patientPicImageView"
            android:text="Proviver Name"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/appointment_cart_provider_textsize"
            card_view:customAssetFont="proxima_nova_semi_bold" />

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/amountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/providerNameTextView"
            android:layout_marginStart="20dp"
            android:layout_toRightOf="@+id/patientPicImageView"
            android:text="$100.00"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/appointment_cart_amount_textsize"
            card_view:customAssetFont="proxima_nova_semi_bold" />

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/timeTextView"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:background="@drawable/bg_green_overlay"
            android:text="12:00 AM"
            android:textColor="@color/white"
            android:textSize="@dimen/appointment_cart_time_textsize"
            card_view:customAssetFont="proxima_nova_semi_bold" />
    </RelativeLayout>

</android.support.v7.widget.CardView>