<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.carecloud.carepaylibray.customcomponents.CarePayRadioButton
        android:id="@+id/retail_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:button="@null"
        android:clickable="false"
        android:focusable="false"
        android:drawableEnd="@drawable/radio_button_selector"
        android:paddingTop="@dimen/text_size_24sp"
        android:paddingBottom="@dimen/text_size_24sp"
        android:textColor="@color/appointment_dialog_checkbox_text_color"
        android:textSize="@dimen/text_size_24sp"
        tools:text="Small"
        app:customAssetFont="gotham_rounded_medium" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/optional_gray" />

</LinearLayout>