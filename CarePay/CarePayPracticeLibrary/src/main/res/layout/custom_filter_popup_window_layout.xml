<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal"
    android:weightSum="5">

    <View
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@color/popup_background"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <RelativeLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="@dimen/custom_filter_popup_header_padding">

            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/icn_filter"
                android:drawablePadding="@dimen/drawable_padding"
                android:padding="@dimen/view_padding"
                android:text="@string/not_defined"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/white" />-->
            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/icn_filter"
                android:drawablePadding="@dimen/drawable_padding"
                android:padding="@dimen/view_padding"
                android:text="@string/not_defined"
                android:textColor="@android:color/white"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:textSize="20sp"
                app:customAssetFont="gotham_rounded_bold" />

            <ImageView
                android:id="@+id/closeFilterWindowImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/view_padding"
                android:src="@drawable/icn_close" />
        </RelativeLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/view_margin"
            android:layout_below="@id/header_layout"
            android:background="@color/popup_list_text_color" />

        <LinearLayout
            android:id="@+id/search_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/searchPatientEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_margin"
                android:layout_marginRight="@dimen/view_margin"
                android:background="@drawable/search_edittext_background"
                android:drawableLeft="@drawable/icn_search_small"
                android:drawablePadding="@dimen/drawable_padding"
                android:hint="@string/not_defined"
                android:paddingBottom="@dimen/drawable_padding"
                android:paddingLeft="@dimen/drawable_padding"
                android:paddingRight="@dimen/search_edittext_padding_right"
                android:paddingTop="@dimen/drawable_padding"
                android:maxLines="1" />

            <ImageView
                android:id="@+id/clearSearchImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/clear_search_button_margin"
                android:padding="@dimen/view_padding"
                android:src="@drawable/icn_close_small"
                android:visibility="gone" />
        </LinearLayout>

        <Button
            android:id="@+id/clearFiltersButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/clear_filter_button_background"
            android:text="@string/not_defined"
            android:visibility="visible"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/filterableDataRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/search_layout"
            android:layout_above="@id/clearFiltersButton"
            android:layout_marginLeft="@dimen/view_margin"
            android:layout_marginRight="@dimen/view_margin"
            android:layout_marginTop="@dimen/view_margin"
            />


    </RelativeLayout>
</LinearLayout>