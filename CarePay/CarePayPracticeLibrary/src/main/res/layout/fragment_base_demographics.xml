                    tools:hint="Secondary Race" />

            </com.carecloud.carepaylibray.customcomponents.CarePayTextInputLayout>

            <include
                android:id="@+id/secondaryRaceOptional"
                layout="@layout/layout_optional_text_view" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ethnicityDemographicsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
