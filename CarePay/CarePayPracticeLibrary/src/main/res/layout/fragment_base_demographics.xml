<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:breeze="http://schemas.carecloud.com/breeze"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/genderDemographicsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="@dimen/dimen_57dp"
            android:layout_height="match_parent"
            android:tag="@string/tag_demographics_error_show_inv"
            android:visibility="visible">

            <include
                layout="@layout/demographics_select_error"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.carecloud.carepaylibray.customcomponents.CarePayTextInputLayout
                android:id="@+id/genderInputLayout"
                style="@style/SigninSignupTextInputStyle"
                app:customAssetFont="proxima_nova_semi_bold"
                app:hintTextAppearance="@style/FloatingLabelStyle">

                <com.carecloud.carepaylibray.customcomponents.CarePayEditText
                    android:id="@+id/genderEditText"
                    style="@style/DemographicsReviewEditTextStyle"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:drawableEnd="@drawable/icon_drop_down"
                    android:editable="false"
                    android:focusableInTouchMode="false"
                    android:imeOptions="actionNext"
                    app:customAssetFont="proxima_nova_regular"
                    app:hintTextAppearance="@style/FloatingLabelStyle"
                    breeze:hintKey="demographics_review_gender"
                    tools:hint="Gender" />

            </com.carecloud.carepaylibray.customcomponents.CarePayTextInputLayout>

            <include
                android:id="@+id/genderOptionalLabel"
                layout="@layout/layout_optional_text_view" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/raceDemographicsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="@dimen/dimen_57dp"
            android:layout_height="match_parent"
            android:tag="@string/tag_demographics_error_show_inv"
            android:visibility="invisible">

            <include
                layout="@layout/demographics_select_error"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.carecloud.carepaylibray.customcomponents.CarePayTextInputLayout
                android:id="@+id/raceInputLayout"
                style="@style/SigninSignupTextInputStyle"
                app:customAssetFont="proxima_nova_semi_bold"
                app:hintTextAppearance="@style/FloatingLabelStyle">

                <com.carecloud.carepaylibray.customcomponents.CarePayEditText
                    android:id="@+id/raceEditText"
                    style="@style/DemographicsReviewEditTextStyle"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:drawableEnd="@drawable/icon_drop_down"
                    android:editable="false"
                    android:focusableInTouchMode="false"
                    android:imeOptions="actionNext"
                    app:customAssetFont="proxima_nova_regular"
                    app:hintTextAppearance="@style/FloatingLabelStyle"
                    breeze:hintKey="demographics_review_race"
                    tools:hint="Race" />

            </com.carecloud.carepaylibray.customcomponents.CarePayTextInputLayout>

            <include
                android:id="@+id/raceOptionalLabel"
                layout="@layout/layout_optional_text_view" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondaryRaceDemographicsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="@dimen/dimen_57dp"
            android:layout_height="match_parent"
            android:tag="@string/tag_demographics_error_show_inv"
            android:visibility="invisible">

            <include
                layout="@layout/demographics_select_error"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.carecloud.carepaylibray.customcomponents.CarePayTextInputLayout
                android:id="@+id/secondaryRaceInputLayout"
                style="@style/SigninSignupTextInputStyle"
                app:customAssetFont="proxima_nova_semi_bold"
                app:hintTextAppearance="@style/FloatingLabelStyle">

                <com.carecloud.carepaylibray.customcomponents.CarePayEditText
                    android:id="@+id/secondaryRaceEditText"
                    style="@style/DemographicsReviewEditTextStyle"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:drawableEnd="@drawable/icon_drop_down"
                    android:editable="false"
                    android:focusableInTouchMode="false"
                    android:imeOptions="actionNext"
                    app:customAssetFont="proxima_nova_regular"
                    app:hintTextAppearance="@style/FloatingLabelStyle"
