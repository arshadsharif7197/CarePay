<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/add_apt_available_hours_edit_range_height"
        android:background="@color/payne_gray"
        android:orientation="horizontal"
        android:weightSum="3">

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            app:customAssetFont="proxima_nova_regular"
            android:id="@+id/date_range_custom_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/apt_dl_image_radius"
            android:layout_weight="2"
            android:maxLines="1"
            android:textColor="@color/glitter"
            android:textSize="@dimen/checked_in_label_font"
            />

        <Button
            android:id="@+id/add_appointment_date_pick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical|right"
            android:layout_weight="1"
            android:background="@color/transparent_apt"
            android:text="@string/edit_range_button_label"
            android:textColor="@color/white"
            android:textSize="@dimen/apt_list_upcoming_month_txt_size" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/available_hours_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:paddingLeft="@dimen/apt_available_hours_list_padding"
        android:paddingRight="@dimen/apt_available_hours_list_padding" />

    <Button
        android:id="@+id/edit_date_range_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/add_apt_available_hours_edit_range_height"
        android:layout_margin="@dimen/apt_available_hours_list_padding"
        android:background="@drawable/button_blue_border"
        android:text="@string/edit_date_range_button_label"
        android:textColor="@color/bright_cerulean"
        android:textSize="@dimen/apt_list_upcoming_month_txt_size"
        android:visibility="gone" />

</LinearLayout>
