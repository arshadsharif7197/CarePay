<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dateSeparatorContainerStartMargin"
    android:layout_marginBottom="@dimen/dateSeparatorContainerBottomMargin"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="@dimen/dateSeparatorContainerVerticalPadding"
    android:paddingBottom="@dimen/dateSeparatorContainerVerticalPadding">

    <com.carecloud.carepaylibray.customcomponents.CarePayTextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/confirm_pin_sub_title"
        android:textSize="@dimen/dateSeparatorTextSize"
        card_view:customAssetFont="gotham_rounded_medium" />
</LinearLayout>