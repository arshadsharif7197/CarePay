<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/findPatientItemVerticalPadding"
    android:paddingTop="@dimen/findPatientItemVerticalPadding">

    <com.carecloud.carepaylibray.customcomponents.CarePayTextView
        android:id="@+id/patientDOBTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:textColor="@color/lightSlateGray"
        android:textSize="@dimen/patientDOBTextSize"
        app:customAssetFont="proxima_nova_regular"
        tools:text="12/12/1988" />

    <com.carecloud.carepaylibray.customcomponents.CarePayTextView
        android:id="@+id/search_result_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/patientDOBTextView"
        android:gravity="start"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/charcoal"
        android:textSize="@dimen/patientDOBTextSize"
        app:customAssetFont="proxima_nova_regular"
        tools:text="Pablo Johnson" />

</RelativeLayout>