<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/drawable_padding"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/headerItemTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:textSize="@dimen/custom_filter_text_size"
        android:paddingTop="@dimen/view_padding"
        android:paddingBottom="@dimen/view_padding"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/custom_filter_list_divider_background"/>
</LinearLayout>