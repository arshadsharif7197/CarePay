<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@color/filterSectionTitleBackground"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <com.carecloud.carepaylibray.customcomponents.CarePayTextView
        android:id="@+id/headerItemTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/drawable_padding"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/customFilterHeaderPadding"
        android:paddingTop="@dimen/customFilterHeaderPadding"
        android:paddingEnd="@dimen/customFilterHeaderPadding"
        android:paddingBottom="@dimen/customFilterHeaderPadding"
        android:textColor="@android:color/white"
        android:textSize="@dimen/custom_filter_text_size"
        app:customAssetFont="gotham_rounded_bold"
        tools:text="Providers" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/filterSeparatorBackground" />
</LinearLayout>