<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="@dimen/dimen_14dp"
    android:paddingStart="@dimen/dimen_14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_15dp"
        android:paddingTop="@dimen/dimen_15dp">

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/payment_details_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.6"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="1"
            android:text="Patient Balance"
            android:textColor="@color/lightSlateGray"
            android:textSize="@dimen/text_size_17"
            app:customAssetFont="proxima_nova_regular" />

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/payment_details_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:maxWidth="90dp"
            android:background="@drawable/round_border_button_bg"
            android:layout_weight="0.2"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="Details"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_13"
            app:customAssetFont="proxima_nova_regular" />

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/payment_details_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:text="$4554"
            android:textColor="@color/lightSlateGray"
            android:textSize="@dimen/text_size_14"
            app:customAssetFont="proxima_nova_regular" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color" />

</LinearLayout>