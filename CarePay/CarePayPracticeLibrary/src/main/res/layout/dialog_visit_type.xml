<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/closeViewLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/button_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/dialog_button_bg" />

            <ImageView
                android:id="@+id/cancel_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/icn_close" />
        </RelativeLayout>

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/closeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:textColor="@color/gray_white"
            android:textSize="12sp"
            app:customAssetFont="gotham_rounded_bold"
            android:visibility="gone"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="@dimen/visit_type_dialog_width"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/dialog_background"
        android:layout_marginStart="@dimen/dimen_26dp"
        android:layout_marginEnd="@dimen/dimen_26dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/respons_toolbar"
            style="@style/CustomToolbarStyle"
            android:background="@drawable/top_left_right_rounded_background">

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/respons_toolbar_title"
                style="@style/ResponsibilityToolbarTextStyle"
                app:customAssetFont="gotham_rounded_medium"/>

        </android.support.v7.widget.Toolbar>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/visitTypeList"
            android:layout_width="match_parent"
            android:layout_height="@dimen/visit_type_list_height"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:divider="@color/divider_color"
            android:dividerHeight="1dp"
            android:elevation="17dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:scrollbars="none"
            android:contentDescription="@string/content_description_visit_type"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dialog_button_bg" />

    </FrameLayout>

</LinearLayout>
