<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:breeze="http://schemas.carecloud.com/breeze"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/closeViewLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/button_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/dialog_button_bg" />

            <ImageView
                android:id="@+id/cancel_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/icn_close" />
        </RelativeLayout>

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/closeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:textColor="@color/gray_white"
            android:textSize="12sp"
            android:visibility="gone"
            app:customAssetFont="gotham_rounded_bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dialog_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/visitTypeDialogHorizontalMargin"
        android:layout_marginEnd="@dimen/visitTypeDialogHorizontalMargin"
        android:background="@drawable/dialog_background"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/respons_toolbar"
            style="@style/CustomToolbarStyle"
            android:background="@drawable/top_left_right_rounded_background">

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/respons_toolbar_title"
                style="@style/ResponsibilityToolbarTextStyle"
                app:customAssetFont="gotham_rounded_medium" />

        </android.support.v7.widget.Toolbar>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/visitTypeList"
            android:layout_width="match_parent"
            android:layout_height="@dimen/visitTypeListHeight"
            android:layout_marginStart="@dimen/visitTypeListMargin"
            android:layout_marginEnd="@dimen/visitTypeListMargin"
            android:layout_marginBottom="@dimen/visitTypeListMargin"
            android:contentDescription="@string/content_description_visit_type"
            android:divider="@color/divider_color"
            android:dividerHeight="1dp"
            android:elevation="17dp"
            android:scrollbars="none" />

        <RelativeLayout
            android:id="@+id/emptyStateScreen"
            android:layout_width="match_parent"
            android:layout_height="@dimen/visitTypeListHeight"
            android:visibility="gone">

            <View
                android:id="@+id/placeHolder"
                android:layout_width="@dimen/dimen_1dp"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_centerInParent="true" />

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/placeHolder"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/visitTyTypeDialogSubTitleBottomMargin"
                android:gravity="center"
                android:paddingStart="@dimen/visitTyTypeDialogSubTitleHorizontalMargin"
                android:paddingEnd="@dimen/visitTyTypeDialogSubTitleHorizontalMargin"
                android:textColor="@color/cadet_gray"
                android:textSize="@dimen/visityTypeDialogSubTitleTextSize"
                app:customAssetFont="proxima_nova_regular"
                breeze:textKey="appointment.visitType.message.label.emptyScreenSubTitle"
                tools:text="Your practice currently has no visit type available at the moment" />

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/subtitle"
                android:gravity="center"
                android:padding="@dimen/visitTyTypeDialogTitlePadding"
                android:textColor="@color/charcoal"
                android:textSize="@dimen/visitTyTypeDialogTitleTextSize"
                app:customAssetFont="gotham_rounded_book"
                breeze:textKey="appointment.visitType.message.label.emptyScreenTitle"
                tools:text="No visit type available" />

        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dialog_button_bg" />

    </FrameLayout>

</LinearLayout>
