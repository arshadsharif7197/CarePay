<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:breeze="http://schemas.carecloud.com/breeze"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/find_patient_bg"
    android:gravity="center">

    <com.carecloud.carepaylibray.customcomponents.CarePayTextView
        android:id="@+id/carePayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_26dp"
        android:layout_marginStart="@dimen/dimen_164dp"
        android:gravity="center|center_horizontal"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_36sp"
        app:customAssetFont="gotham_rounded_medium"
        breeze:textKey="practice_filter_find_patient_first" />

    <LinearLayout
        android:id="@+id/contain_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/carePayTextView"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="top"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/find_patient_close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/dimen_3dp"
            android:layout_marginEnd="@dimen/dimen_26dp"
            android:background="@drawable/round_semi_transparent_bg"
            android:src="@drawable/icn_close" />

        <LinearLayout
            android:layout_width="520dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.carecloud.carepaylibray.customcomponents.CarePayEditText
                android:id="@+id/find_patient_edit_box"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_60dp"
                android:background="@drawable/bg_find_patient_edit_box"
                android:inputType="textVisiblePassword"
                android:paddingBottom="@dimen/dimen_17dp"
                android:paddingEnd="@dimen/dimen_24dp"
                android:paddingStart="@dimen/dimen_24dp"
                android:paddingTop="@dimen/dimen_17dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_22"
                app:customAssetFont="proxima_nova_regular"
                breeze:hintKey="practice_filter_search_patient" />

            <com.carecloud.carepaylibray.customcomponents.RecyclerViewWithDivider
                android:id="@+id/patient_searched_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_18dp"
                android:background="@drawable/layout_white_background"
                android:paddingLeft="@dimen/dimen_11dp"
                android:paddingRight="@dimen/dimen_11dp"
                android:visibility="gone" />

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/patient_not_found_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_18dp"
                android:paddingTop="@dimen/dimen_11dp"
                android:paddingBottom="@dimen/dimen_11dp"
                android:background="@drawable/layout_white_background"
                android:textColor="@color/textview_default_textcolor"
                android:textSize="15sp"
                app:customAssetFont="proxima_nova_regular"
                breeze:textKey="practice_filter_patient_not_found"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>