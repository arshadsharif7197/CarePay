<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/closeViewLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/button_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/dialog_button_bg" />

            <ImageView
                android:id="@+id/cancel_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/icn_close" />
        </RelativeLayout>

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/closeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:textColor="@color/gray_white"
            app:customAssetFont="gotham_rounded_bold"
            android:textSize="@dimen/text_size_12sp"
            android:visibility="gone"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="@dimen/dialog_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_26dp"
        android:layout_marginEnd="@dimen/dimen_26dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="vertical">

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/content_view_header_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/contentViewHeaderTitleHeight"
            android:background="@drawable/patient_mode_dialog_header_bg"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/contentViewHeaderTitleTextSize"
            android:textAllCaps="false"
            app:customAssetFont="gotham_rounded_medium" />

        <FrameLayout
            android:id="@+id/base_dialog_content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/patient_mode_dialog_body_bg"
            android:orientation="vertical">

        </FrameLayout>
        <LinearLayout
            android:id="@+id/footer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dimen_30dp"
            android:paddingLeft="@dimen/dimen_24dp"
            android:paddingRight="@dimen/dimen_24dp"
            android:layout_marginTop="@dimen/dimen_30dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <com.carecloud.carepaylibray.customcomponents.CarePayButton
                android:id="@+id/footer_main_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:background="@drawable/bg_yellow_overlay"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_22sp"
                android:textAllCaps="false"
                android:enabled="false"
                app:customAssetFont="gotham_rounded_medium"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/dialog_button_bg" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>