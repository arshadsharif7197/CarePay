<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:breeze="http://schemas.carecloud.com/breeze"
    style="@style/DemographicsDocsHeaderStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/demographicPictureContainerPadding">

    <ImageView
        android:id="@+id/DetailsProfileImage"
        android:layout_width="@dimen/dialog_profile_pic_size"
        android:layout_height="@dimen/dialog_profile_pic_size"
        android:contentDescription="@string/profile_picture"
        android:src="@drawable/icn_placeholder_user_profile_png" />

    <com.carecloud.carepaylibray.customcomponents.CarePayButton
        android:id="@+id/changeCurrentPhotoButton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/commonButtonHeight"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/changeCurrentPhotoButtonTopMargin"
        android:background="@drawable/button_background"
        android:minHeight="0dp"
        android:paddingStart="@dimen/changeCurrentPhotoButtonHorizontalPadding"
        android:paddingTop="@dimen/changeCurrentPhotoButtonVerticalPadding"
        android:paddingEnd="@dimen/changeCurrentPhotoButtonHorizontalPadding"
        android:paddingBottom="@dimen/changeCurrentPhotoButtonVerticalPadding"
        android:text="@string/selectOrTakePhotoButton"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/changeCurrentPhotoButtonTextSize"
        app:customAssetFont="gotham_rounded_medium"
        breeze:textKey="demographics_take_picture_button_title" />

</LinearLayout>
