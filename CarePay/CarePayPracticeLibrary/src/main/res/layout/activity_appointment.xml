<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_appointments"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen_background"
    tools:context=".checkin.PatientModePracticeCheckInActivity">

    <TextView
        android:id="@+id/logoutTextview"
        android:layout_width="@dimen/nav_header_height"
        android:layout_height="@dimen/dimen_48dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/dimen_22dp"
        android:layout_marginTop="@dimen/dimen_22dp"
        android:background="@drawable/bg_blue_overlay"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_22dp" />


    <ImageView
        android:id="@+id/titleHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/dimen_22dp"
        android:paddingTop="@dimen/dimen_22dp"
        android:src="@drawable/logo_light" />

    <com.carecloud.carepaylibray.customcomponents.CarePayTextView
        android:id="@+id/titleSelectappointmentcheckin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleHeader"
        android:layout_centerHorizontal="true"
        android:includeFontPadding="false"
        android:paddingBottom="@dimen/dimen_8dp"
        android:textSize="@dimen/demographics_docs_section_margin_top"
        app:customAssetFont="gotham_rounded_medium" />

    <com.carecloud.carepaylibray.customcomponents.CarePayTextView
        android:id="@+id/titleSelectappointmentsubheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleSelectappointmentcheckin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_22dp"
        android:includeFontPadding="false"
        android:textSize="@dimen/dimen_20dp"
        app:customAssetFont="proxima_nova_regular" />

    <ProgressBar
        android:id="@+id/appointmentProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-8dp"
        android:indeterminate="true" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/appointment_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_500dp"
        android:layout_below="@+id/titleSelectappointmentsubheader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_22dp"
        android:orientation="horizontal"
        android:scrollbars="horizontal" />

    <LinearLayout
        android:id="@+id/no_appointment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titleSelectappointmentsubheader"
        android:orientation="vertical"

        android:visibility="gone">

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/placeHolderIconTextViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="72dp"
            android:background="@drawable/circle_shape"
            android:gravity="center"
            android:text="@string/PlaceHolderIcon"
            android:textColor="@color/pastel_blue"
            android:textSize="13sp"
            app:customAssetFont="proxima_nova_regular" />

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/no_apt_message_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/no_apt_message_title_margin_top"
            android:gravity="center"
            android:textColor="@color/textview_default_textcolor"
            android:textSize="21sp"
            app:customAssetFont="gotham_rounded_medium" />

    </LinearLayout>

    <ImageView
        android:id="@+id/btnHome"
        style="@style/HomeButtonIcon"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
