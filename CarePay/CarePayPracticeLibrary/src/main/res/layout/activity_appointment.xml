<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_appointments"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_default"
    tools:context=".appointments.AppointmentsActivity">

    <TextView
        android:id="@+id/logoutTextview"
        android:layout_width="@dimen/nav_header_height"
        android:layout_height="@dimen/dimen_48dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/dimen_22dp"
        android:layout_marginTop="@dimen/dimen_22dp"
        android:background="@drawable/bg_blue_overlay"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_22dp" />


        <ImageView
            android:id="@+id/titleHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="@dimen/dimen_22dp"
            android:paddingTop="@dimen/dimen_22dp"
            android:src="@drawable/logo_light" />

    <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedMediumLabel
        android:id="@+id/titleSelectappointmentcheckin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleHeader"
        android:layout_centerHorizontal="true"
        android:includeFontPadding="false"
        android:paddingBottom="@dimen/dimen_8dp"
        android:textSize="@dimen/demographics_docs_section_margin_top" />

    <com.carecloud.carepaylibray.customcomponents.CustomProxyNovaRegularLabel
        android:id="@+id/titleSelectappointmentsubheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleSelectappointmentcheckin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_22dp"
        android:includeFontPadding="false"
        android:textSize="@dimen/dimen_20dp" />
    <ProgressBar
        android:id="@+id/appointmentProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-8dp"
        android:indeterminate="true" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/appointment_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_500dp"
        android:layout_below="@+id/titleSelectappointmentsubheader"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_22dp"
        android:scrollbars="horizontal" />
    <LinearLayout
        android:id="@+id/no_appointment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/titleSelectappointmentsubheader"

        android:visibility="gone">

        <com.carecloud.carepaylibray.customcomponents.CustomProxyNovaRegularLabel
            android:id="@+id/placeHolderIconTextViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="72dp"
            android:background="@drawable/circle_shape"
            android:gravity="center"
            android:text="@string/PlaceHolderIcon"
            android:textColor="@color/pastel_blue"
            android:textSize="13sp" />

        <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedMediumLabel
            android:id="@+id/no_apt_message_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/no_apt_message_title_margin_top"
            android:gravity="center"
            android:textColor="@color/textview_default_textcolor"
            android:textSize="21sp" />

    </LinearLayout>
    <ImageView
        android:id="@+id/btnHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/dimen_20dp"
        android:paddingLeft="@dimen/dimen_24dp"
        android:src="@drawable/icn_home" />

</RelativeLayout>
