<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    style="@style/DemographicsDocsHeaderStyle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_marginTop="0dp">

    <ImageView
        android:id="@+id/DetailsProfileImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icn_placeholder_user_profile_png"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/profile_picture"/>

    <Button
        android:id="@+id/changeCurrentPhotoButton"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/blue_border_silver_bg"
        android:textColor="@color/blue_cerulian"
        android:textSize="13sp"
        android:layout_marginBottom="15dp"
        android:text="@string/selectOrTakePhotoButton"/>

</LinearLayout>
