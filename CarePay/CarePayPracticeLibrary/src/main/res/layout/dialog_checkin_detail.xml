<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/checkInDetailDialogLayout"
    android:layout_width="@dimen/appointment_detail_dialog_width"
    android:layout_height="@dimen/appointment_detail_dialog_height"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_rounded_border"
        android:orientation="vertical">

        <com.carecloud.carepaylibray.customcomponents.CustomProxyNovaSemiBoldLabel
            android:id="@+id/checkingInLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/custom_appointment_dialog_view_margin"
            android:background="@drawable/right_rounded_background"
            android:padding="@dimen/custom_appointment_dialog_view_padding"
            android:textColor="@color/charcoal_78"
            android:textSize="@dimen/custom_appointment_dialog_view_textsize_small" />

        <com.carecloud.carepaylibray.customcomponents.CustomProxyNovaSemiBoldLabel
            android:id="@+id/patientNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/custom_appointment_dialog_label_margin"
            android:textColor="@color/charcoal"
            android:textSize="@dimen/custom_appointment_dialog_view_textsize_large" />

        <com.carecloud.carepaylibray.customcomponents.CustomProxyNovaSemiBoldLabel
            android:id="@+id/doctorNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:textColor="@color/taupe_gray_78"
            android:textSize="@dimen/custom_appointment_dialog_view_textsize_medium" />

        <View
            android:layout_width="@dimen/appointment_detail_dialog_divider_width"
            android:layout_height="1.5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/appointment_detail_dialog_divider_margin"
            android:background="@color/manatee_20" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/appointment_detail_dialog_divider_margin"
            android:orientation="horizontal">

            <com.carecloud.carepaylibray.customcomponents.CustomProxyNovaSemiBoldLabel
                android:id="@+id/balanceTextLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/charcoal"
                android:textSize="@dimen/custom_appointment_dialog_view_textsize_medium" />

            <com.carecloud.carepaylibray.customcomponents.CustomProxyNovaSemiBoldLabel
                android:id="@+id/balanceValueLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/charcoal"
                android:textSize="@dimen/custom_appointment_dialog_view_textsize_medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/custom_appointment_dialog_layout_margin"
            android:background="@color/timberwolf_20"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/custom_appointment_dialog_view_padding"
            android:paddingTop="@dimen/custom_appointment_dialog_layout_padding"
            android:weightSum="4">

            <CheckBox
                android:id="@+id/demographicsCheckbox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/custom_appointment_dialog_checkbox_margin"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:clickable="false"
                android:drawablePadding="@dimen/custom_appointment_dialog_view_padding"
                android:drawableTop="@drawable/custom_checkbox_selector"
                android:gravity="center_horizontal"
                android:textColor="@color/charcoal"
                android:textSize="@dimen/custom_appointment_dialog_checkbox_textsize" />

            <View
                android:layout_width="@dimen/appointment_detail_dialog_checkbox_divider_width"
                android:layout_height="@dimen/appointment_detail_dialog_checkbox_divider_height"
                android:layout_marginLeft="@dimen/appointment_detail_dialog_checkbox_divider_margin"
                android:layout_marginRight="@dimen/appointment_detail_dialog_checkbox_divider_margin"
                android:layout_marginTop="@dimen/appointment_detail_dialog_checkbox_divider_margin_top"
                android:background="@color/timberwolf"
                android:gravity="center_horizontal" />

            <CheckBox
                android:id="@+id/consentFormsCheckbox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/custom_appointment_dialog_checkbox_margin"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:clickable="false"
                android:drawablePadding="@dimen/custom_appointment_dialog_view_padding"
                android:drawableTop="@drawable/custom_checkbox_selector"
                android:gravity="center_horizontal"
                android:textColor="@color/charcoal"
                android:textSize="@dimen/custom_appointment_dialog_checkbox_textsize" />

            <View
                android:layout_width="@dimen/appointment_detail_dialog_checkbox_divider_width"
                android:layout_height="@dimen/appointment_detail_dialog_checkbox_divider_height"
                android:layout_marginLeft="@dimen/appointment_detail_dialog_checkbox_divider_margin"
                android:layout_marginRight="@dimen/appointment_detail_dialog_checkbox_divider_margin"
                android:layout_marginTop="@dimen/appointment_detail_dialog_checkbox_divider_margin_top"
                android:background="@color/timberwolf"
                android:gravity="center_horizontal" />

            <CheckBox
                android:id="@+id/intakeCheckbox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/custom_appointment_dialog_checkbox_margin"
                android:layout_weight="1"
                android:button="@null"
                android:clickable="false"
                android:drawablePadding="@dimen/custom_appointment_dialog_view_padding"
                android:drawableTop="@drawable/custom_checkbox_selector"
                android:gravity="center_horizontal"
                android:textColor="@color/charcoal"
                android:textSize="@dimen/custom_appointment_dialog_checkbox_textsize" />

            <View
                android:layout_width="@dimen/appointment_detail_dialog_checkbox_divider_width"
                android:layout_height="@dimen/appointment_detail_dialog_checkbox_divider_height"
                android:layout_marginLeft="@dimen/appointment_detail_dialog_checkbox_divider_margin"
                android:layout_marginRight="@dimen/appointment_detail_dialog_checkbox_divider_margin"
                android:layout_marginTop="@dimen/appointment_detail_dialog_checkbox_divider_margin_top"
                android:background="@color/timberwolf"
                android:gravity="center_horizontal" />

            <CheckBox
                android:id="@+id/responsibilityCheckbox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/custom_appointment_dialog_checkbox_margin"
                android:layout_weight="1"
                android:button="@null"
                android:clickable="false"
                android:drawablePadding="@dimen/custom_appointment_dialog_view_padding"
                android:drawableTop="@drawable/custom_checkbox_end_selector"
                android:gravity="center_horizontal"
                android:textColor="@color/charcoal"
                android:textSize="@dimen/custom_appointment_dialog_checkbox_textsize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/custom_appointment_dialog_layout_padding"
            android:paddingTop="@dimen/custom_appointment_dialog_layout_padding"
            android:weightSum="4">

            <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedMediumButton
                android:id="@+id/paymentButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/custom_appointment_dialog_checkbox_margin"
                android:layout_weight="1"
                android:background="@drawable/button_rounded_border"
                android:padding="@dimen/custom_appointment_dialog_view_padding"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/custom_appointment_dialog_button_textsize" />

            <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedMediumButton
                android:id="@+id/assistButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/custom_appointment_dialog_checkbox_margin"
                android:layout_weight="1"
                android:background="@drawable/button_rounded_border"
                android:padding="@dimen/custom_appointment_dialog_view_padding"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/custom_appointment_dialog_button_textsize" />

            <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedMediumButton
                android:id="@+id/pageButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/custom_appointment_dialog_checkbox_margin"
                android:layout_weight="1"
                android:background="@drawable/button_rounded_border"
                android:padding="@dimen/custom_appointment_dialog_view_padding"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/custom_appointment_dialog_button_textsize" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/patientImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/container_avatar"/>

</RelativeLayout>