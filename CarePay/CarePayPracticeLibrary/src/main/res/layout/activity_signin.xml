<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_default"
    android:orientation="vertical"
    android:padding="@dimen/dimen_20dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34.2dp"
        android:src="@drawable/cp_logo"
        android:id="@+id/imageView" />



    <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedMediumLabel
        android:id="@+id/languageTextview"
        android:layout_width="112dp"
        android:layout_height="51dp"
        android:background="@drawable/bg_blue_overlay"
        android:drawableEnd="@drawable/icn_down_white"
        android:includeFontPadding="false"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="15dp"
        android:layout_marginTop="21.4dp"
        android:text="EN"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:layout_alignParentEnd="true" />


    <com.carecloud.carepaylibray.customcomponents.CarePayTextView
        android:id="@+id/signinTitleTextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="230.0dp"
        android:layout_marginBottom="@dimen/dimen_15dp"
        android:paddingLeft="@dimen/dimen_20dp"
        android:gravity="center"
        android:text="@string/signin_title"
        android:textSize="@dimen/signin_title_textsize"
        android:textColor="@color/white"
        app:customAssetFont="gotham_rounded_medium" />
    <ProgressBar
        android:id="@+id/signInProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="-8dp"
        android:indeterminate="true"/>



    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="500.0dp"
        android:layout_height="193.0dp"
        android:background="@drawable/layout_shadow"
        android:elevation="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/signinTitleTextview"
        android:layout_centerHorizontal="true">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/signInEmailTextInputLayout"
            style="@style/TextInputLayoutStyle"
            app:hintTextAppearance="@style/FloatingLabelStyle">

        <EditText
            android:id="@+id/signinEmailpracticeEditText"
            style="@style/EditTextStyle"
            android:hint="@string/signin_signup_email_hint"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"/>
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/passwordTextInputLayout"
            android:layout_below="@+id/signInEmailTextInputLayout"
            style="@style/TextInputLayoutStyle"
            app:hintTextAppearance="@style/FloatingLabelStyle"
            app:passwordToggleEnabled="false">

            <EditText
                android:id="@+id/passwordpracticeEditText"
                style="@style/EditTextStyle"
                android:hint="@string/password_text"
                android:imeOptions="actionDone"
                android:inputType="textPassword"/>

        </android.support.design.widget.TextInputLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="51dp"
    android:layout_below="@id/passwordTextInputLayout"
    android:gravity="center_horizontal">
        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/signinTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:customAssetFont="gotham_rounded_medium"
            android:text="Sign-in"
            android:paddingBottom="10dp"
            android:textColor="@color/bright_cerulean"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="70dp"
            android:paddingTop="6dp"
            android:paddingBottom="10dp"
            android:layout_alignParentEnd="@id/signinTextview"
            android:src="@drawable/icn_right_arrow"
            android:id="@+id/rightarrow" />

</RelativeLayout>

    </RelativeLayout>

    <com.carecloud.carepaylibray.customcomponents.CarePayTextView
        android:id="@+id/forgot_passwordTextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/forgot_password"
        android:textSize="@dimen/forgotpassword_textsize"
        android:textColor="@color/white"
        app:customAssetFont="proxima_nova_regular"
        android:layout_below="@+id/mainLayout"
        android:layout_alignParentStart="true" />


</RelativeLayout>