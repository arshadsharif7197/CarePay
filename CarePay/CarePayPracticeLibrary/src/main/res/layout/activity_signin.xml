<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_default"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/home_main_margin_end"
        android:layout_marginStart="@dimen/home_main_margin_start"
        android:layout_marginTop="@dimen/home_main_margin_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedMediumLabel
                android:id="@+id/goBackButtonTextview"
                android:layout_width="wrap_content"
                android:layout_height="51dp"
                android:layout_marginTop="21.4dp"
                android:background="@drawable/bg_blue_overlay"
                android:drawableStart="@drawable/icn_arrow_left"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingEnd="20dp"
                android:paddingStart="15dp"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:visibility="gone" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="51dp"
                android:layout_marginTop="21.4dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingEnd="4dp"
                android:paddingStart="4dp">

                <Spinner
                    android:id="@+id/signinLangSpinner"
                    android:layout_width="@dimen/home_spinner_width"
                    android:layout_height="@dimen/home_spinner_height"
                    android:paddingEnd="@dimen/home_spinner_padding_righ_left"
                    android:paddingStart="@dimen/home_spinner_padding_righ_left"
                    android:background="@drawable/bg_blue_overlay"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="34.2dp"
            android:src="@drawable/cp_logo" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/signinTitleTextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_15dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/signin_title_textsize"
            app:customAssetFont="gotham_rounded_medium" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="500.0dp"
        android:layout_height="220dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="21dp"
        android:background="@drawable/layout_shadow"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingEnd="20dp"
        android:paddingStart="20dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/signInEmailTextInputLayout"
            style="@style/TextInputLayoutStyle"
            app:hintTextAppearance="@style/FloatingLabelStyle">

            <EditText
                android:id="@+id/signinEmailpracticeEditText"
                style="@style/EditTextStyle"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/passwordTextInputLayout"
            style="@style/TextInputLayoutStyle"
            app:hintTextAppearance="@style/FloatingLabelStyle"
            app:passwordToggleEnabled="false">

            <EditText
                android:id="@+id/passwordpracticeEditText"
                style="@style/EditTextStyle"
                android:imeOptions="actionDone"
                android:inputType="textPassword" />

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/signinTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/bright_cerulean"
                android:textSize="17sp"
                app:customAssetFont="gotham_rounded_medium" />

            <ImageView
                android:id="@+id/rightarrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:src="@drawable/icn_right_arrow" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-50dp"
        android:src="@drawable/home_shadow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal">

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/forgot_passwordTextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/forgotpassword_textsize"
            app:customAssetFont="proxima_nova_regular" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4" />
    <ImageView
        android:id="@+id/signInHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_20dp"
        android:paddingLeft="@dimen/dimen_24dp"
        android:src="@drawable/icn_home"
        android:visibility="gone"/>

</LinearLayout>
