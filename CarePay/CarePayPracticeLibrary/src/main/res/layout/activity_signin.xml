<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_default"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20.0dp"
        android:layout_marginTop="20.0dp"
        android:layout_weight="2.5"
        android:orientation="horizontal">

            <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedMediumLabel
                android:id="@+id/goBackButtonTextview"
                android:layout_width="wrap_content"
                android:layout_height="51dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="21.4dp"
                android:background="@drawable/bg_blue_overlay"
                android:drawableStart="@drawable/icn_arrow_left"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingEnd="20dp"
                android:paddingStart="15dp"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="34.2dp"
                android:layout_weight="1"
                android:src="@drawable/cp_logo" />


            <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedMediumLabel
                android:id="@+id/languageTextview"
                android:layout_width="112dp"
                android:layout_height="51dp"
                android:layout_marginTop="21.4dp"
                android:background="@drawable/bg_blue_overlay"
                android:drawableEnd="@drawable/icn_down_white"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingEnd="15dp"
                android:paddingStart="20dp"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/signinTitleTextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_15dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/signin_title_textsize"
            app:customAssetFont="gotham_rounded_medium" />

        <ProgressBar
            android:id="@+id/signInProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="-8dp"
            android:indeterminate="true" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/mainLayout"
            android:layout_width="500.0dp"
            android:layout_height="220.0dp"
            android:layout_marginTop="21dp"
            android:background="@drawable/layout_shadow"
            android:elevation="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/signInEmailTextInputLayout"
                style="@style/TextInputLayoutStyle"
                app:hintTextAppearance="@style/FloatingLabelStyle">

                <EditText
                    android:id="@+id/signinEmailpracticeEditText"
                    style="@style/EditTextStyle"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/passwordTextInputLayout"
                style="@style/TextInputLayoutStyle"
                app:hintTextAppearance="@style/FloatingLabelStyle"
                app:passwordToggleEnabled="false">

                <EditText
                    android:id="@+id/passwordpracticeEditText"
                    style="@style/EditTextStyle"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword" />

            </android.support.design.widget.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                    android:id="@+id/signinTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/bright_cerulean"
                    android:textSize="17sp"
                    app:customAssetFont="gotham_rounded_medium" />

                <ImageView
                    android:id="@+id/rightarrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/icn_right_arrow" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center_horizontal">

        <com.carecloud.carepaylibray.customcomponents.CarePayTextView
            android:id="@+id/forgot_passwordTextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/forgotpassword_textsize"
            app:customAssetFont="proxima_nova_regular" />

    </LinearLayout>

</LinearLayout>