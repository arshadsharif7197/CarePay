<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="@dimen/dimen_20dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/cp_logo" />

    <com.carecloud.carepaylibray.customcomponents.CarePayTextView
        android:id="@+id/signinTitleTextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mainLayout"
        android:layout_marginBottom="@dimen/dimen_15dp"
        android:paddingLeft="@dimen/dimen_20dp"
        android:text="@string/signin_title"
        android:textSize="@dimen/signin_title_textsize"
        android:textColor="@color/white"
        app:customAssetFont="proxima_nova_regular" />


    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="500dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:background="@drawable/layout_shadow"
        android:orientation="vertical"
        android:padding="10dp"></RelativeLayout>

    <!--<ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/cp_logo" />

    <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedMediumLabel
        android:id="@+id/signinTitleTextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_above="@+id/mainLayout"
        android:paddingLeft="@dimen/dimen_20dp"
        android:layout_marginBottom="@dimen/dimen_15dp"
        android:text="@string/signin_title"
        android:textColor="@color/white"
        android:textSize="@dimen/signin_title_textsize" />
    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="500dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:background="@drawable/layout_shadow"
        android:orientation="vertical"
        android:padding="10dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/signInEmailTextInputLayout"
            style="@style/TextInputLayoutStyle"
            app:hintTextAppearance="@style/FloatingLabelStyle">

            <EditText
                android:id="@+id/signinEmailEditText"
                style="@style/EditTextStyle"
                android:hint="@string/signin_signup_email_hint"
                android:inputType="textEmailAddress" />

        </android.support.design.widget.TextInputLayout>

        &lt;!&ndash;<View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/signInEmailTextInputLayout"
            android:background="@color/manatee" />&ndash;&gt;

        <android.support.design.widget.TextInputLayout
            android:id="@+id/passwordTextInputLayout"
            style="@style/TextInputLayoutStyle"
            android:layout_below="@+id/signInEmailTextInputLayout"
            android:layout_marginTop="@dimen/dimen_5dp"
            app:hintTextAppearance="@style/FloatingLabelStyle"
            app:passwordToggleEnabled="false">

            <EditText
                android:id="@+id/passwordEditText"
                style="@style/EditTextStyle"
                android:hint="@string/password_text"
                android:imeOptions="actionDone"
                android:inputType="textPassword" />

        </android.support.design.widget.TextInputLayout>

        &lt;!&ndash;<View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/passwordTextInputLayout"
            android:background="@color/manatee" />&ndash;&gt;

        <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedMediumLabel
            android:id="@+id/signin_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/passwordTextInputLayout"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:background="#00000000"
            android:gravity="center"
            android:text="@string/signin"
            android:textColor="@color/bright_cerulean"
            android:textSize="@dimen/signin_button_textsize" />

        <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedMediumLabel
            android:id="@+id/forgotPasswordButton"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="#00000000"
            android:gravity="center"
            android:text="@string/forgot_password"
            android:textColor="@color/white"
            android:textSize="@dimen/signin_button_textsize" />
    </RelativeLayout>

    <com.carecloud.carepaylibray.customcomponents.CustomGothamRoundedMediumLabel
        android:id="@+id/goBackTextview"
        android:layout_width="180dp"
        android:layout_height="53dp"
        android:background="@drawable/bg_blue_overlay"
        android:drawableLeft="@drawable/icn_arrow_left"
        android:includeFontPadding="false"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen_20dp"
        android:text="@string/go_back"
        android:textColor="@color/white"
        android:textSize="@dimen/go_back_textsize"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />-->

</RelativeLayout>