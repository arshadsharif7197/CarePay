<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:right="@dimen/dotHorizontalMargin">
        <shape android:shape="oval">
            <size
                android:width="@dimen/dotSize"
                android:height="@dimen/dotSize" />
            <solid android:color="@color/white" />
        </shape>
    </item>

    <item android:left="@dimen/dotHorizontalMargin">
        <shape android:shape="oval">
            <size
                android:width="@dimen/dotSize"
                android:height="@dimen/dotSize" />
            <solid android:color="@color/white" />
        </shape>
    </item>

    <item
        android:left="@dimen/dotSemiHorizontalMargin"
        android:right="@dimen/dotSemiHorizontalMargin">
        <shape android:shape="oval">
            <size
                android:width="@dimen/dotSize"
                android:height="@dimen/dotSize" />
            <solid android:color="@color/white" />
        </shape>
    </item>

</layer-list>