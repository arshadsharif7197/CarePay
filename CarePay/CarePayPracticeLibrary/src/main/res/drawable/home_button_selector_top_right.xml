<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/>
                    <size android:height="@dimen/home_button_height" android:width="@dimen/home_button_width"/>
                    <corners android:topRightRadius="10dp"/>
                </shape>
            </item>
            <item>
                <nine-patch android:src="@drawable/coming_soon"/>
            </item>

        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:topRightRadius="10dp"/>
                    <solid android:color="@color/home_button_pressed_shadow_margin"/>
                </shape>
            </item>

            <item android:drawable="@drawable/home_hover_shadow_vd"
                  android:top="2dp"
                  android:right="3dp"/>
        </layer-list>
    </item>

    <item android:drawable="@drawable/top_right_rounded_background" />

</selector>