<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <stroke android:color="@color/pastel_blue" android:width="@dimen/dimen_1dp"/>
            <corners android:radius="@dimen/dimen_100dp" />
            <size android:height="@dimen/dimen_100dp" android:width="@dimen/dimen_10dp"/>
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip android:clipOrientation="vertical"
              android:drawable="@drawable/queue_checkout_progress_indicator"
            android:gravity="bottom"/>
    </item>
</layer-list>