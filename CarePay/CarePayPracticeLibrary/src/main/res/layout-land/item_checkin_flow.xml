<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.carecloud.carepaylibray.customcomponents.CarePayTextView
        android:id="@+id/checkin_flow_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/checkInFlowTitleBottomMargin"
        android:textColor="@color/white_opacity_60"
        android:textSize="@dimen/checkInFlowTitleTextSize"
        app:customAssetFont="gotham_rounded_light" />

    <com.carecloud.carepaylibray.customcomponents.CarePayTextView
        android:id="@+id/checkin_flow_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/checkInFlowProgressStartMargin"
        android:background="@drawable/checkin_counter_forms_bg"
        android:paddingEnd="@dimen/checkInFlowProgressHorizontalPadding"
        android:paddingStart="@dimen/checkInFlowProgressHorizontalPadding"
        android:textColor="@color/white"
        android:textSize="@dimen/checkInFlowProgressTextSize"
        android:visibility="gone" />

</LinearLayout>