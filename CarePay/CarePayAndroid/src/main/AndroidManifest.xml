<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.carecloud.carepayandroid">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:name=".CarePayAndroidApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.DemoActivity"
            android:configChanges="orientation|screenSize|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.carecloud.carepaylibray.activities.DemographicsDocumentsScanActivity"
            android:parentActivityName=".activities.DemoActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.DemoActivity" />
        </activity>
        <activity
            android:name=".activities.ResponsibilityActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>

        <activity
            android:name=".activities.SelectLanguageActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">


        </activity>
        <activity
            android:name="com.carecloud.carepaylibray.activities.DemographicsActivity"
            android:parentActivityName=".activities.DemoActivity"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.DemoActivity" />
        </activity>

        <activity
            android:name=".activities.SignUpActivity"
            android:parentActivityName=".activities.DemoActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.DemoActivity" />
        </activity>

        <activity android:name=".activities.HomeScreenActivity"
            android:parentActivityName=".activities.DemoActivity"
          >
            </activity>
        <activity android:name=".activities.SignatureActivity"></activity>
    </application>

</manifest>