<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:breeze="http://schemas.carecloud.com/breeze"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <include layout="@layout/toolbar_demographics_settings" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/no_apt_place_holder_icon_margin_top"
                android:layout_marginLeft="@dimen/dimen_17dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/providerPicImageView"
                    android:layout_width="@dimen/signup_clickable_textview_height"
                    android:layout_height="@dimen/signup_clickable_textview_height"
                    android:layout_marginEnd="@dimen/textview_margin"
                    android:src="@drawable/icn_placeholder_user_profile" />

                <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                    android:id="@+id/patient_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_toEndOf="@id/providerPicImageView"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textview_default_textsize"
                    android:textStyle="bold"
                    app:customAssetFont="proxima_nova_semi_bold" />

                <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                    android:id="@+id/patient_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/patient_name"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_toEndOf="@id/providerPicImageView"
                    android:textColor="@color/lightSlateGray"
                    android:textSize="@dimen/textview_textsize"
                    app:customAssetFont="proxima_nova_regular" />

                <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                    android:id="@+id/editTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/dimen_12dp"
                    android:paddingEnd="@dimen/dimen_17dp"
                    android:paddingStart="0dp"
                    android:textColor="@color/emerald"
                    android:textSize="@dimen/button_textsize_medium"
                    app:customAssetFont="gotham_rounded_bold"
                    breeze:textKey="edit_button_label" />

            </RelativeLayout>

            <View
                android:id="@+id/main_item_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/list_apt_padding_right"
                android:layout_marginRight="@dimen/list_apt_padding_right"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/demographicsLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/signup_clickable_textview_height"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_36dp"
                android:background="@drawable/grey_bottom_border"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/demographicsImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dimen_5dp"
                    android:src="@drawable/icn_settings_demo" />

                <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                    android:id="@+id/demographicsTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/textview_default_textcolor"
                    android:textSize="@dimen/textview_default_textsize"
                    android:textStyle="bold"
                    app:customAssetFont="proxima_nova_regular"
                    breeze:textKey="demographics_label" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/documentsLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/signup_clickable_textview_height"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:background="@drawable/grey_bottom_border"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/documentsImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dimen_5dp"
                    android:src="@drawable/icn_settings_docs" />

                <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                    android:id="@+id/documentsTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/textview_default_textcolor"
                    android:textSize="@dimen/textview_default_textsize"
                    android:textStyle="bold"
                    app:customAssetFont="proxima_nova_regular"
                    breeze:textKey="documents_label" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/creditCardLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/signup_clickable_textview_height"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:background="@drawable/grey_bottom_border"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dimen_5dp"
                    android:src="@drawable/icn_payment_credit_card_default" />

                <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                    android:id="@+id/creditCardsTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/textview_default_textcolor"
                    android:textSize="@dimen/textview_default_textsize"
                    android:textStyle="bold"
                    app:customAssetFont="proxima_nova_regular"
                    breeze:textKey="credit_cards_label" />

            </LinearLayout>

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/carePayTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_25dp"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_19sp"
                android:textStyle="bold"
                app:customAssetFont="proxima_nova_regular"
                breeze:textKey="notifications_heading" />

            <CheckBox
                android:id="@+id/pushNotificationCheckBox"
                android:layout_width="match_parent"
                android:layout_height="@dimen/signup_clickable_textview_height"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:background="@drawable/grey_bottom_border"
                android:button="@null"
                android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
                android:gravity="center_vertical"
                android:text="HOLAHOLAHOLA"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/textview_default_textsize"
                android:theme="@style/MyCheckBox"
                breeze:textKey="push_notifications_checkbox_label" />

            <CheckBox
                android:id="@+id/emailNotificationCheckBox"
                android:layout_width="match_parent"
                android:layout_height="@dimen/signup_clickable_textview_height"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:background="@drawable/grey_bottom_border"
                android:button="@null"
                android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
                android:gravity="center_vertical"
                android:text="HOLAHOLAHOLA"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/textview_default_textsize"
                android:theme="@style/MyCheckBox"
                breeze:textKey="email_notifications_checkbox_label" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/signup_clickable_textview_height"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_25dp"
                android:background="@drawable/grey_bottom_border"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dimen_5dp"
                    android:src="@drawable/icn_settings_help" />

                <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                    android:id="@+id/helpTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/textview_default_textcolor"
                    android:textSize="@dimen/textview_default_textsize"
                    android:textStyle="bold"
                    app:customAssetFont="proxima_nova_regular"
                    breeze:textKey="help_label" />

            </LinearLayout>

            <Button
                android:id="@+id/signOutButton"
                style="@style/BreezeButtonStyleLight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_20dp"
                android:layout_marginBottom="@dimen/dimen_36dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                breeze:textKey="signout_button_label" />


        </LinearLayout>

    </ScrollView>


</LinearLayout>
