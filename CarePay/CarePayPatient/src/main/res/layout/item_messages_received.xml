<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.carecloud.carepaylibray.customcomponents.CarePayTextView
        android:id="@+id/time_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_15dp"
        android:textSize="@dimen/text_size_12sp"
        android:textColor="@color/lightSlateGray"
        tools:text="Yesterday, 10:17 AM"
        app:customAssetFont="proxima_nova_semi_bold"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dimen_5dp"
        android:paddingBottom="@dimen/dimen_5dp">

        <FrameLayout
            android:layout_width="@dimen/dimen_33dp"
            android:layout_height="@dimen/dimen_33dp">

            <ImageView
                android:id="@+id/participant_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/participant_initials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@drawable/round_list_tv"
                android:gravity="center_vertical|center_horizontal"
                android:src="@drawable/icn_placeholder_user_profile_png"
                android:textColor="@color/lightSlateGray"
                android:textSize="@dimen/text_size_12sp"
                android:textAllCaps="true"
                tools:text="mo"
                app:customAssetFont="gotham_rounded_medium"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="@dimen/dimen_5dp"
            android:paddingEnd="@dimen/dimen_30dp">

            <LinearLayout
                android:id="@+id/message_metadata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="start">

                <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                    android:id="@+id/participant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_12sp"
                    android:textColor="@color/lightSlateGray"
                    tools:text="Mr. Diego Del Aguila"
                    app:customAssetFont="proxima_nova_semi_bold"/>

                <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                    android:id="@+id/participant_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_12sp"
                    android:textColor="@color/lightSlateGray"
                    tools:text="Personal Medico"
                    app:customAssetFont="proxima_nova_semi_bold"/>

                <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                    android:id="@+id/time_stamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_5dp"
                    android:textSize="@dimen/text_size_12sp"
                    android:textColor="@color/lightSlateGray"
                    tools:text="10:17 AM"
                    app:customAssetFont="proxima_nova_regular"/>

            </LinearLayout>

            <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                android:id="@+id/message_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/message_received_background"
                android:padding="@dimen/dimen_10dp"
                android:gravity="start"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/text_size_16"
                tools:text="Hey. I'm sorry ... I was in the shower. I have 20 minutes to be at the shooting of the film Suicide Squad"
                app:customAssetFont="proxima_nova_regular"/>

            <LinearLayout
                android:id="@+id/attachmentFileLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:background="@drawable/message_received_file_background"
                android:visibility="gone">

                <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                    android:id="@+id/attachmentExtension"
                    android:layout_width="@dimen/dimen_48dp"
                    android:layout_height="@dimen/dimen_48dp"
                    android:layout_margin="@dimen/dimen_8dp"
                    android:background="@drawable/round_white_background"
                    android:textColor="@color/emerald"
                    android:textSize="@dimen/text_size_12sp"
                    android:textAllCaps="true"
                    app:customAssetFont="gotham_rounded_medium"
                    tools:text="pdf"/>

                <com.carecloud.carepaylibray.customcomponents.CarePayTextView
                    android:id="@+id/attachmentName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_8dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14"
                    android:textAllCaps="false"
                    android:gravity="start"
                    android:singleLine="true"
                    android:ellipsize="middle"
                    app:customAssetFont="proxima_nova_regular"
                    tools:text="FileName.pdf"/>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_60dp">

                <ImageView
                    android:id="@+id/attachmentImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:visibility="gone"
                    tools:src="@mipmap/ic_launcher"/>

                <ProgressBar
                    android:id="@+id/attachmentProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:indeterminateDrawable="@drawable/progress_indeterminate_custom"
                    android:indeterminate="true"
                    android:visibility="gone"/>

            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>