<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/demographicsDocsRootContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusable="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar_demographics_settings" />

    <TextView
            android:id="@+id/demographicsDocsHeaderSubtitle"
            style="@style/DemographicsDocsDocumentLabelStyle"
            android:layout_marginStart="@dimen/dimen_15dp"
            android:layout_marginTop="@dimen/dimen_36dp"
            android:textSize="@dimen/dimen_14dp"
            android:textColor="@color/textview_default_textcolor"
            android:text="IDENTITY" />

    <ScrollView
        android:id="@+id/demographicsDocsScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/top_bottom_scroll_padding"
        android:layout_weight="1"
        android:paddingTop="@dimen/top_bottom_scroll_padding">

        <LinearLayout
            style="@style/DemographicsDocsHeaderStyle"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/demogrDocTypeLabel"
                    style="@style/DemographicsDocsDocumentLabelStyle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/dimen_17dp"
                    android:textColor="@color/textview_default_textcolor"
                    android:text="@string/demogr_docs_document_type" />

                <TextView
                    android:id="@+id/demogrDocTypeClickable"
                    style="@style/DemographicsDocsClickableTextStyle"
                    android:textColor="@color/settings_toolbar_color"
                    android:text="@string/demographicsChooseLabel" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/demographicsDocsLicense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/demographicsDocsHealthInsurancetitle"
                style="@style/DemographicsDocsDocumentLabelStyle"
                android:layout_marginStart="0dp"
                android:layout_marginTop="@dimen/dimen_36dp"
                android:text="Health Insurance" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/demographicsDocumentsInsuranceSwitch"
                style="@style/DemographicsDocsLabelStyle"
                android:layout_width="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginTop="@dimen/demographics_docs_section_margin_top"
                android:checked="false"
                android:text="@string/demogr_insurance_switch_text"
                android:theme="@style/HaveHealthInsurance" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/demo_view_height"
                android:layout_marginBottom="@dimen/divider_margin_bottom"
                android:layout_marginTop="@dimen/divider_margin_top"
                android:background="@color/light_gray" />

            <LinearLayout
                android:id="@+id/demographicsDocsInsHoldersContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="vertical"
                android:visibility="gone" />

            <View
                android:id="@+id/demographicsDocsBottomView"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="10dp" />
        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/demographicsDocumentsMultipleInsClickable"
        style="@style/SigninSignupClickableTextView"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/demographics_docs_header_top_margin"
        android:layout_marginEnd="7dp"
        android:textColor="@color/settings_toolbar_color"
        android:layout_marginTop="7dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:text="@string/demogr_docs_add_card" />

    <Button
        android:id="@+id/buttonAddDemographicInfo"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/settings_button_selector"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="SAVE CHANGES"
        android:textColor="@color/white" />

</LinearLayout>