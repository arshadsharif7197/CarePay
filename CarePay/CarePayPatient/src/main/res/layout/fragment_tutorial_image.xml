<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    tools:background="#000000">

    <com.carecloud.carepaylibray.customcomponents.CarePayTextView
        android:id="@+id/tutorial_title_textview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:autoLink="web"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textSize="21sp"
        app:customAssetFont="gotham_rounded_medium" />

    <com.carecloud.carepaylibray.customcomponents.CarePayTextView
        android:id="@+id/tutorial_subtitle_textview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tutorial_title_textview"
        android:layout_marginBottom="16dp"
        android:autoLink="web"
        android:padding="8dp"
        android:textColor="@color/gray"
        android:textSize="13sp"
        app:customAssetFont="proxima_nova_regular" />

    <ImageView
        android:id="@+id/fragment_tutorial_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/tutorial_subtitle_textview"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        tools:src="@drawable/ic_navigate_next" />
</RelativeLayout>