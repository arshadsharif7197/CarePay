<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/demographicsReviewRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="beforeDescendants"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">


    <include layout="@layout/toolbar_demographics_settings" />

    <ProgressBar
        android:id="@+id/demographicReviewProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-8dp"
        android:indeterminate="true" />


    <ScrollView
        android:id="@+id/adddemoScrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/demographics_address_bottom_margin"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/adddemoLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/reviewdemogrPersonalInfoLabel"
                style="@style/reviewDemographicBlue."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginBottom="@dimen/dimen_25dp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/reviewdemogrDOBTextInput"
                    style="@style/SigninSignupTextInputStyle"
                    app:hintTextAppearance="@style/FloatingLabelStyle">

                    <EditText
                        android:id="@+id/revewidemogrDOBEdit"
                        style="@style/SigninSignupEditStyle"
                        android:digits="0123456789/"
                        android:imeOptions="actionNext"
                        android:inputType="date"
                        android:maxLength="10"
                        android:textColor="@color/colorPrimary"
                        android:nextFocusForward="@+id/revewidemoPhoneNumberEdit" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/dobformatlabel"
                    style="@style/SignupRequireHintStyle"
                    android:textColor="@color/cadet_gray" />
            </FrameLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/reviewdemogrPhoneNumberTextInput"
                style="@style/SigninSignupTextInputStyle"
                app:hintTextAppearance="@style/FloatingLabelStyle">

                <EditText
                    android:id="@+id/reviewgrdemoPhoneNumberEdit"
                    style="@style/SigninSignupEditStyle"
                    android:digits="0123456789-"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:maxLength="12"
                    android:textColor="@color/colorPrimary"
                    android:nextFocusForward="@+id/driverLicenseEditText" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/demographicsSectionLabel"
                style="@style/reviewDemographicBlue."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_36dp"
                android:layout_marginBottom="@dimen/dimen_36dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/consentform_relativeLayout_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/genderTextView"
                    style="@style/DemographicsDocsLabelStyle"
                    android:layout_width="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/chooseGenderTextView"
                    style="@style/DemographicsDocsClickableTextStyle"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content" />
            </LinearLayout>

            <View
                style="@style/Review_Screen_View_Style"
                android:layout_width="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/consentform_relativeLayout_margin"
                android:layout_marginTop="@dimen/consentform_realtivelayout_textpaddingtop"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/raceDataTextView"
                    style="@style/DemographicsDocsLabelStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".30"/>

                <TextView
                    android:id="@+id/raceListDataTextView"
                    style="@style/DemographicsDocsClickableTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorPrimary"
                    android:layout_weight=".70"/>
            </LinearLayout>

            <View
                style="@style/Review_Screen_View_Style"
                android:layout_width="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/consentform_relativeLayout_margin"
                android:layout_marginTop="@dimen/consentform_realtivelayout_textpaddingtop"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ethnicityDataTextView"
                    style="@style/DemographicsDocsLabelStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".35" />

                <TextView
                    android:id="@+id/ethnicityListDataTextView"
                    style="@style/DemographicsDocsClickableTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorPrimary"
                    android:layout_weight=".65" />

            </LinearLayout>

            <View
                style="@style/Review_Screen_View_Style"
                android:layout_width="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/consentform_relativeLayout_margin"
                android:layout_marginTop="@dimen/consentform_realtivelayout_textpaddingtop"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/languageDataTextView"
                    style="@style/DemographicsDocsLabelStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Prefered Language"
                    android:layout_weight=".60"/>

                <TextView
                    android:id="@+id/languageTextView"
                    style="@style/DemographicsDocsClickableTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:text="Prefered Language"
                    android:textColor="@color/colorPrimary"
                    android:layout_weight=".40"/>
            </LinearLayout>

            <View
                style="@style/Review_Screen_View_Style"
                android:layout_width="match_parent" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/reviewDriverLicenseLabel"
                style="@style/SigninSignupTextInputStyle"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dimen_5dp"
                app:hintTextAppearance="@style/FloatingLabelStyle">

                <EditText
                    android:id="@+id/driverLicenseEditText"
                    style="@style/SigninSignupEditStyle"
                    android:imeOptions="actionNext"
                    android:textColor="@color/colorPrimary"
                    android:nextFocusForward="@+id/addressEditTextId" />
            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/demographicsAddressSectionLabel"
                style="@style/reviewDemographicBlue."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_36dp"
                android:layout_marginBottom="@dimen/dimen_36dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/consentform_realtivelayout_textpaddingtop"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/address1TextInputLayout"
                    style="@style/SigninSignupTextInputStyle"
                    android:layout_weight="1"
                    app:hintTextAppearance="@style/FloatingLabelStyle">

                    <EditText
                        android:id="@+id/addressEditTextId"
                        style="@style/SigninSignupEditStyle"
                        android:digits="abcdefghijklmnopqurstuvwxyzABCDEFGHIZKLMNOPQURSTUVWXYZ0123456789 "
                        android:imeOptions="actionNext"
                        android:inputType="textPostalAddress"
                        android:maxLength="50"
                        android:textColor="@color/colorPrimary"
                        android:nextFocusForward="@+id/addressEditText2Id"
                        app:hintTextAppearance="@style/FloatingLabelStyle" />

                </android.support.design.widget.TextInputLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/address2TextInputLayout"
                        style="@style/SigninSignupTextInputStyle"
                        android:layout_weight="1"
                        app:hintTextAppearance="@style/FloatingLabelStyle">

                        <EditText
                            android:id="@+id/addressEditText2Id"
                            style="@style/SigninSignupEditStyle"
                            android:digits="abcdefghijklmnopqurstuvwxyzABCDEFGHIZKLMNOPQURSTUVWXYZ0123456789 "
                            android:imeOptions="actionNext"
                            android:inputType="textPostalAddress"
                            android:maxLength="50"
                            android:textColor="@color/colorPrimary"
                            android:nextFocusForward="@+id/zipCodeId" />
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:id="@+id/demogrAddressOptionalLabel"
                        android:text="Optional"
                        style="@style/SignupRequireHintStyle" />

                </FrameLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/zipCodeTextInputLayout"
                    style="@style/SigninSignupTextInputStyle"
                    android:layout_weight="1"
                    app:hintTextAppearance="@style/FloatingLabelStyle">

                    <EditText
                        android:id="@+id/zipCodeId"
                        style="@style/SigninSignupEditStyle"
                        android:digits="0123456789-"
                        android:imeOptions="actionNext"
                        android:maxLength="10"
                        android:textColor="@color/colorPrimary"
                        android:nextFocusForward="@+id/cityId" />

                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/cityTextInputLayout"
                        style="@style/SigninSignupTextInputStyle"
                        android:layout_weight="1"
                        app:hintTextAppearance="@style/FloatingLabelStyle">

                        <EditText
                            android:id="@+id/cityId"
                            style="@style/SigninSignupEditStyle"
                            android:textColor="@color/colorPrimary"
                            android:nextFocusRight="@+id/stateAutoCompleteTextView" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/stateTextInputLayout"
                        style="@style/SigninSignupTextInputStyle"
                        android:layout_weight="1"
                        app:hintTextAppearance="@style/FloatingLabelStyle">

                        <AutoCompleteTextView
                            android:id="@+id/stateAutoCompleteTextView"
                            style="@style/SigninSignupEditStyle"
                            android:digits="ABCDEFGHIJKLMNOPQURSTUVWXYZ"
                            android:imeOptions="actionDone"
                            android:inputType="textCapCharacters"
                            android:textColor="@color/colorPrimary"
                            android:maxLength="2" />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonAddDemographicInfo"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/settings_button_selector"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="SAVE CHANGES"
        android:textColor="@color/white" />
</LinearLayout>