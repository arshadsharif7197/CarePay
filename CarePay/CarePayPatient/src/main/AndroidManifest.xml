<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.carecloud.carepay.patient"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.SET_DEBUG_APP" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-permission
        android:name="android.permission.USE_CREDENTIALS"
        tools:node="remove" />

    <!-- Enables the Android Pay API -->
    <application
        android:name=".base.CarePayPatientApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppBaseTheme"
        tools:replace="android:icon"
        >
        <meta-data
            android:name="com.google.android.gms.wallet.api.enabled"
            android:value="true" />

        <activity
            android:name=".patientsplash.SplashActivity"
            android:theme="@style/Theme.AppCompat.Translucent"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.carecloud.carepay.restart" />
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".demographics.activities.DemographicsActivity"
            android:screenOrientation="sensorPortrait"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity
            android:name=".demographics.activities.NewReviewDemographicsActivity"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".demographics.activities.ReviewDemographicsActivity"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".selectlanguage.SelectLanguageActivity"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".consentforms.ConsentActivity"
            android:screenOrientation="sensorPortrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".intakeforms.activities.InTakeWebViewActivity"
            android:screenOrientation="sensorPortrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".signinsignuppatient.SigninSignupActivity"
            android:screenOrientation="sensorPortrait"
            android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity
            android:name=".payment.PaymentActivity"
            android:parentActivityName=".appointments.activities.AppointmentsActivity"
            android:screenOrientation="sensorPortrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.carecloud.carepay.patient.appointments.activities.AppointmentsActivity" />
        </activity>
        <activity
            android:name=".appointments.activities.AppointmentsActivity"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".appointments.activities.AddAppointmentActivity"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".payment.activities.ViewPaymentBalanceHistoryActivity"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".eligibility.activities.EligibilityActivity"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".payment.androidpay.ConfirmationActivity"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".demographics.activities.DemographicsSettingsActivity"
            android:label=""
            android:windowSoftInputMode="stateHidden"
            android:parentActivityName=".appointments.activities.AppointmentsActivity"
            android:screenOrientation="sensorPortrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.carecloud.carepay.patient.appointments.activities.AppointmentsActivity" /></activity>
        <activity
            android:name=".medication.activities.MedicationAllergyActivity"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".notifications.activities.NotificationActivity"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".purchases.activities.PurchaseActivity"
            android:screenOrientation="sensorPortrait"/>
    </application>

</manifest>