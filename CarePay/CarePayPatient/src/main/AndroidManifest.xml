<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.carecloud.carepay.patient">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.SET_DEBUG_APP"/>
    <uses-feature android:name="android.hardware.camera"/>

    <application
        android:name=".base.CarePayPatientApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppBaseTheme">
        <activity android:name=".patientsplash.SplashActivity"
            android:theme="@style/Theme.AppCompat.Translucent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.carecloud.carepay.patient.demographics.activities.DemographicsActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name="com.carecloud.carepay.patient.demographics.activities.DemographicReviewActivity" />
        <activity android:name="com.carecloud.carepay.patient.consentforms.SignatureActivity" />
        <activity android:name="com.carecloud.carepay.patient.selectlanguage.SelectLangaugeActivity" />
        <activity
            android:name="com.carecloud.carepay.patient.consentforms.ConsentActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.carecloud.carepay.patient.signinsignuppatient.SigninSignupActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.carecloud.carepay.patient.payment.PaymentActivity"
            android:parentActivityName="com.carecloud.carepay.patient.appointments.activities.AppointmentsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.carecloud.carepay.patient.appointments.activities.AppointmentsActivity" />
        </activity>
        <activity android:name="com.carecloud.carepay.patient.appointments.activities.AppointmentsActivity" />
        <activity android:name="com.carecloud.carepay.patient.appointments.activities.AddAppointmentActivity" />
    </application>

</manifest>